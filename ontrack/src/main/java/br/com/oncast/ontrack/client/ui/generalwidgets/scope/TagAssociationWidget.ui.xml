<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style src="../../style/default.css">
	
		.root {
			position: relative;
			display: inline-block !important;
			margin: 0px 2px;
		}
	
		.container {
			position: relative;
			display: inline-block !important;

			padding: 0px 5px;

			height: 18px;
			cursor: default;
		}
		
		.colorEdit {
			position: absolute;
			top: 2px;
			right: 2px;
			height: 13px;
			width: 13px;
			
			border-radius: 2px;
			cursor: pointer;
		}
		
		.upperBg, .lowerBg {
			background: red;
			position: absolute;
			left: 0px;
			right: 0px;
			height: 9px;
		}
		
		.upperBg {
			-webkit-transform: skewX(-25deg);
			top: 0px;
		}
		
		.lowerBg {
			-webkit-transform: skewX(25deg);
			bottom: 0px;
		}
		
		.description {
			position: relative;
			line-height: 18px;
			cursor: pointer;
		}
		
		.description:hover {
			text-decoration: underline;
		}
		
	</ui:style>
	
	<g:FocusPanel ui:field="root" styleName="{style.root}">
		<g:HTMLPanel ui:field="container" styleName="{style.container}">
			<div ui:field="upperBg" class="{style.upperBg}"/>
			<div ui:field="lowerBg" class="{style.lowerBg}"/>
			<g:Label ui:field="description" styleName="{style.description}"/>
		</g:HTMLPanel>
	</g:FocusPanel>
	
</ui:UiBinder> 