<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:layout="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">

	<ui:image field="searchIcon" src="search-project.png"/>
	<ui:style src="../style/default.css">
	
		.rootPanel {
			width: auto;
			margin: -1px;
		}
		.background {
			border: none;
			margin: 1px;
			box-shadow: none;
		}
		
		.container {
			background-color: white;
			
			user-select: none;
			-webkit-user-select: none;
			-khtml-user-select: none;
			-moz-user-select: none;
			-ms-user-select: none;
		}
		
		.separator {
			height: POPUP_PADDING;
			display: block;
		}
		
		.scroll {
			margin: 0px -16px;
		}
		
		@sprite .searchIcon {
			gwt-image: 'searchIcon';
			background-position: center left;
			margin: 2px 2px 0px 4px;
		}
		
		.filterBoxContainer {
			position: relative;
			width: 100%;
		}
		
		.filterArea {
			width: 100%;
			
			margin: 0px;
			padding: 0px;
			
			border: none;
			background: transparent;
			
			font-family: inherit;
			font-size: inherit;
			color: inherit;
		}
		
		.menu {
			border: TEXTINPUT_BORDER;
			border-bottom: none;
			text-shadow: none;
		}
		
		.helpLabel {
			position: absolute;
			cursor: default;
			
			bottom: 0px;
			right: 0px;
		    font-size: FONT_SIZE_SMALL;
		    color: COLOR_GRAY_LIGHT;
		    
		    display: inline;
		}
		
	</ui:style>

	<g:FocusPanel ui:field="focusPanel">
		<layout:ApplicationPopupBoxContainer addStyleNames="{style.rootPanel}" addBackgroundStyleNames="{style.background}" paddingEnabled="false">
			<g:HorizontalPanel styleName="{style.textBoxDecoration} {style.container}" verticalAlignment="middle">
				<g:cell width="1">
					<g:SimplePanel styleName="{style.searchIcon}"/>
				</g:cell>
				<g:cell width="100%">
				 	<g:HTMLPanel styleName="{style.filterBoxContainer}">
						<g:TextBox ui:field="filterArea" styleName="{style.filterArea}" />
						<g:Label ui:field="helpLabel" styleName="{style.helpLabel}">Hit TAB to complete</g:Label>
					</g:HTMLPanel>
				</g:cell>
			</g:HorizontalPanel>
			<g:SimplePanel styleName="{style.separator}"/>
			<g:ScrollPanel ui:field="scrollPanel" styleName="{style.scroll}">
				<misc:CommandMenu ui:field="menu" styleName="{style.menu}" />
			</g:ScrollPanel>
		</layout:ApplicationPopupBoxContainer>
	</g:FocusPanel>

</ui:UiBinder> 