<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">
	<ui:style src="../../../style/default.css">
		.container {
			overflow-y: auto;
			overflow-x: hidden;
			
			max-height: 282px;
		}
		.loadingIndicatorPanel {
            width: 100px;
            height: 100px;		
            margin: 0px auto;
            margin-top: 50px;
            padding-left: -1px;
		}
		
		.loadingIndicator {
            margin: 0px auto;
            padding: PADDING_LARGE;
            
            background: white;
            border: 2px solid #eaeaea;
            border-radius: 50%;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.container}">
		<g:SimplePanel ui:field="loadingPanel" styleName="{style.loadingIndicatorPanel}" >
        	<g:Image url="resources/image/misc/loading.gif" styleName="{style.loadingIndicator}" />
        </g:SimplePanel>
		<misc:ModelWidgetContainer ui:field="activeMembersList" />
		<misc:ModelWidgetContainer ui:field="onlineMembersList" />
		<misc:ModelWidgetContainer ui:field="membersList" />
	</g:HTMLPanel>
</ui:UiBinder> 