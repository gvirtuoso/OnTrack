<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:cp='urn:import:br.com.oncast.ontrack.client.ui.generalwidgets'>

	<ui:style>
		.projectSwitchingMenu {
			position: absolute;
			top: 33px;
			left: 0px;
			min-width: 200px;
			z-index: 2;
		}
		
		.loadingIndicatorPanel {
            width: 100px;
            height: 100px;		
            margin: 0px auto;
            margin-top: 50px;
            padding-left: -1px;
		}
		
		.loadingIndicator {
            margin: 0px auto;
            padding: 15px;
            
            background: white;
            border: 2px solid #eaeaea;
            border-radius: 50%;
		}
	</ui:style>

    <g:FlowPanel ui:field="rootPanel" styleName="{style.projectSwitchingMenu}">
        <g:SimplePanel ui:field="loadingPanel" styleName="{style.loadingIndicatorPanel}" >
        	<g:Image url="resources/image/misc/loading.gif" styleName="{style.loadingIndicator}" />
        </g:SimplePanel>
    	<cp:FiltrableCommandMenu ui:field="projectSwitchingMenu" />
    </g:FlowPanel>	

</ui:UiBinder>