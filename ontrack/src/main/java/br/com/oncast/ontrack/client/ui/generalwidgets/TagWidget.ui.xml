<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		
		.panel {
			position: relative;
			width: 100%;
			cursor: default;
		}
		
		.label {
			padding-right: 25px;
		}
		
		.color {
			position: absolute;
			top: -5px;
			right: 2px;
			border: 1px solid #AAA;
			cursor: pointer;
			border-radius: 2px;
			width: 21px;
			height: 19px;
			text-align: center;
			padding-top: 2px;	
			
			background-color: #C8F19C;
			color: #6D29C4;
		}

		.color:hover {
			box-shadow: 1px 1px 2px #BBB;
		}
		
	</ui:style>
	
	<g:HorizontalPanel styleName="{style.panel}" >
		<g:Label ui:field="label" styleName="{style.label}" />
		<g:Label ui:field="color" styleName="{style.color}" text="a" title="CLick to change tag colors" />
	</g:HorizontalPanel>
</ui:UiBinder> 