<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style type="br.com.oncast.ontrack.client.ui.components.annotations.widgets.ChecklistItemWidget.ChecklistWidgetStyle">
	
		.description {
			padding-left: 3px;
			cursor: default;
		}
		
		.remove {
			padding-right: 5px;
			padding-left: 2px;
			cursor: pointer;

			color: red;
			font-weight: bold;
			
			visibility: hidden;
		}
		
		.removeVisible {
			visibility: visible;
		}
		
	</ui:style>

	<g:FocusPanel ui:field="focusPanel">
		<g:HorizontalPanel width="100%">
			<g:CheckBox ui:field="checkbox" />
			<g:cell width="100%">
				<g:Label ui:field="description" styleName="{style.description}"/>
			</g:cell>
			<g:Label ui:field="remove" text="x" styleName="{style.remove}"/>
		</g:HorizontalPanel>
	</g:FocusPanel>
</ui:UiBinder> 