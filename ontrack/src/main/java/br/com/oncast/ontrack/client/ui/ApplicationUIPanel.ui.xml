<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.applicationPanel {
			width: 100%;
			height: 100%;
			margin: 0px auto;
			padding: 0px;

            background: #dbdce1 url("resources/image/background.jpg") no-repeat center;
            background-size: 100% 100%;
		}
	</ui:style>

	<g:SimplePanel styleName="{style.applicationPanel}" ui:field="panel" />
</ui:UiBinder> 