<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:image field="brushImg" src="../brush.png" />
	<ui:style src="../../style/default.css">
	
		.container {
			position: relative;
			
			padding: 1px 5px;
			margin-top: -3px;

			border-radius: 2px;
			border: 1px solid COLOR_GRAY;
			
			cursor: default;
			font-weight: bold;
		}
		
		@sprite .colorEdit {
			gwt-image: "brushImg";
			background-size: 17px;
			background-position: 1px -1px;
			background-color: #FAFAFA;

			position: absolute;
			top: -1px;
			right: -1px;
			height: 17px;
			width: 17px;
			
			border-radius: 2px;
			border: 1px solid COLOR_GRAY;
			
			cursor: pointer;
		}
		
	</ui:style>
	
	<g:FocusPanel ui:field="root">
		<g:HTMLPanel ui:field="container" styleName="{style.container}">
			<g:Label ui:field="description"/>
			<g:FocusPanel ui:field="colorEdit" styleName="{style.colorEdit}"/>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 