<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc= "urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">
	
	<ui:style src="../../style/default.css">
	
		.root {
			width: 100%;
		}
		.footer {
			border: RELEASE_WIDGET_BORDER;
			padding: 8px;
			
			background: COLOR_RELEASE_WIDGET_HEADER_BACKGROUND_OPENED;
			box-shadow: inset 0px 1px 0px 0px #e9e9e9, POPUP_SHADOW;
			
			color: COLOR_RELEASE_WIDGET_HEADER_TEXT_OPENED;
			font-family: FONT_DEFAULT;
			font-size: FONT_SIZE_LARGE;				
			text-shadow: RELEASE_WIDGET_HEADER_TEXT_SHADOW;
			filter: RELEASE_WIDGET_HEADER_TEXT_SHADOW_IE;
		}
		
		.container {
			padding: 8px;
			width: 100%;
			height: 100%;
			
			position: relative;
		}
		
		.shortcut {
			margin-right: 2px;
			
			word-spacing: -2px;
			font-size: FONT_SIZE_SMALL;
			font-weight: bold;
			white-space: nowrap;
		}
		.upperAdjust {
			margin-top: -1px;
		}
		
		.shortcutDescription {
			margin-right: 10px;
			font-size: FONT_SIZE_SMALL;
			
			white-space: nowrap;
		}
		.feedback {
			position: absolute;
			top: 3px;
			right: 3px;
			
			padding: 4px;
			
			width: auto;
			height: auto;
			
			color: COLOR_MENU_LINK;
			
			font-size: FONT_SIZE_SMALL;
			white-space: nowrap;
			
			cursor: pointer;
		}
		.feedback:HOVER {
			color: COLOR_MENU_LINK_HOVER;
		}
		
		.scrollArea {
			position: absolute;
			top: 0px;
			bottom: 0px;
			width: 30px;
		}
		.scrollLeft {
			left: 0px;
		}
		.scrollRight {
			right: 0px;
		}
		
		.scrollContainer {
			position: relative;
			margin-right: 109px;
			height: 17px;
		}
		
		.scroll {
			position: absolute;
			top: 0px;
			left: 0px;
			bottom: 0px;
			right: 0px;
			
			overflow: hidden;
			white-space: nowrap;
			cursor: default;
			-webkit-touch-callout: none;
			-webkit-user-select: none;
			-khtml-user-select: none;
			-moz-user-select: none;
			-ms-user-select: none;
			user-select: none;
		}
		
		@if user.agent ff gecko mozilla firefox Gecko Mozilla moz gecko1_8 {
			.scroll > table {
				margin-top: -4px;
			}
		}
		
	</ui:style>
	
	<g:FocusPanel styleName="{style.root}">
		<g:HTMLPanel styleName="{style.footer}">
			<g:HTMLPanel styleName="{style.scrollContainer}">
				<g:HTMLPanel ui:field="scroll" styleName="{style.scroll}">
					<g:HorizontalPanel verticalAlignment="middle" >
						<misc:ShortcutLabel text="ENTER" styleName="{style.shortcut}" />
						<g:Label text="Insert Bellow" styleName="{style.shortcutDescription}" />
						
						<misc:ShortcutLabel text="CONTROL ENTER" styleName="{style.shortcut}" />
						<g:Label text="Insert a Child" styleName="{style.shortcutDescription}" />
						
						<misc:ShortcutLabel text="@" styleName="{style.shortcut}" />
						<g:Label text="Schedule" styleName="{style.shortcutDescription}" />
						
						<misc:ShortcutLabel text="#" styleName="{style.shortcut}" />
						<g:Label text="Effort" styleName="{style.shortcutDescription}" />
						
						<misc:ShortcutLabel text="$" styleName="{style.shortcut}" />
						<g:Label text="Value" styleName="{style.shortcutDescription}" />
						
						<misc:ShortcutLabel text="%" styleName="{style.shortcut}" />
						<g:Label text="Progress" styleName="{style.shortcutDescription}" />
						
						<misc:ShortcutLabel text="CONTROL ARROWS" styleName="{style.shortcut}" />
						<g:Label text="Move" styleName="{style.shortcutDescription}" />
						
						<misc:ShortcutLabel text="CONTROL Z" styleName="{style.shortcut} {style.upperAdjust}" />
						<g:Label text="Undo" styleName="{style.shortcutDescription}" />
						
						<misc:ShortcutLabel text="CONTROL F" styleName="{style.shortcut} {style.upperAdjust}" />
						<g:Label text="Search" styleName="{style.shortcutDescription}" />
					</g:HorizontalPanel>
				</g:HTMLPanel>
				<g:FocusPanel ui:field="rightScrollArea" styleName="{style.scrollArea} {style.scrollRight}"/>
				<g:FocusPanel ui:field="leftScrollArea" styleName="{style.scrollArea} {style.scrollLeft}"/>
			</g:HTMLPanel>
			<g:Button text="Give us Feedback" ui:field="feedback" styleName="{style.menuboxButton} {style.feedback}"/>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 