<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:layout='urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout'
	xmlns:r='urn:import:br.com.oncast.ontrack.client.ui.components.report'
	xmlns:c="urn:import:br.com.oncast.ontrack.client.ui.components.releasepanel.widgets.chart"
	xmlns:d="urn:import:br.com.oncast.ontrack.client.ui.components.annotations.widgets"
	xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.places.timesheet.widgets"
	xmlns:gw='urn:import:br.com.oncast.ontrack.client.ui.generalwidgets'
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:image field="ontracklogo" src="../../components/appmenu/logo.png" />
	<ui:style src="../../style/default.css">	

		@def MIN_WIDTH 900px;
		.root {
			background: white;
			padding: 18px;
		}
		
		.header {
			min-width: MIN_WIDTH;
			height: 108px;
			position: relative;
			margin-bottom: 35px;
			border-bottom: 1px solid #444;
		}
		
		@sprite .logo {
			gwt-image: 'ontracklogo';
			
			position: absolute;
			right:0px;
			
			margin: 0px 4px;
			margin-bottom: 14px;
		}
		
		.ancestors {
			position: absolute;
			bottom: 36px;
			left: 0px;
			right: 126px;
			line-height: 18px;
			color: #888;
			font-size: 13px;
		}
	
		.title {
			position: absolute;
			bottom: 0px;
			left: 0;
			right: 126px;
			line-height: 36px;
			font-size: 27px;
		}
		
		.timestamp {
			position: absolute;
			right: 9px;
			bottom: 0px;
			line-height: 18px;
			font-style: italic;
		}
		
		.overviewContainer {
			min-width: MIN_WIDTH;
			position: relative;
			height: 459px;
		}
		
		.burnUp {
			position: absolute;
			right: 270px;
			left: 0px;

			border: BORDER_DEFAULT;
			padding: 9px;
			padding-bottom: 0px;
		}
		
		.details {
			position: absolute;
			width: 252px;
			right: 0px;
		}
		
		.sectionContainer {
			position: relative;
			min-width: MIN_WIDTH;
			padding-bottom: 18px;
		}
		
		.sectionTitle {
			line-height: 18px;
			border-bottom: 1px solid #444;
			margin: 9px 0;
			width: 30%;
			font-weight: bold;
			text-transform: uppercase;
			letter-spacing: 3px;
		}
		
		.scopesTable {
			border: 1px solid #ccc;
		}
		
		.impedimentTable {
			border: 1px solid #ccc;
		}
		
		.timesheetTable {
			margin: 0px auto;
			padding: 9px 36px;
			border: 1px solid #ccc;
		}
	</ui:style>
	
	<g:HTMLPanel ui:field="rootPanel" styleName="{style.root} reportPanel-root">
		<div class="{style.header}">
			<g:SimplePanel styleName="{style.logo}"/>
			<g:InlineHTML ui:field="ancestors" styleName="{style.ancestors}"/>
			<g:Label ui:field="releaseTitle" styleName="{style.title}"/>
			<g:Label ui:field="timestamp" styleName="{style.timestamp}"/>
		</div>
		<div ui:field="descriptionContainer" class="{style.sectionContainer}">
			<g:Label styleName="{style.sectionTitle}"><ui:msg description="Description">Description</ui:msg></g:Label>
			<g:InlineHTML ui:field="description" />
		</div>
		<div class="{style.overviewContainer}">
			<g:Label styleName="{style.sectionTitle}"><ui:msg description="Overview">Overview</ui:msg></g:Label>
			<g:SimplePanel ui:field="burnUpPanel" styleName="{style.burnUp}"/>
			<d:ReleaseDetailWidget ui:field="details"  styleName="{style.details}"/>
		</div>
		<div class="{style.sectionContainer}">
			<g:Label styleName="{style.sectionTitle}"><ui:msg description="Stories">Stories</ui:msg></g:Label>
		    <r:ScopeReportTable ui:field="scopeTable" styleName="{style.scopesTable}" />
		</div>
		<div class="{style.sectionContainer}">
			<g:Label styleName="{style.sectionTitle}"><ui:msg description="Impediments">Impediments</ui:msg></g:Label>
		    <r:ImpedimentReportTable ui:field="impedimentTable" styleName="{style.impedimentTable}" />
		</div>
		<div ui:field="timesheetContainer" class="{style.sectionContainer}">
			<g:Label styleName="{style.sectionTitle}"><ui:msg description="Time spent">Time spent</ui:msg></g:Label>
			<t:TimesheetWidget ui:field="timesheet" styleName="{style.timesheetTable}" />
		</div>
    </g:HTMLPanel>
</ui:UiBinder> 