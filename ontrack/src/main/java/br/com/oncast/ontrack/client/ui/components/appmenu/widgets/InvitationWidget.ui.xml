<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:layout="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">

<ui:style src="../../../style/default.css">
	
	    .title {
	    	font-family: FONT_DEFAULT;
	    	font-weight: 600;
	    }
		
        .errorLabel {
            width: 100%;
            margin-top: 10px;
            margin-bottom: 0px;

            color: #cc3c29;
            font-family: arial, helvetica, sans-serif;
            font-size: 13px;
            font-style: normal;
            font-variant: normal;
            font-weight: bold;
            height: 13px;
            line-height: 13px;
        }
 		.helpLabel {
			float: right;
		}
                
	</ui:style>

	<layout:ApplicationPopupBoxContainer ui:field="rootPanel">
		<g:Label text="Invitee:" styleName="{style.title}" />
		<g:TextBox ui:field="invitationTextBox" styleName="{style.textBoxDecoration}"/>
		<g:Label text="Hit ENTER to invite" styleName="{style.helpLabel}"/>
	</layout:ApplicationPopupBoxContainer>

</ui:UiBinder>