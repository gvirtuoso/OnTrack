<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:layout="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">

<ui:style src="../../../style/default.css">
	
		.rootPanel {
			width: WIDTH_DEFAULT_POPUP;
		}
		
	    .title {
	    	font-family: FONT_DEFAULT;
	    }
		
 		.helpLabel {
			width: 100%;
			text-align: right;
		}
		
		.countdownLabel {
 			margin-bottom: -5px;
			width: 100%;
			text-align: center;
		}
                
	</ui:style>

	<layout:ApplicationPopupBoxContainer ui:field="rootPanel" styleName="{style.rootPanel}">
		<g:Label text="Invitee:" styleName="{style.title}" />
		<misc:DefaultTextedTextBox ui:field="invitationTextBox" defaultText="domain@email.com"/>
		<g:Label text="Hit ENTER to invite" styleName="{style.helpLabel}"/>
		<misc:Separator />
		<g:Label ui:field="countdownLabel" styleName="{style.countdownLabel}" />
	</layout:ApplicationPopupBoxContainer>

</ui:UiBinder>