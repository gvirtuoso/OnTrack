<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:s="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.scope">
	
	<ui:image field="notStarted" src="../../scope/not_started.png"/>
	<ui:image field="underwork" src="../../scope/underwork.png"/>
	<ui:image field="done" src="../../scope/done.png"/>
	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.appmenu.widgets.AssignedScopeWidget.AssignedScopeWidgetStyle">
	
		.root {
			padding: 4px;
			border-bottom: 1px solid;
			cursor: pointer;
		}
		
		.root:hover {
			background: COLOR_HOVER_SECONDARY !important;
		}
		
		.container {
			position: relative;
		}

		.percentualBar {
			position: absolute;
			bottom: 0px;
			left: 0px;
			right: 0px;
			top: 0px;
		}
		
		.internalPanel {
	        position: relative;
	        height: 100%;
	        width: 100%;
	    }
	    
		.story {
			font-weight: bold;
		}
		
		.descriptionContainer {
			color: COLOR_TEXT_SECONDARY;
			position: relative;
			padding: 10px 5px;
		}
		
		.tags {
			position: absolute;
			right: 7px;
			bottom: -8px;
		}
		
		.effortLabel {
			font-size: 11px;
			padding-right: 6px;
			font-weight: bolder;
			color: #B3B3B3;
			text-align: center;
		}
		
		.progressIconDone, .progressIconUnderwork, .progressIconNotStarted, .progressIconHasOpenImpediments {
			position: relative;
		}
		
		@sprite .progressIconDone {
        	gwt-image: 'done';
		}
		
		@sprite .progressIconUnderwork {
	        gwt-image: 'underwork';
		}
		
		@sprite .progressIconNotStarted {
	        gwt-image: 'notStarted';
		}
		
		.progressIconHasOpenImpediments {
			color: COLOR_ERROR_PRIMARY;
		}
	
	</ui:style>
	
	<g:FocusPanel ui:field="panel" styleName="{style.root}">
		<g:HTMLPanel styleName="{style.container}">
			<w:PercentualBar ui:field="percentualBar" styleName="{style.percentualBar}" />
			<g:HorizontalPanel styleName="{style.internalPanel}" verticalAlignment="middle">
				<g:cell width="100%">
					<g:HTMLPanel styleName="{style.descriptionContainer}">
		  				<span ui:field="humanIdLabel" class="{style.humanId}"/>
						<span ui:field="descriptionLabel"/>
						<s:ScopeAssociatedTagsWidget ui:field="tags" styleName="{style.tags}"/>
		  			</g:HTMLPanel>
				</g:cell>
				<g:Label ui:field="effortLabel" styleName="{style.effortLabel}"/>
				<g:FocusPanel ui:field="progressIcon" styleName="{style.progressIconNotStarted}"/>
				
			</g:HorizontalPanel>
		</g:HTMLPanel>
	</g:FocusPanel>
	
</ui:UiBinder> 