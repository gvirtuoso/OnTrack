<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">

	<ui:image field="leftBgImage" src="tag-release.png"></ui:image>
	<ui:style src="../style/default.css">
	
		.tag {
			width: 100%;
			height: 13px;
			
			border-collapse: collapse;
			vertical-align: top;
			
			font-size: 11px;
			color: #b5955c;
		}
		
		.tag:hover {
			cursor: pointer;
		}
		
		.container {
			width: 100%;
			height: 13px;
			position: relative;
		}

        .tagLabel {
			position: absolute;
			top: 0px;
			right: 0px;
			bottom: 0px;
			left: 0px;
	
            padding-left: 3px;
			background-color: #005B89;
			text-align: justify;
			color: COLOR_TEXT_TERTIARY;
        }
        
        @sprite .leftBg {
			gwt-image: 'leftBgImage';
			background-size: 6px 14px;
			height: 13px;
        }

	</ui:style>
	
	<g:FocusPanel ui:field="container">
		<g:HorizontalPanel styleName="{style.tag}">
			<g:cell width="1">
				<g:SimplePanel styleName="{style.leftBg}"/>
			</g:cell>
			<g:cell width="100%">
				<g:SimplePanel styleName="{style.container}">
					<t:FastLabel styleName="{style.tagLabel} v-ellip" ui:field="tagLabel" />
				</g:SimplePanel>
			</g:cell>
		</g:HorizontalPanel>
	</g:FocusPanel>
</ui:UiBinder> 