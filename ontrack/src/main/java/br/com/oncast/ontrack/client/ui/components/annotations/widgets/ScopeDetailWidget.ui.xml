<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">

	<ui:style src="../../../style/default.css">
	
		.title {
			text-transform: uppercase;
			width: 100%;
			text-align: center;
		}
		
		.detail {
			margin-top: 3px;
		}
		
	</ui:style>

	<g:HTMLPanel>
		<g:Label styleName="{style.title}">
			<ui:msg description="details label">Details</ui:msg>
		</g:Label>

		<misc:LabeledText styleName="{style.detail}" ui:field="parent" label="Part of:">
			<ui:attribute name="label" description="part of detail label" />
		</misc:LabeledText>
		<misc:LabeledText styleName="{style.detail}" ui:field="effort" label="Effort:">
			<ui:attribute name="label" description="effort detail label" />
		</misc:LabeledText>
		<misc:LabeledText styleName="{style.detail}" ui:field="value" label="Value:">
			<ui:attribute name="label" description="value detail label" />
		</misc:LabeledText>
		<misc:LabeledText styleName="{style.detail}" ui:field="progress" label="Progress:">
			<ui:attribute name="label" description="progress detail label" />
		</misc:LabeledText>
		<misc:LabeledText styleName="{style.detail}" ui:field="release" label="Release:">
			<ui:attribute name="label" description="release detail label" />
		</misc:LabeledText>
	</g:HTMLPanel>
	
</ui:UiBinder> 