<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">
	<ui:style src="../../../style/default.css">
	
		.title {
			text-transform: uppercase;
			width: 100%;
			text-align: center;
		}
		
		.detail {
			margin-top: 3px;
		}
		
	</ui:style>

	<g:HTMLPanel>
		<g:Label styleName="{style.title}" text="Details" />

		<misc:LabeledText styleName="{style.detail}" ui:field="parent" label="Parent:" />
		<misc:LabeledText styleName="{style.detail}" ui:field="effort" label="Effort:" />
		<misc:LabeledText styleName="{style.detail}" ui:field="value" label="Value:" />
		<misc:LabeledText styleName="{style.detail}" ui:field="progress" label="Progress:" />
		<misc:LabeledText styleName="{style.detail}" ui:field="release" label="Release:" />
	</g:HTMLPanel>
	
</ui:UiBinder> 