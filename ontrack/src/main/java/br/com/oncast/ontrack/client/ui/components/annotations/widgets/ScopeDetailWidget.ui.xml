<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gs="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.scope"
	xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:u="urn:import:br.com.oncast.ontrack.client.ui.components.user"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">

	<ui:style src="../../../style/default.css">
	
		.title {
			width: 100%;
			text-transform: uppercase;
			text-align: center;
			color: COLOR_GRAY_DARK;
			cursor: default;
			border-bottom: 1px solid #606060;
		}
		
		.details {
			margin-top: 5px;
			width: 100%;
		}
		
		.detailLabel {
			text-align: right;
			color: COLOR_BLUE_LIGHT;
			cursor: default;
		}
		
		.detailValue {
			cursor: default;
		}
		
		.detailValueCell {
			width: 100%;
		}
		
		.tags {
			margin-top: 10px;
			display: inline-block;
		}

		.tags > div > div > div {
			margin: 5px;
		}
		
	</ui:style>
	
	<g:HTMLPanel>
		<g:Label styleName="{style.title}">
			<ui:msg description="details label">Details</ui:msg>
		</g:Label>
		
		<g:Grid styleName="{style.details}">
			<g:row>
				<g:customCell styleName="{style.detailValueCell}" horizontalAlignment="left">
					<gs:ScopeAssociatedMembersWidget ui:field="associatedUsers" />
				</g:customCell>
			</g:row>
			
			<g:row>
				<g:customCell horizontalAlignment="right">
					<g:Label styleName="{style.detailLabel}">
						<ui:msg description="human id label">Id:</ui:msg>
					</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.detailValueCell}" horizontalAlignment="left">
					<g:Label ui:field="humanId" styleName="{style.detailValue}" />
				</g:customCell>
			</g:row>
			
			<g:row>
				<g:customCell horizontalAlignment="right">
					<g:Label styleName="{style.detailLabel}">
						<ui:msg description="scope parent label">Part of:</ui:msg>
					</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.detailValueCell}" horizontalAlignment="left">
					<g:Label ui:field="parent" styleName="{style.detailValue}" />
				</g:customCell>
			</g:row>
			
			<g:row>
				<g:customCell horizontalAlignment="right">
					<g:Label styleName="{style.detailLabel}">
						<ui:msg description="scope effort label">Effort:</ui:msg>
					</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.detailValueCell}" horizontalAlignment="left">
					<g:Label ui:field="effort" styleName="{style.detailValue}" />
				</g:customCell>
			</g:row>
			
			<g:row>
				<g:customCell horizontalAlignment="right">
					<g:Label styleName="{style.detailLabel}">
						<ui:msg description="scope value label">Value:</ui:msg>
					</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.detailValueCell}" horizontalAlignment="left">
					<g:Label ui:field="value" styleName="{style.detailValue}" />
				</g:customCell>
			</g:row>
			
			<g:row>
				<g:customCell horizontalAlignment="right">
					<g:Label styleName="{style.detailLabel}">
						<ui:msg description="scope progress label">Progress:</ui:msg>
					</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.detailValueCell}" horizontalAlignment="left">
					<g:Label ui:field="progress" styleName="{style.detailValue}" />
				</g:customCell>
			</g:row>
			
			<g:row>
				<g:customCell horizontalAlignment="right">
					<g:Label styleName="{style.detailLabel}">
						<ui:msg description="scope release label">Release:</ui:msg>
					</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.detailValueCell}" horizontalAlignment="left">
					<g:Label ui:field="release" styleName="{style.detailValue}" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell horizontalAlignment="right">
					<g:Label styleName="{style.detailLabel}">
						<ui:msg description="scope owner label">Owner:</ui:msg>
					</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.detailValueCell}"  horizontalAlignment="left">
					<u:UserWidget ui:field="ownerWidget" styleName="{style.detailValue}" />
				</g:customCell>
			</g:row>
		 </g:Grid>
		 <g:HTMLPanel styleName="{style.tags}">
			<t:ModelWidgetContainer ui:field="tags" />
		 </g:HTMLPanel>
	</g:HTMLPanel>
	
</ui:UiBinder> 