<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:image field="uploadImg" src="upload.png"></ui:image>
	<ui:image field="removeImg" src="remove.png"></ui:image>
	
	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.annotations.widgets.UploadWidget.UploadWidgetStyle">
	
		@sprite .uploadImg {
			gwt-image: 'uploadImg';
		}
		
		@sprite .removeImg {
			gwt-image: 'removeImg';
			opacity: 0.5;
		}
		
		.uploadIcon {
			cursor: pointer;
			display: inline-block;
			
			margin: 1px;
			
			border-radius: 3px;
			padding: 2px;
			background-position: center;
		}
		
		.uploadIcon:HOVER {
			margin: 0px;
			border: 1px solid #AEAEAE;
			box-shadow: inset 1px 1px 1px white;
		}
		
		.fileNameLabel {
			margin-right: 10px;
			white-space: nowrap;
		}
		
	</ui:style>

	<g:HorizontalPanel>
		<g:cell verticalAlignment="middle">
			<g:Label ui:field="fileNameLabel" styleName="{style.fileNameLabel}"/>
		</g:cell>
		<g:FocusPanel ui:field="uploadIcon" styleName="{style.uploadIcon} {style.uploadImg}"/>
		<g:SimplePanel ui:field="formPanel" visible="false"/>
	</g:HorizontalPanel>
</ui:UiBinder> 