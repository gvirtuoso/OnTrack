<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:image field="uploadImg" src="upload.png"></ui:image>
	<ui:image field="removeImg" src="remove.png"></ui:image>
	
	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.annotations.widgets.UploadWidget.UploadWidgetStyle">
	
		.uploadIcon {
			cursor: pointer;
			display: inline-block;
		}
		
		@sprite .uploadImg {
			gwt-image: 'uploadImg';
		}
		
		@sprite .removeImg {
			gwt-image: 'removeImg';
		}
		
		.fileNameLabel {
			margin-top: 4px;
			margin-right: 10px;
		}
		
	</ui:style>

	<g:FormPanel ui:field="form">
		<g:HorizontalPanel>
			<g:TextBox ui:field="fileName" visible="false"/>
			<g:TextBox ui:field="projectId" visible="false"/>
			<g:FileUpload ui:field="fileUpload" visible="false"/>
			
			<g:Label ui:field="fileNameLabel" styleName="{style.fileNameLabel}"/>
			<g:FocusPanel ui:field="uploadIcon" styleName="{style.uploadIcon} {style.uploadImg}"/>
		</g:HorizontalPanel>
	</g:FormPanel>
</ui:UiBinder> 