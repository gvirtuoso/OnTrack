<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gw='urn:import:br.com.oncast.ontrack.client.ui.generalwidgets'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">
	
	<ui:image field="submitIcon" src="ok-black.png" />
	<ui:style src="../style/default.css">
		
		.root {
			padding: 5px;
		}
		
		.subjectTitle {
			text-transform: uppercase;
			padding: 8px;
			border: 1px solid #C2C2C2;
			background: lightGrey;
			-webkit-box-shadow: inset 0 1px 0 0 #E9E9E9, 0 2px 6px #E1E1E1;
			-moz-box-shadow: inset 0 1px 0 0 #e9e9e9, 0 2px 6px #e1e1e1;
			box-shadow: inset 0 1px 0 0 #E9E9E9, 0 2px 6px #E1E1E1;
			color: #777;
			font-family: "ProximaNovaRegular";
			font-size: 12pt;
			text-shadow: 1px 1px 0 #EDEDED;
			margin-bottom: 5px;
		}
		
		.buttonContainer {
			position: absolute;
			right: 10px;
			bottom: 10px;
		}
		
		@sprite .submit {
			gwt-image: 'submitIcon';
			
			background-size: 20px;
			background-position: 6px center;
			
			width: 120px;
			height: 30px;
			
			background-color: #44AB7F;

			padding-left: 16px;
			font-size: FONT_SIZE_MEDIUM;
			letter-spacing: 1px;
		}
		
	</ui:style>
	
	<g:SimplePanel>
		<g:HTMLPanel styleName="{style.root}">
			<g:Label ui:field="label" styleName="{style.subjectTitle}" />
			<gw:PaddedTextBox ui:field="taskDescription"/>
			<g:HTMLPanel styleName="{style.buttonContainer}">
				<g:Button ui:field="submit" styleName="{style.submit} {style.hoverButton}"><ui:msg description="Add task button">Add</ui:msg></g:Button>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:SimplePanel>
		
</ui:UiBinder> 