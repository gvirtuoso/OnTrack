<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:image field="progressBackground" src="../../../components/scopetree/widgets/searchbar/pattern_background.png"/>
	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.organization.widgets.ScopeSummaryWidget.ScopeSummaryWidgetStyle">
	
		.header {
			position: relative;
			padding: PADDING_SMALL;
			border: 1px solid COLOR_GRAY;
			background: COLOR_SEMI_WHITE;
			margin-bottom: -1px;
		}
		
		.headerContainer {
			width: 100%;
			height: 100%;
		}
		
		@sprite .progressBar {
			gwt-image: 'progressBackground';
			background-repeat: repeat;
			background-color: COLOR_BLUE_LIGHT;
			width: auto;
			height: auto;
			
			position: absolute;
			top: 0px;
			left: 0px;
			bottom: 0px;
			
			opacity: 0.6;
		}
		
		.headerSelected {
			background: COLOR_YELLOW;
		}
		
		.headerSelected .progressBar {
			opacity: 0.5;
		}
		
		.headerDone {
			opacity: 0.8;
		}
		
		.titleLabel {
			position: relative;
			width: 100%;
			cursor: default;
		}
		
		.progressLabel {
			position: relative;
			white-space: nowrap;
			background: COLOR_GREEN;
			border-radius: 2px;
			padding: 1px 2px;
			vertical-align: middle;
			color: white;
		}
		
	</ui:style>
	
	<g:FocusPanel ui:field="header" styleName="{style.header}">
		<g:HTMLPanel styleName="{style.headerContainer}">
			<g:SimplePanel ui:field="progressBar" styleName="{style.progressBar}"/>
			<g:HorizontalPanel width="100%">
				<g:cell width="100%">
					<g:Label ui:field="title" styleName="{style.titleLabel}"/>
				</g:cell>
				<g:cell verticalAlignment="middle">
					<g:Label ui:field="progress" styleName="{style.progressLabel}"/>
				</g:cell>
			</g:HorizontalPanel>
		</g:HTMLPanel>
	</g:FocusPanel>
	
</ui:UiBinder> 