<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
		.rootPanel {
			margin: 0px 2px 0px 2px;
			overflow: hidden;
		}
		
		.subcontainerPanel {
			margin: 0px auto;
			margin-top: -60px;
			margin-bottom: -2px;
		}
	
		.column-container {
			width: 98%;
			margin: 0px auto;
			margin-top: -2px;
			margin-bottom: -2px;
			background-color: #c7c8ca;
		}
		
		.column {
			margin: 0px auto;
			padding: 3px;

			background: #6d6e71;
			color: #c7c8ca;
			text-align: center;
		}
				
		.value {
			font-size: 30px;
			font-weight: bold;
		}
	
		.description {
			font-size: 10px;
		}

	</ui:style>
	
	<g:SimplePanel ui:field="container" styleName="{style.rootPanel}">
		<g:HTMLPanel ui:field="subcontainer" styleName="{style.subcontainerPanel}">
			<table class="{style.column-container}">
				<tr>
					<td class="{style.column}">
						<div class="{style.value}">19</div>
						<div class="{style.description}">Value</div>					
					</td>
					<td class="{style.column}">
						<div class="{style.value}">21</div>
						<div class="{style.description}">Effort</div>					
					</td>
					<td class="{style.column}">
						<div class="{style.value}">-----</div>
						<div class="{style.description}">Speed</div>					
					</td>
					<td class="{style.column}">
						<div class="{style.value}">2</div>
						<div class="{style.description}">Weeks</div>					
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
	</g:SimplePanel>
</ui:UiBinder> 