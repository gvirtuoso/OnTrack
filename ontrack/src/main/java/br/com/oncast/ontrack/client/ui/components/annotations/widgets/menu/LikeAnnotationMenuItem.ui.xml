<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style type="br.com.oncast.ontrack.client.ui.components.annotations.widgets.menu.LikeAnnotationMenuItem.LikeWidgetStyle">
	
		.icon {
			opacity: 0.7;
			font-size: 14px;
			cursor: pointer;
		}
		
		.iconActive, .icon:HOVER {
			opacity: 1;
		}
		
		.label {
			margin-right: 5px;
			font-weight: bold;
			cursor: default;
			font-size: 11px;
		}
		
		.item {
			display: inline-block;
		}
		
	</ui:style>
	
	<g:HTMLPanel styleName="{style.item}">
		<g:FocusPanel ui:field="icon" styleName="{style.item} {style.icon} icon-thumbs-up"/>
		<g:Label ui:field="label" styleName="{style.item} {style.label}"/>
	</g:HTMLPanel>
</ui:UiBinder> 