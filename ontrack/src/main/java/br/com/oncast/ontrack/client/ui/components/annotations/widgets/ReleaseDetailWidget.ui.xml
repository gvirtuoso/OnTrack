<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">

	<ui:style src="../../../style/default.css">
	
		.title {
			width: 100%;
			text-transform: uppercase;
			text-align: center;
			color: COLOR_GRAY_DARK;
			cursor: default;
			border-bottom: 1px solid #606060;
		}
		
		.details {
			margin-top: 5px;
			width: 100%;
		}
		
		.detailLabel {
			text-align: right;
			color: COLOR_BLUE_DARK;
			cursor: default;
		}
		
		.detailValue {
			cursor: default;
		}
		
		.detailValueCell {
			width: 100%;
		}
		
	</ui:style>
	
	<g:HTMLPanel>
		<g:Label styleName="{style.title}">
			<ui:msg description="details label">Details</ui:msg>
		</g:Label>
		
		<g:Grid styleName="{style.details}">
			<g:row>
				<g:customCell horizontalAlignment="right">
					<g:Label styleName="{style.detailLabel}">
						<ui:msg description="release parent label">Part of:</ui:msg>
					</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.detailValueCell}" horizontalAlignment="left">
					<g:Label ui:field="parent" styleName="{style.detailValue}" />
				</g:customCell>
			</g:row>
			
			<g:row>
				<g:customCell horizontalAlignment="right">
					<g:Label styleName="{style.detailLabel}">
						<ui:msg description="release effort label">Effort:</ui:msg>
					</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.detailValueCell}" horizontalAlignment="left">
					<g:Label ui:field="effort" styleName="{style.detailValue}" />
				</g:customCell>
			</g:row>
			
			<g:row>
				<g:customCell horizontalAlignment="right">
					<g:Label styleName="{style.detailLabel}">
						<ui:msg description="release value label">Value:</ui:msg>
					</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.detailValueCell}" horizontalAlignment="left">
					<g:Label ui:field="value" styleName="{style.detailValue}" />
				</g:customCell>
			</g:row>
			
			<g:row>
				<g:customCell horizontalAlignment="right">
					<g:Label styleName="{style.detailLabel}">
						<ui:msg description="release planned velocity label">Planned velocity:</ui:msg>
					</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.detailValueCell}" horizontalAlignment="left">
					<g:Label ui:field="plannedVelocity" styleName="{style.detailValue}" />
				</g:customCell>
			</g:row>
			
			<g:row>
				<g:customCell horizontalAlignment="right">
					<g:Label styleName="{style.detailLabel}">
						<ui:msg description="release actual velocity label">Actual velocity:</ui:msg>
					</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.detailValueCell}" horizontalAlignment="left">
					<g:Label ui:field="actualVelocity" styleName="{style.detailValue}" />
				</g:customCell>
			</g:row>
			
			<g:row>
				<g:customCell horizontalAlignment="right">
					<g:Label styleName="{style.detailLabel}">
						<ui:msg description="release period label">Period:</ui:msg>
					</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.detailValueCell}" horizontalAlignment="left">
					<g:Label ui:field="period" styleName="{style.detailValue}" />
				</g:customCell>
			</g:row>
			
			<g:row>
				<g:customCell horizontalAlignment="right">
					<g:Label styleName="{style.detailLabel}">
						<ui:msg description="release duration label">Duration:</ui:msg>
					</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.detailValueCell}" horizontalAlignment="left">
					<g:Label ui:field="duration" styleName="{style.detailValue}" />
				</g:customCell>
			</g:row>
			
			<g:row>
				<g:customCell horizontalAlignment="right">
					<g:Label styleName="{style.detailLabel}">
						<ui:msg description="release average cycle time">Cycle time:</ui:msg>
					</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.detailValueCell}" horizontalAlignment="left">
					<g:Label ui:field="cycletime" styleName="{style.detailValue}" />
				</g:customCell>
			</g:row>
			
			<g:row>
				<g:customCell horizontalAlignment="right">
					<g:Label styleName="{style.detailLabel}">
						<ui:msg description="release average lead time label">Lead time:</ui:msg>
					</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.detailValueCell}" horizontalAlignment="left">
					<g:Label ui:field="leadtime" styleName="{style.detailValue}" />
				</g:customCell>
			</g:row>
		 </g:Grid>
	</g:HTMLPanel>
</ui:UiBinder> 