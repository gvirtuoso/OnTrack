<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">

	<ui:style src="../../../style/default.css">
	
		.title {
			text-transform: uppercase;
		}
		
		.detail {
			margin-top: 3px;
		}
		
	</ui:style>
	
	<g:HTMLPanel>
		<g:Label styleName="{style.title}">
			<ui:msg description="details label">Details</ui:msg>
		</g:Label>
		
		<misc:LabeledText styleName="{style.detail}" ui:field="parent" label="Part of:">
			<ui:attribute name="label" description="part of label" />
		</misc:LabeledText>
		<misc:LabeledText styleName="{style.detail}" ui:field="effort" label="Total Effort:">
			<ui:attribute name="label" description="total effort label" />
		</misc:LabeledText>
		<misc:LabeledText styleName="{style.detail}" ui:field="accomplishedEffort" label="Accomplished Effort:">
			<ui:attribute name="label" description="accomplished effort label" />
		</misc:LabeledText>
		<misc:LabeledText styleName="{style.detail}" ui:field="value" label="Total Value:">
			<ui:attribute name="label" description="total value label" />
		</misc:LabeledText>
	</g:HTMLPanel>
</ui:UiBinder> 