<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:layout="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout">

	<ui:style src="../../../style/default.css">
	
        .errorLabel {
            width: 100%;
            margin-top: 10px;
            margin-bottom: 0px;

            color: #cc3c29;
            font-weight: bold;
        }
        
        .separator {
            margin-top: 15px;
        }
                
	</ui:style>

	<layout:ApplicationPopupBoxContainer ui:field="clickableRootPanel">
		<g:Label text="Old password:"/>
		<g:PasswordTextBox ui:field="oldPasswordArea" styleName="{style.textBoxDecoration}"/>

		<g:SimplePanel styleName="{style.separator}"/>
		<g:Label text="New password:"/>
		<g:PasswordTextBox ui:field="newPasswordArea" styleName="{style.textBoxDecoration}"/>

		<g:SimplePanel styleName="{style.separator}"/>
		<g:Label text="Retype new password:"/>
		<g:PasswordTextBox ui:field="retypePasswordArea" styleName="{style.textBoxDecoration}"/>
		<g:Label ui:field="messageLabel" styleName="{style.errorLabel}" visible="false" />
           
		<g:SimplePanel styleName="{style.separator}"/>
		<g:Button text="Change Password" ui:field="changePasswordButton" styleName="{style.menuboxButton}" />
	</layout:ApplicationPopupBoxContainer>

</ui:UiBinder>