<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:image field="arrowUp" src="up.png"/>
	<ui:image field="arrowDown" src="down.png"/>
	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.appmenu.widgets.ApplicationMenuItem.ApplicationMenuItemStyle">
	
		.menuItem {
			font: FONT_DEFAULT FONT_SIZE_MEDIUM;
			text-transform: uppercase;
			
			text-shadow: TEXT_SHADOW;
		}
		
		.hoverPanel {
			cursor: pointer;
			color: COLOR_MENU_LINK;
		}

		.hoverPanel:hover, .menuItemSelected {
			color: COLOR_MENU_LINK_HOVER;
		}
		
		.biggerFont {
			font-size: FONT_SIZE_LARGE;
		}
		
		@sprite .arrowDown {
			gwt-image: 'arrowDown';
		}
		
		@sprite .arrowUp {
			gwt-image: 'arrowUp';
		}
		
		.arrowUp, .arrowDown {
			margin-left: 10px;
			margin-top: 5px;
		}
	</ui:style>

	<g:FocusPanel ui:field="rootPanel">
		<g:HorizontalPanel styleName="{style.hoverPanel}">
			<g:Label ui:field="textLabel" styleName="{style.menuItem}" />
			<g:Label ui:field="arrow" styleName="{style.arrowDown}" />
		</g:HorizontalPanel>
	</g:FocusPanel>
</ui:UiBinder> 