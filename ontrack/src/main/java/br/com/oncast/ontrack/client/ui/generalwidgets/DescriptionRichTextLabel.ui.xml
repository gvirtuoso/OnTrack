<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:r="urn:import:br.com.oncast.ontrack.client.ui.components.annotations.widgets"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">
	
	<ui:image field="createIcon" src="black_check.png" />
	<ui:style src="../style/default.css" >
		.root {
			height: auto;
		}
	
		.expandPanel {
			position: relative;
			
			height: 100%;
			width: 100%;
			
			min-height: 26px;
		}
		
		.container {
			position: relative;
			width: 100%;
			border: 1px solid COLOR_BACKGROUND_HEADER;
			
			background-color: white;
		}
		
		.helpText {
			position: absolute;
			top: 5px;
			left: 5px;
			opacity: 0.6;
		}
		
		.submitHelpText {
			position: absolute;
			bottom: 5px;
			right: 20px;
			opacity: 0.6;
		}
		
		.noDescriptionContainer {
		}
	   	
	   	.noDescriptionLabel  {
			text-align: center;
			width: 100%;
			font-size: 14pt;
			line-height: 54px;
		}
		
		.helpLabel {
			text-align: center;
			width: 100%;
			font-size: 11pt;
			line-height: 18px;
			color: COLOR_BORDER_MENUBAR;
			margin-bottom: 18px;
		}
		
		.editDescriptionBtn {
			cursor: pointer;
			padding: 5px;
			text-align: center;
			border: 1px solid transparent;
			border-radius: 3px;			
			color: COLOR_TEXT_SECONDARY;
			float: right;
			margin-right: -10px;
			margin-top: -25px;
		}

		.editDescriptionBtn:hover {
			border-color: COLOR_BORDER_PRIMARY;
			-webkit-box-shadow: inset -1px -1px 1px COLOR_BORDER_SECONDARY;
			-moz-box-shadow: inset -1px -1px 1px COLOR_BORDER_SECONDARY;
			box-shadow: inset -1px -1px 1px COLOR_BORDER_SECONDARY;
		}
		
		@sprite .create {
			position: absolute;
			top: 12px;
			right: 10px;

			gwt-image: 'createIcon';
			
			background-size: 30px 30px;
			background-position: center;
			
			width: 24px;
			height: 24px;
			
			margin: 1px;
			margin-left: 11px;
			
			border-radius: 3px;
			padding: 2px;
			
			opacity: 0.8;
			cursor: pointer;
		}
		
		.create:HOVER {
			margin: 0px;
			margin-left: 10px;
			border: 1px solid #AEAEAE;
			box-shadow: inset 1px 1px 1px white;
		}
		
		.relative {
			position: relative;
		}
		
		.displayPanel {
			position: relative;
			padding: 10px 15px;
			width: auto !important;
		}
	</ui:style>
	
	<g:FocusPanel ui:field="focusPanel" styleName="{style.root}">
		<g:HTMLPanel styleName="{style.expandPanel}">
			<g:DeckPanel ui:field="deckPanel">
				<g:FocusPanel ui:field="richTextArea">
					<g:HTMLPanel styleName="{style.relative}">
						<g:VerticalPanel styleName="{style.container}">
							<r:RichTextToolbar ui:field="toolbar"/>
							<g:RichTextArea ui:field="textArea"/>
						</g:VerticalPanel>
						<g:FocusPanel ui:field="createDescriptionButton" styleName="{style.create}"/>
					</g:HTMLPanel>
				</g:FocusPanel>
				<g:FlowPanel styleName="{style.displayPanel}">
					<g:DeckPanel ui:field="descriptionDeckPanel">
						<g:FlowPanel styleName="{style.noDescriptionContainer}">
							<g:Label styleName="{style.noDescriptionLabel}">
								<ui:msg description="no description yet message">No Description yet</ui:msg>
							</g:Label>
							<g:Label styleName="{style.helpLabel}">
								<ui:msg description="description help message">You could set a description using the link below.</ui:msg>
							</g:Label>
						</g:FlowPanel>
						<g:InlineHTML ui:field="label" />
					</g:DeckPanel>
					<g:Label ui:field="editButtom" styleName="icon-edit icon-large {style.editDescriptionBtn}" title="Edit Description">
						<ui:attribute name="title" description="edit description buttom" />
					</g:Label>
				</g:FlowPanel>
			</g:DeckPanel>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 