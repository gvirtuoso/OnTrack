<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">
	
	<ui:image field="containerStateOpenImg" src="../../releasepanel/widgets/bg-expand-minus.png"/>
	<ui:image field="containerStateClosedImg" src="../../releasepanel/widgets/bg-expand-plus.png"/>
	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.organization.widgets.ReleaseSummaryWidget.ReleaseSummaryWidgetStyle">
	
		.rootPanel {
			margin: 0px 2px;
		}
		
		.rootSelected {
			box-shadow: 0 0 5px 1px #3d93b1;
		}
	
		.header {
			position: relative;
			padding: 5px 15px;
			cursor: pointer;
			background: #EDEDED;
			color: COLOR_GRAY_DARK;
			box-shadow: none;
		}
		
		.headerContainer {
			width: 100%;
			height: 100%;
		}
		
		.progressBar {
			overflow: hidden;
			width: auto;
			height: auto;
			position: absolute;
			top: 0;
			left: 0;
			bottom: 0;
			background: #999;
		}
		
		.headerSelected {
			background: #ACBAC1;
			background: #B2C9CC;
		}
		
		.headerSelected .progressBar {
			opacity: 0.6;
		}
		
		.headerDone {
			opacity: 0.8;
		}
		
		.headerUnplanned {
			border: none;
			background: transparent;
			color: COLOR_GRAY;
			cursor: default;
		}
		
		@sprite .containerStateOpen {
			gwt-image: 'containerStateOpenImg';
		}
		
		@sprite .containerStateClosed {
			gwt-image: 'containerStateClosedImg';
		}
		
		.containerStateToggleButton {
			position: absolute;
			top: 7px;
			left: 7px;
			
			height: 9px;
			width: 9px;
			background-position: center;
			
			cursor: pointer;
		}
		
		.titleLabel {
			position: relative;
			font-size: FONT_SIZE_MEDIUM;
			width: 100%;
			text-align: center;
			cursor: pointer;
		}
		
		.attributes {
			margin-left: PADDING_SMALL;
			display: none;
		}
		
		.content {
			padding: 5px 3px;
			padding-top: 6px;
			border-radius: 0px 0px 2px 2px;
			background-color: rgba(255, 255, 255, 0.5);
		}
		
	</ui:style>
	
	<g:HTMLPanel ui:field="root" styleName="{style.rootPanel} {style.noSelection}">
		<g:FocusPanel ui:field="header" styleName="{style.header}">
			<g:HTMLPanel styleName="{style.headerContainer}">
				<g:SimplePanel ui:field="progressBar" styleName="{style.progressBar}"/>
				<g:FocusPanel ui:field="containerStateToggleButton" styleName="{style.containerStateToggleButton}"/>
				<g:Label ui:field="title" styleName="{style.titleLabel}"/>
			</g:HTMLPanel>
		</g:FocusPanel>
		<g:HTMLPanel ui:field="content" styleName="{style.content}">
			<w:ModelWidgetContainer ui:field="childReleases" />
		</g:HTMLPanel>
	</g:HTMLPanel>
	
</ui:UiBinder> 