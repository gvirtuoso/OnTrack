<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">
	
	<ui:image field="progressBackground" src="../../../components/scopetree/widgets/searchbar/pattern_background.png"/>
	<ui:image field="containerStateOpenImg" src="../../releasepanel/widgets/bg-expand-minus.png"/>
	<ui:image field="containerStateClosedImg" src="../../releasepanel/widgets/bg-expand-plus.png"/>
	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.organization.widgets.ReleaseSummaryWidget.ReleaseSummaryWidgetStyle">
	
		.rootPanel {
			margin: 0px 2px;
		}
		
		.rootSelected {
			box-shadow: 0px 0px 4px COLOR_GRAY;
		}
	
		.header {
			position: relative;
			padding: 5px 15px;
			border: 1px solid #999;
			cursor: pointer;
			border-radius: 2px;
			background: #EDEDED;
			color: COLOR_GRAY_DARK;
		}
		
		.headerContainer {
			width: 100%;
			height: 100%;
		}
		
		@sprite .progressBar {
			gwt-image: 'progressBackground';
			background-repeat: repeat;
			background-color: COLOR_BLUE_LIGHT;
			width: auto;
			height: auto;
			
			position: absolute;
			top: 0px;
			left: 0px;
			bottom: 0px;
			
			opacity: 1;
		}
		
		.headerSelected {
			background: COLOR_YELLOW;
		}
		
		.headerSelected .progressBar {
			opacity: 0.5;
		}
		
		.headerDone {
			opacity: 0.8;
		}
		
		.headerUnplanned {
			border: none;
			background: transparent;
			color: COLOR_GRAY;
			cursor: default;
		}
		
		@sprite .containerStateOpen {
			gwt-image: 'containerStateOpenImg';
		}
		
		@sprite .containerStateClosed {
			gwt-image: 'containerStateClosedImg';
		}
		
		.containerStateToggleButton {
			position: absolute;
			top: 7px;
			left: 7px;
			
			height: 9px;
			width: 9px;
			border-radius: 2px;
			background-position: center;
			
			cursor: pointer;
			border: 1px solid COLOR_GRAY;
		}
		
		.titleLabel {
			position: relative;
			font-size: FONT_SIZE_MEDIUM;
			width: 100%;
			text-align: center;
		}
		
		.attributes {
			margin-left: PADDING_SMALL;
			display: none;
		}
		
		.content {
			padding: 5px 3px;
			padding-top: 6px;
			border: 1px solid #999;
			border-radius: 0px 0px 2px 2px;
			border-top: none;
			margin-top: -1px;
			background-color: rgba(245, 245, 245, 0.3);
		}
		
	</ui:style>
	
	<g:HTMLPanel ui:field="root" styleName="{style.rootPanel} {style.noSelection}">
		<g:FocusPanel ui:field="header" styleName="{style.header}">
			<g:HTMLPanel styleName="{style.headerContainer}">
				<g:SimplePanel ui:field="progressBar" styleName="{style.progressBar}"/>
				<g:FocusPanel ui:field="containerStateToggleButton" styleName="{style.containerStateToggleButton}"/>
				<g:Label ui:field="title" styleName="{style.titleLabel}"/>
			</g:HTMLPanel>
		</g:FocusPanel>
		<g:HTMLPanel ui:field="content" styleName="{style.content}">
			<w:ModelWidgetContainer ui:field="childReleases" />
		</g:HTMLPanel>
	</g:HTMLPanel>
	
</ui:UiBinder> 