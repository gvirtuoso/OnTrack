<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style src="../../style/default.css">
	
		.resultArea {
			position: absolute;
			top: 40px;
			left: 20px;
			bottom: 20px;
			right: 20px;
			
			overflow: auto;
		}
		
	</ui:style>
	
	<g:HTMLPanel>
		<g:Button text="Generate XML" ui:field="button" styleName="{style.menuboxButton}"/>
		<g:TextArea ui:field="resultLabel" styleName="{style.resultArea}"/>
	</g:HTMLPanel>
</ui:UiBinder> 