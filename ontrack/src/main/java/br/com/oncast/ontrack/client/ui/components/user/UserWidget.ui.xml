<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:image field="avatar" src="default-avatar.png"/>
	<ui:image field="invalidImg" src="banned.png"/>
	<ui:style type="br.com.oncast.ontrack.client.ui.components.user.UserWidget.UserWidgetStyle">
	
		.container {
			position: relative;
		}
		
		.mask {
			position: absolute;
			top: 0px;
			left: 0px;
			right: 0px;
			bottom: 0px;
		}
	
		.author {
			vertical-align: top;
			
			width: 40px;
			height: 40px;
			margin-right: 2px;
		}
		
		.author:hover {
			cursor: pointer;
		}
		.online {
			opacity: 1;
		}
		.offline {
			opacity: 0.4;
		}
		
		@sprite .removed {
			gwt-image: 'invalidImg';
			
			width: auto;
			height: auto;
			
			background-position: center;
			background-size: 50px;
			opacity: 0.8;
		}
		
		.showActiveColor {
			border-left: 4px solid #888;
		}
		
	</ui:style>
	
	<g:FocusPanel>
		<g:HTMLPanel styleName="{style.container}">
			<g:Image ui:field="userImage" styleName="{style.author} {style.offline}" resource="{avatar}" />
			<g:FocusPanel ui:field="mask" styleName="{style.mask}"/>
		</g:HTMLPanel>
	</g:FocusPanel>
	
</ui:UiBinder> 