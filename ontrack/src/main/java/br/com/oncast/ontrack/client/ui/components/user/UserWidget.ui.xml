<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:image field="avatar" src="default-avatar.png"/>
	<ui:image field="invalidImg" src="banned.png"/>
	<ui:style type="br.com.oncast.ontrack.client.ui.components.user.UserWidget.UserWidgetStyle">
	
	
		.root {
		}
		.container {
			position: relative;
		}
		
		.activeIndicator {
			position: absolute;
			top: 1px;
			left: 1px;
			width: 4px;
			bottom: 1px;
		}
		
		.mask {
			position: absolute;
			top: 0px;
			left: 0px;
			right: 0px;
			bottom: 0px;
			
			border: 1px solid #c0c0c0;
			
			cursor: pointer;
		}
	
		.userImage {
			width: inherit;
			height: inherit;
		}
		
		.userLabel {
			width: inherit;
			height: inherit;
			
			color: #eee;
			text-align: center;
			text-transform: uppercase;
			margin-left: 1px;
		}
		
		.online {
			opacity: 1;
		}
		.offline {
			opacity: 0.4;
		}
		
		@sprite .removed {
			gwt-image: 'invalidImg';
			
			width: auto;
			height: auto;
			
			background-position: center;
			background-size: 50px;
			opacity: 0.8;
		}
		
		.showActiveColor {
			background: #888;
		}
		
		.userImageContainerMedium {
			width: 40px;
			height: 40px;
			font-size: x-large;
			line-height: 40px;
		}
		
		.userImageContainerSmall {
			width: 30px;
			height: 30px;
			font-size: medium;
			line-height: 30px;
			font-weight: bold;
		}
		
		.userImageContainer {
			background-color: #1E3669;
			overflow: hidden;
		}
		
	</ui:style>
	
	<g:FocusPanel styleName="{style.root}">
		<g:HTMLPanel styleName="{style.container}">
			<g:DeckPanel ui:field="userImageContainer" styleName="{style.userImageContainer}">
				<g:Image ui:field="userImage" styleName="{style.userImage}" resource="{avatar}" />
				<g:Label ui:field="userWithoutImage" styleName="{style.userLabel}"/>
			</g:DeckPanel>
			
			<g:FocusPanel ui:field="activeIndicator" styleName="{style.activeIndicator}"/>
			<g:FocusPanel ui:field="mask" styleName="{style.mask}"/>
		</g:HTMLPanel>
	</g:FocusPanel>
	
</ui:UiBinder> 