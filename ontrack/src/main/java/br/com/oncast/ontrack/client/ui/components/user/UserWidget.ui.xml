<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:image field="avatar" src="default-avatar.png"/>
	<ui:image field="invalidImg" src="banned.png"/>
	<ui:style type="br.com.oncast.ontrack.client.ui.components.user.UserWidget.UserWidgetStyle">
	
		.container {
			position: relative;
		}
		
		.mask {
			position: absolute;
			top: 0px;
			left: 0px;
			right: 0px;
			bottom: 0px;
		}
	
		.author {
			vertical-align: top;
			
			width: 40px;
			height: 40px;
			margin-right: 2px;
		}
		
		.author:hover {
			cursor: pointer;
		}
		.online {
			opacity: 1;
		}
		.offline {
			opacity: 0.4;
		}
		
		@sprite .removed {
			gwt-image: 'invalidImg';
			
			width: auto;
			height: auto;
			
			background-position: center;
			background-size: 50px;
			opacity: 0.8;
		}
		
		.showActiveColor {
			border-left: 4px solid #888;
		}
		
		.userImageContainerMedium {
			width: 38px;
			height: 38px;
			border: 1px solid #c0c0c0;
		}
		
		.userWithoutImageMedium {
			position: absolute;
			top: 11px;
			left: 15px;
			font-size: larger;
			font-weight: bold;
			text-transform: uppercase;
		}
		
		.userImageContainerLabelColor {
			background-color: #FFE8B3;
		}
		
		.userImageContainerImageColor {
			background-color: transparent;
		}
		
		.userImageContainerSmall {
			width: 32px;
			height: 28px;
			border: 1px solid #c0c0c0;
		}
		
		.userWithoutImageSmall {
			position: absolute;
			top: 7px;
			left: 12px;
			font-size: medium;
			font-weight: bold;
			text-transform: uppercase;
		}
		
		.userWithoutImageContainer {
			position: relative;
			width: 100%;
			height: 100%;
		}
		
	</ui:style>
	
	<g:FocusPanel>
		<g:HTMLPanel styleName="{style.container}">
			<g:DeckPanel ui:field="userImageContainer">
				<g:Image ui:field="userImage" styleName="{style.author} {style.offline}" resource="{avatar}" />
				<g:HTMLPanel ui:field="userWithoutImageContainer" styleName="style.userWithoutImageContainer">
					<g:Label ui:field="userWithoutImage"/>
				</g:HTMLPanel>
			</g:DeckPanel>
			<g:FocusPanel ui:field="mask" styleName="{style.mask}"/>
		</g:HTMLPanel>
	</g:FocusPanel>
	
</ui:UiBinder> 