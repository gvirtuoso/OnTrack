<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">

	<ui:style>
		.panel {
			position: absolute;
			top: 1px;
			left: 1px;
			right: 1px;
			bottom: 4px;
            			
			min-height: 25px;
			max-width: 207px;
			border: 1px solid #000;
			padding: 0px;
			margin: 0px;
			
			-moz-box-shadow: 1px 1px 2px #ddd;
			-webkit-box-shadow: 1px 1px 2px #ddd;
			box-shadow: 1px 1px 2px #ddd;
		}
		
		.panel:hover {
			border: 1px solid #000;
			background-color: #EFEFFF;
		}
		
		.scopeControls {
			position: absolute;
			top: 0px;
			right: 0px;
			bottom: 0px;
			left: 0px;
		}
		
		.descriptionLabel {
			padding-top: 3px;
			padding-bottom: 4px;
			padding-left: 16px;
			padding-right: 10px;
			overflow: visible;
			overflow-x: visible;
			overflow-y: hidden;
			font-size: 12px;
			font-stretch: extra-expanded;
			line-height: 120%;
			text-align: center;
		}
		
		.draggable {
			background: url("resources/image/releasePanel/draggable.png") repeat-y;
			cursor: move;
			position: absolute;
			top: 3px;
			left: 4px;
			bottom: 4px;
			width: 8px;
		}
	</ui:style>

	<g:FocusPanel ui:field="panel" styleName="{style.panel} kanbanColumn">
		<g:FlowPanel>
			<g:HTMLPanel ui:field="scopeControls" styleName="{style.scopeControls}" visible="false">
				<g:FocusPanel ui:field="draggableAnchor" styleName="{style.draggable}" />
			</g:HTMLPanel>
			<g:Label ui:field="descriptionLabel" styleName="{style.descriptionLabel}" />
		</g:FlowPanel>
	</g:FocusPanel>
</ui:UiBinder> 