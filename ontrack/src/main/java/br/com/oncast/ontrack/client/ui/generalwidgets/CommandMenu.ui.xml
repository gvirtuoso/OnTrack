<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style type="br.com.oncast.ontrack.client.ui.generalwidgets.CommandMenu.Style">
		.menu {
			font-weight: normal;
		}
		
		.menuItemStyle {
			padding: 10px;
		}

        .menuItemStyle:hover {
            background: blue;
        }
	</ui:style>

	<g:MenuBar styleName="{style.menu}" ui:field="menu" />
</ui:UiBinder> 