<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
		<ui:data field="errorBackground" src="error_bg_input.png"/>
		<ui:style src="../../style/default.css" type="br.com.oncast.ontrack.client.ui.generalwidgets.layout.ValidationInputContainer.ValidationInputContainerStyle">
	
		.container {
			position: relative;
			width: auto;
			background-color: white;
		}
		
		.textBox {
			width: 100%;

			background: transparent;
			border: none;
			padding: 0px;
			margin: 0px;
			
			font-family: inherit;
			font-size: inherit;
			color: inherit;
		}
		@url errorBackgroundUrl errorBackground;
		.error {
			border-color: red;
			padding-left: 32px;
			
			background-image: errorBackgroundUrl;
			background-repeat: repeat-y;
			background-position: center left;
			
			box-shadow: none;
		}
		
	</ui:style>
	<g:FocusPanel ui:field="focusPanel">
		<g:HTMLPanel ui:field="container" styleName="{style.textBoxDecoration} {style.container}"/>
	</g:FocusPanel>
</ui:UiBinder> 