<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
		<ui:style src="../../style/default.css" type="br.com.oncast.ontrack.client.ui.generalwidgets.layout.ValidationInputContainer.ValidationInputContainerStyle">
	
		.container {
			position: relative;
			width: auto;
			background-color: COLOR_BACKGROUND_MENUBAR;
			border: 1px solid #777;
			border-left: none;
			border-top: none;
			text-shadow: none;
			box-shadow: SHADOW_TERTIARY;
			padding: 5px 8px;
			font-size: 10pt;
		}
		
		.descriptionLabel {
			position: absolute;
			
			top: 8px;
			left: 8px;
			right: 8px;
			
			cursor: default;
		}
		
		.textBox {
			width: 100%;

			background: transparent;
			border: none;
			padding: 0px;
			margin: 0px;
			
			font-family: inherit;
			font-size: inherit;
			color: inherit;
		}
		
		.error {
			border-color: COLOR_ERROR_SECONDARY;
		}
		
	</ui:style>
	<g:FocusPanel ui:field="focusPanel">
		<g:HTMLPanel ui:field="container" styleName="{style.textBoxDecoration} {style.container}">
			<g:Label ui:field="defaultText" styleName="{style.descriptionLabel} {style.noSelection}"/>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 