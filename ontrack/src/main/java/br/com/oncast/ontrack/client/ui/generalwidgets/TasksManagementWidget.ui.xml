<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gw='urn:import:br.com.oncast.ontrack.client.ui.generalwidgets'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">
	
	<ui:image field="addIcon" src="ok-white.png" />
	<ui:image field="removeIcon" src="trash-white.png" />
	<ui:style src="../style/default.css">
		
		.root {
			padding: 5px;
		}
		
		.subjectTitle {
			text-transform: uppercase;
			padding: 8px;
			border: 1px solid #C2C2C2;
			background: lightGrey;
			-webkit-box-shadow: inset 0 1px 0 0 #E9E9E9, 0 2px 6px #E1E1E1;
			-moz-box-shadow: inset 0 1px 0 0 #e9e9e9, 0 2px 6px #e1e1e1;
			box-shadow: inset 0 1px 0 0 #E9E9E9, 0 2px 6px #E1E1E1;
			color: #777;
			font-family: FONT_DEFAULT;
			font-size: 12pt;
			text-shadow: 1px 1px 0 #EDEDED;
			margin-bottom: 5px;
		}
		
		.tasksListContainer {
			position: absolute;
			top: 78px;
			left: 5px;
			right: 40px;
			bottom: 5px;
			
			overflow-x: hidden;
			overflow-y: auto;
			
			border: BORDER_DEFAULT;
		}
		
		@sprite .addTask {
			gwt-image: 'addIcon';
			background-color: #44ab7f;
			
			position: absolute;
			top: 78px;
			right: 5px;
		}
		
		@sprite .removeTask {
			gwt-image: 'removeIcon';
			background-color: #C7613F;
			background-size: 24px;

			position: absolute;
			bottom: 5px;
			right: 5px;
		}
		
		.button {
			background-size: 20px;
			background-position: center;
			
			width: 30px;
			height: 30px;
			
			display: block;
		}
		
	</ui:style>
	
	<g:FocusPanel ui:field="focusPanel">
		<g:HTMLPanel styleName="{style.root}">
			<g:Label ui:field="label" styleName="{style.subjectTitle}" />

			<gw:PaddedTextBox ui:field="newTaskDescription"/>
			<g:FocusPanel ui:field="taskListScroll" styleName="{style.tasksListContainer}">
				<gw:ModelWidgetContainer ui:field="tasksList"/>
			</g:FocusPanel>
			
			<g:Button ui:field="addTask" styleName="{style.addTask} {style.button} {style.hoverButton}"/>
			<g:Button ui:field="removeTask" styleName="{style.removeTask} {style.button} {style.hoverButton}"/>
		</g:HTMLPanel>
	</g:FocusPanel>
		
</ui:UiBinder> 