<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:search="urn:import:br.com.oncast.ontrack.client.ui.components.scopetree.widgets.searchbar"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">

	<ui:style src="../../../../style/default.css">
		
		.root {
			width: 100%;
			height: 100%;
		}
		
		.searchBar {
			padding: 0px 15px;

			border: RELEASE_WIDGET_BORDER;
			margin: 1px;
		
			background: COLOR_RELEASE_WIDGET_HEADER_BACKGROUND_OPENED;
			box-shadow: inset 0px 1px 0px 0px #e9e9e9, 0px 1px 3px #9F9F9F;
			
			color: COLOR_RELEASE_WIDGET_HEADER_TEXT_OPENED;
			font-family: FONT_DEFAULT;
			font-size: FONT_SIZE_LARGE;				
			text-shadow: RELEASE_WIDGET_HEADER_TEXT_SHADOW;
			filter: RELEASE_WIDGET_HEADER_TEXT_SHADOW_IE;
		}
		
		.container {
			width: 100%;
		}
		
		.search {
			margin: -1px 10px;
		}
		
		.activeColumnIndicatorLabel, .inactiveColumnIndicatorLabel {
			cursor: pointer;
			margin: 0px 1px;
			
		}
		
		.inactiveColumnIndicatorLabel {
			color: #9e9e9e;
			margin-left: 5px;
			margin-right: -3px;
		}
		
		.activeColumnIndicatorLabel {
			color: #7e7f9f;
		}
		
	</ui:style>
	
	<g:FocusPanel styleName="{style.root}">
		<g:HTMLPanel styleName="{style.searchBar}">
			<g:HorizontalPanel ui:field="container" styleName="{style.container}" verticalAlignment="middle">
				<g:cell width="1">
					<g:Label>
						<ui:msg description="search scope label">Search</ui:msg>
					</g:Label>
				</g:cell>
				<g:cell width="100%">
					<search:SearchScopeFiltrableCommandMenu ui:field="search" styleName="{style.search}"/>
				</g:cell>
				
				<g:cell width="1">
					<g:Label ui:field="valueColumnInactiveIndicatorLabel" text="Value" title="Show Values (Alt $)" styleName="{style.inactiveColumnIndicatorLabel}" width="85px"/>
				</g:cell>
				<g:cell width="1">
					<g:Label ui:field="effortColumnInactiveIndicatorLabel" title="Show Efforts (Alt #)" styleName="{style.inactiveColumnIndicatorLabel}" width="85px">
						<ui:msg description="effort column label">Effort</ui:msg>
						<ui:attribute name='title' description='tooltip text for show effort column'/>
					</g:Label>
				</g:cell>
				<g:cell width="1">
					<g:Label ui:field="progressColumnInactiveIndicatorLabel" text="Progress" title="Show Progress (Alt %)" styleName="{style.inactiveColumnIndicatorLabel}" width="80px"/>
				</g:cell>
				<g:cell width="1">
					<g:Label ui:field="releaseColumnInactiveIndicatorLabel" text="Release" title="Show Releases (Alt @)" styleName="{style.inactiveColumnIndicatorLabel}" width="120px" horizontalAlignment="center"/>
				</g:cell>
				
				<g:cell width="1">
					<g:Label ui:field="valueColumnActiveIndicatorLabel" text="Value" title="Hide Values (Alt $)" styleName="{style.activeColumnIndicatorLabel}" width="85px"/>
				</g:cell>
				<g:cell width="1">
					<g:Label ui:field="effortColumnActiveIndicatorLabel" title="Hide Efforts (Alt #)" styleName="{style.activeColumnIndicatorLabel}" width="85px">
						<ui:msg description="effort column label">Effort</ui:msg>
						<ui:attribute name='title' description='tooltip text for hide effort column'/>
					</g:Label>
				</g:cell>
				<g:cell width="1">
					<g:Label ui:field="progressColumnActiveIndicatorLabel" text="Progress" title="Hide Progress (Alt %)" styleName="{style.activeColumnIndicatorLabel}" width="80px"/>
				</g:cell>
				<g:cell width="1">
					<g:Label ui:field="releaseColumnActiveIndicatorLabel" text="Release" title="Hide Releases (Alt @)" styleName="{style.activeColumnIndicatorLabel}" width="120px" horizontalAlignment="center"/>
				</g:cell>
				
				<g:cell width="1">
					<g:SimplePanel width="5px"/>
				</g:cell>
			</g:HorizontalPanel>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 