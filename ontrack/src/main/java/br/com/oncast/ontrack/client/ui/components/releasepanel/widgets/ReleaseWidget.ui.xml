<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:ow="urn:import:br.com.oncast.ontrack.client.ui.components.releasepanel.widgets"
	xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">

	<ui:style
		type="br.com.oncast.ontrack.client.ui.components.releasepanel.widgets.ReleaseWidget.Style">
			.rootPanel {
				position: relative;
				margin-bottom: 5px;
				border: 1px solid #a5a5a5;
				font-size: 13px;
				width: 100%;
			}
			
			.header {
				position: relative;
                top: 0px;
                left: 0px;
                right: 0px;
                height: 30px;

				border: 1px solid #d9dae1;
				color: #fff;
			}
			
			.containerStateToogleClickableArea {
				position: absolute;
				top: 0px;
				left: 0px;
				right: 0px;
				bottom: 0px;
			}
			
			.headerContainerStateImage {
				position: absolute;
                top: 10px;
                left: 10px;
				width: 10px;
				height: 10px;
				display: block;
			}
			
			.headerContainerStateImageOpened {
				background: url("resources/image/releasePanel/closeContainer.jpg")
					no-repeat center;
				cursor: pointer;
			}
			
			.headerContainerStateImageClosed {
				background: url("resources/image/releasePanel/openContainer.jpg")
					no-repeat center;
				cursor: pointer;
			}
			
			.headerLabel {
				position: absolute;
				top: 8px;
				left: 25px;
				right: 80px;
				height: 20px;
				overflow: hidden;
			}
			
			.progressLabel {
				position: absolute;
	
                width: 18px;
                height: 18px;
                display: block;
                right: 80px;
                top: 6px;
                
                text-align: right;
                
                -moz-border-radius: 2px;
                border-radius: 2px;
			}

            .progressLabel:hover {
				cursor: pointer;
            }
			
			.progressIcon {
				position: absolute;
				
				width: 18px;
				height: 18px;
				right: 30px;
				top: 5px;

                opacity: 0.6;
				display: block;
				background: #dfe0e3 url("resources/image/releasePanel/progressIcon.png") no-repeat center;
				background-size: 18px 18px;
				
				-moz-border-radius: 2px;
                border-radius: 2px;
			}
			
			.progressIcon:hover {
				opacity: 1;
				cursor: pointer;
			}
            
			.releaseChartPanel {
				position: absolute;
				top: 8px;
				height: 20px;
				right: 35px;
				width: 40px;
				font-size: small;
				text-align: center;
			}
			
			.menuLink {
				position: absolute;
				top: 5px;
				right: 5px;
				
				background: #dfe0e3 url("resources/image/releasePanel/arrow.png") no-repeat center;
				cursor: pointer;
                width: 18px;
                height: 18px;
                opacity: 0.2;
                display: block;
                
                -moz-border-radius: 2px;
                border-radius: 2px;
			}
			
            .menuLink:hover {
                background: #d4d5d9 url("resources/image/releasePanel/arrow.png") no-repeat center;
            	opacity: 1;
            }
			
			.burnUpChartPanel {
				position: absolute;
				top: 5px;
				right: 25px;
			}
			
			.body {
				position: relative;
				background-color: #e3e4e8;
				width: 100%;
			}
			
			.releaseContainer {
				padding: 5px;
				width: 100%;
			}
			
			.scopeContainer {
				padding: 8px;
				width: 100%;
			}
			
			.chartPanel {
		        position: relative;
                width: 900px;
                z-index: 2;
                
                border: 1px solid #a5a5a5;
		    	-moz-box-shadow: 0px 0px 5px #a5a5a5;
		    	-webkit-box-shadow: 0px 0px 5px #a5a5a5;
		    	box-shadow: 0px 0px 5px #a5a5a5;
			}
			
			.chartPanel:FOCUS {
				outline: 0px;
			}
		</ui:style>

	<g:HTMLPanel styleName="{style.rootPanel}">
		<div class="{style.header} gradReleaseWidgetHeader">
   			<g:Image ui:field="containerStateImage" styleName="{style.headerContainerStateImage}" />
			<g:FocusPanel ui:field="containerToogleClickableArea" styleName="{style.containerStateToogleClickableArea}" >
				<t:EditableLabel ui:field="descriptionLabel" styleName="{style.headerLabel} v-ellip" />
			</g:FocusPanel>
			<g:Label styleName="{style.progressLabel}" ui:field="progressLabel" />
			<g:Image styleName="{style.progressIcon}" ui:field="progressLink" />
			<g:Image styleName="{style.menuLink}" ui:field="menuLink" />
		</div>
		<div ui:field="bodyContainer" class="{style.body}" >
			<ow:ReleaseWidgetContainer ui:field="releaseContainer" styleName="{style.releaseContainer}" />
			<ow:ScopeWidgetContainer ui:field="scopeContainer" styleName="{style.scopeContainer}" />
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 