<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.boardContainer {
			position: absolute;
			top: 0px;
			bottom: 0px;
			left: 0px;
			right: 0px;
		}
		
		.board, .board > tbody > tr > td > table, .board > tr > td > table {
            position: relative;
            height: 100%;			
		}
		
		.board td {
			position: relative;
		} 
	</ui:style>

	<g:SimplePanel styleName="{style.boardContainer}">
		<g:HorizontalPanel ui:field="board" styleName="{style.board}" />
	</g:SimplePanel>
</ui:UiBinder> 