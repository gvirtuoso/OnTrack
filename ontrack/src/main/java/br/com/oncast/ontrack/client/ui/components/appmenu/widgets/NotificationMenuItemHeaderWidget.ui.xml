<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
	
		.text {
			display: inline-block;
		}
		
		.countIndicator {
			display: inline-block;
			color: white;
			width: 13px;
		}
	
	</ui:style>
	
	<g:HTMLPanel>
		<g:Label styleName="{style.text}" ui:field="label" />
		<g:Label styleName="{style.countIndicator}" ui:field="countIndicator" />
	</g:HTMLPanel>
</ui:UiBinder> 