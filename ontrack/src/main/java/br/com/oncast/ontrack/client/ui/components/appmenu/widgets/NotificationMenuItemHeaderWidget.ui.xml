<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:image field="bg" src="notification-bg.png"/>
	<ui:image field="unreadBg" src="notification-bg-pink.png"/>
	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.appmenu.widgets.NotificationMenuItemHeaderWidget.NotificationMenuItemHeaderWidgetStyle">
	
		@sprite .read {
			gwt-image: 'bg';
		}
		
		@sprite .unread {
			gwt-image: 'unreadBg';
		}
		
		.countIndicator {
			background-position: right center;
			background-size: 41px;
			height: 24px;
			width: 36px;
			
			color: #fafafa;
			font-size: 13px;
			text-align: center;
			font-weight: bold;
			line-height: 24px;
			
			padding-right: 6px;
			margin-top: 15px;
			margin-right: 10px;
			
			cursor: pointer;
			opacity: 0.7;
		}
		
		.countIndicator:hover {
			opacity: 1;
		}
		
	</ui:style>
	
	<g:HTMLPanel>
		<g:Label styleName="{style.countIndicator} {style.read}" ui:field="countIndicator" />
	</g:HTMLPanel>
</ui:UiBinder> 