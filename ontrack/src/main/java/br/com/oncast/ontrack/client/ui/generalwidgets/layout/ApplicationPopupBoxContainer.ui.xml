<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style src="../../style/default.css" type="br.com.oncast.ontrack.client.ui.generalwidgets.layout.ApplicationPopupBoxContainer.Style">
		.container {
            position: relative;
			width: 210px;
			
			color: COLOR_MENUBOX_TEXT;
			font: FONT_SIZE_SMALL FONT_DEFAULT_ITALIC;
		}
		
		.backgroundPanel {
			position: absolute;
			top: 0px;
			left: 0px;
			right: 0px;
			bottom: 0px;
		}

        .content {
        	position: relative;
        	margin: 1px;
        }
        
        .boxPadding {
        	padding: POPUP_PADDING;
        }
        
	</ui:style>

	<g:FocusPanel ui:field="rootPanel" styleName="{style.container} {style.boxPadding}">
		<g:HTMLPanel>
			<g:SimplePanel ui:field="background" styleName="{style.backgroundPanel} {style.popupContainer}"/>
			<g:HTMLPanel ui:field="content" styleName="{style.content}" />
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 