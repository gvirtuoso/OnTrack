<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gs="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.scope">

    <ui:data field="draggableImage" src="../../move_scope.png"/>
	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.progresspanel.widgets.KanbanScopeWidget.KanbanScopeWidgetStyle">
	
        @url draggableImageUrl draggableImage;
    
		.panel {
			position: relative;
			
			margin: 0px 0px 3px 0px;
			min-height: 28px;
			width: 209px;

			background: KANBAN_SCOPE_BACKGROUND;

            border: 1px solid #999;
			-moz-box-shadow: 1px 1px 2px #ddd;
			-webkit-box-shadow: 1px 1px 2px #ddd;
			box-shadow: 1px 1px 2px #ddd;
		}
		
		.panel:hover {
            background-color: KANBAN_SCOPE_HOVER_BACKGROUND;
            cursor: pointer;
		}
		
		.internalPanel {
            position: relative;
            height: 100%;
            width: 100%;
        }
        
		.descriptionLabel {
			padding: 10px;
			overflow: visible;
			overflow-x: visible;
			overflow-y: hidden;
			font-stretch: extra-expanded;
            color: #555;
            font-family: FONT_DEFAULT;
            font-size: FONT_SIZE_SMALL;
		}
		
		.descriptionLabelWithAssociatedUsers {
			padding-bottom: 5px;
		}
		      
        .draggable {
            cursor: move;
            height: 100%;
            width: 9px; 
        }
        
        .draggableImage {
            position: absolute;
            top: 5px;
            bottom: 5px;
            left: 0px;
            width: 9px; 
            
            background-image: draggableImageUrl;
            background-repeat: repeat-y;
        }
        
        .selected {
			background-color: white;
			box-shadow: 0px 0px 5px orange;
			z-index: 1;
			border: 1px solid #888;
		}

		.selected:hover {
			border: 1px solid #777;
			color: #444;
		}

		.highlighted {
			background-color: #ffe8b3;
		}		
		
		.associatedUsers {
			float: right;
		}
	</ui:style>

	<g:FocusPanel ui:field="panel" styleName="{style.panel} kanbanColumn">
		<g:HorizontalPanel styleName="{style.internalPanel}" verticalAlignment="middle">
			<g:cell height="100%">
	            <g:FocusPanel ui:field="draggableAnchor" styleName="{style.draggable}">
	                <g:SimplePanel styleName="{style.draggableImage}"/>
	            </g:FocusPanel>
			</g:cell>
            <g:cell width="100%">
	            <g:FlowPanel>
	                <g:Label ui:field="descriptionLabel" styleName="{style.descriptionLabel}" />
	                <gs:ScopeAssociatedMembersWidget ui:field="associatedUsers" styleName="{style.associatedUsers}"/>
	            </g:FlowPanel>
            </g:cell>
        </g:HorizontalPanel>
	</g:FocusPanel>
</ui:UiBinder> 