<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">

	<ui:style
		type="br.com.oncast.ontrack.client.ui.components.scopetree.widgets.ScopeTreeItemWidget.Style">

			.editableLabel {
				position: relative;
				height: 15px;
				min-height: 15px;
				outline: none;
			}
			
			.visualizationPanel {
				position: absolute;
				top: 0px;
				bottom: 0px;
				left: 0px;
				right: 0px;
				height: 20px;
				min-height: 20px;
			}
			
			.descriptionLabel {
				cursor: pointer;
				text-align: left;
				position: absolute;
				right: 300px;
				left: 0px;
				top: 0px;
				bottom: 0px;
			}
			
			.effort {
				position: absolute;
				right: 210px;
				width: 80px;
				height: 20px;
				overflow: hidden;
				margin-left: 4px;
				margin-right: 4px;
				padding-left: 3px;
				padding-right: 3px;
				vertical-align: super;
				font-size: smaller;
				cursor: default;
				-moz-user-select: none;
				-khtml-user-select: none;
				user-select: none;
			}
			
			.effortLabel {
				opacity: 0.5;
				display: inline;
			}
			
			.effortLabelTranslucid {
				opacity: 0.2;
			}
			
			.effortLabelStriped {
				text-decoration: line-through;
			}
			
			.scope { 
			}
			
			.releasePanel {
                position: absolute;
                top: 0px;
                bottom: 0px;
                right: 90px;
                width: 120px;
				overflow: hidden;				
                text-align: right;
                height: 20px;
			}
			
			.tag {
				position: absolute;
				right: 0px;
			}
			
			.releaseMenuPanel {
                position: absolute;
                top: 21px;
                right: 90px;
                min-width: 200px;
                z-index: 2;
			}
						
			.progressMenuPanel {
                position: absolute;
                top: 21px;
                right: 5px;
                min-width: 200px;
                z-index: 2;
			}
			
			.effortMenuPanel {
				position: absolute;
                top: 21px;
                right: 230px;
                min-width: 45px;
                z-index: 2;	
			}

			.progressLabel {
				position: absolute;
				top: 0px;
				bottom: 0px;
				right: 5px;
				width: 80px;
				opacity: 0.2;
				font-size: small;
				font-stretch: expanded;
			}
			
			.editionBox {
			}
		</ui:style>

	<g:FocusPanel ui:field="focusPanel" styleName="{style.editableLabel}">
		<g:DeckPanel ui:field="deckPanel" styleName="{style.editableLabel}">
			<g:FlowPanel styleName="{style.visualizationPanel}">
				<g:HorizontalPanel styleName="{style.scope}" >
					<g:Label ui:field="descriptionLabel" styleName="{style.descriptionLabel} v-ellip" />
					<g:HTMLPanel ui:field="effortPanel" styleName="{style.effort}">
						<t:FastLabel ui:field="inferedEffortLabel" styleName="{style.effortLabel} {style.effortLabelTranslucid}" />
						<t:FastLabel ui:field="declaredEffortLabel" styleName="{style.effortLabel}" />
					</g:HTMLPanel>
				</g:HorizontalPanel>
				<g:HTMLPanel styleName="{style.releasePanel}" >
				    <t:Tag ui:field="releaseTag" styleName="{style.tag}" />
				</g:HTMLPanel>
				<t:FastLabel ui:field="progressLabel" styleName="{style.progressLabel} v-ellip" />
			</g:FlowPanel>
			<g:TextBox ui:field="editionBox" styleName="{style.editionBox}" />
		</g:DeckPanel>
	</g:FocusPanel>
</ui:UiBinder>