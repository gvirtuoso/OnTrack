<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:s="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.scope">

	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.scopetree.widgets.ScopeTreeItemWidget.Style">

			.editableLabel {
				position: relative;
				height: 20px;
				min-height: 20px;
				outline: none;
				font-size: FONT_SIZE_SMALL;
				color: COLOR_GRAY_DARK;
				line-height: 20px;
			}
			
			.done {
				opacity: 0.6;
			}
			
			.visualizationPanel {
				height: 20px;
				min-height: 20px;
			}
			
			.body {
				border-spacing: 0px;
			}
			
			.descriptionLabel {
				position: absolute;
				top: 0px;
				left: 2px;
				right: 2px;
				bottom: 0px;
				
				cursor: pointer;
				
				color: #444;
			}
			
			.amount {
				width: 63px;
				height: 20px;
				overflow: hidden;
				margin-right: 9px;
				cursor: default;
				text-align: right;
			}
			
			.amountAsterisk {
				visibility: hidden;
				color: COLOR_ERROR_PRIMARY;
			}
			
			.amountLabel {
				display: inline;
			}
			
			.amountConflicted .amountAsterisk {
				visibility: visible;
			}
			
			.amountConflicted .amountLabel {
				text-decoration: underline;
			}
			
			.amountInfered .amountLabel {
				color: #9199cf;
			}
			
			.done .amountInfered .amountLabel {
				color: #8088DF;
			}
			
			.scope {
				position: absolute;
                top: 0px;
                bottom: 0px;
                left: 0px;
                right: 0px;
                display: block;
			}
			
			.releasePanel {
                position: relative;
                height: 20px;
                width: 120px;
				overflow: hidden;
                text-align: right;
			}
			
			.releaseTag {
				position: absolute;
				top: 4px;
				right: 0px;
				left: 0px;
			}

			.progressLabel {
				width: 100px;
				height: 20px;
				font-size: small;
				font-stretch: expanded;
				display: block;
				text-align: center;
			}
			.editionBox {
				padding: 0px 3px;
				margin: -1px;
				font-family: inherit;
				font-size: inherit;
				margin-left: -4px;
			
				font-family: inherit;
				font-size: inherit;
				
				color: #333333;
			}
			
			.detailsIcon {
				padding: 0 6px;
				cursor: pointer;
				font-size: 14px;
				position: relative;
				line-height: 20px;
				border-right: 1px solid;
				letter-spacing: -1px;
			}
			
			.visualizationPanel td:first-child > .detailsIcon {
				padding-left: 0px;
			}
			
			.visualizationPanel td:nth-child\(4\) > .detailsIcon {
				border-right: none;
			}
			
			.checklistComplete {
				color: COLOR_SUCCESS_PRIMARY;
			}
			
			.annotationIcon {
				top: -1px;
			}
			
			.descriptionContainer {
				width: 100%;
				height: 20px;
				position: relative;
			}
			
			.selectedMembers {
				position: absolute;
				top: -15px;
				right: -3px;
				font-size: 11px;
				
				padding: 0px 3px;
			}
			
			.borderPanel {
				position: absolute;
				top: -3px;
				right: -3px;
				left: -3px;
				bottom: -3px;
				border: 1px solid transparent;
			}
			
			.tags {
				width: 100%;
				min-height: 10px;
				border-spacing: 0px !important;
			}
			
		</ui:style>

	<g:FocusPanel ui:field="focusPanel" styleName="{style.editableLabel}">
		<g:HTMLPanel>
			<g:Label ui:field="selectedMembers" styleName="{style.selectedMembers}"/>
			<g:FocusPanel ui:field="borderPanel" styleName="{style.borderPanel}"/>
			<g:DeckPanel ui:field="deckPanel" styleName="{style.editableLabel}">
				<g:HTMLPanel styleName="{style.visualizationPanel}">
					<table border="0" cellspacing="0" cellpadding="0">
						<tbody>
							<tr>
								<td>
									<span ui:field="openImpedimentIcon" class="icon-flag {style.detailsIcon}" />
								</td>
								<td>
									<span ui:field="annotationIcon" class="icon-comment {style.detailsIcon} {style.annotationIcon}" />
								</td>
								<td>
									<span ui:field="checklistIcon" class="icon-list-ul {style.detailsIcon}" />
								</td>
								<td>
									<span ui:field="descriptionIcon" class="icon-file-alt {style.detailsIcon}" />
								</td>
								<td>
									<t:ModelWidgetContainer ui:field="tags" styleName="{style.tags}" />
								</td>
								<td width="100%">
									<div class="{style.descriptionContainer}">
										<g:Label ui:field="descriptionLabel" styleName="{style.descriptionLabel} v-ellip"/>
									</div>
								</td>
								<td width="1">
									<g:HTMLPanel ui:field="valuePanel" styleName="{style.amount}">
										<span class="{style.amountAsterisk}">*</span><span ui:field="valueLabel" class="{style.amountLabel}"/>
									</g:HTMLPanel>
								</td>
								<td width="1">
									<g:HTMLPanel ui:field="effortPanel" styleName="{style.amount}">
										<span class="{style.amountAsterisk}">*</span><span ui:field="effortLabel" class="{style.amountLabel}"/>
									</g:HTMLPanel>
								</td>
								<td width="1">
									<t:FastLabel ui:field="progressLabel" styleName="{style.progressLabel} v-ellip" />
								</td>
								<td width="1">
									<g:HTMLPanel ui:field="releasePanel" styleName="{style.releasePanel}">
									    <t:ReleaseTag ui:field="releaseTag" styleName="{style.releaseTag}" />
									</g:HTMLPanel>
								</td>
							</tr>
						</tbody>
					</table>
				</g:HTMLPanel>
				<g:TextBox ui:field="editionBox" styleName="{style.textBoxDecoration} {style.editionBox}" />
			</g:DeckPanel>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder>