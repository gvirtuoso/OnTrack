<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">

	<ui:image field="details" src="details.png" />
	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.scopetree.widgets.ScopeTreeItemWidget.Style">

			.editableLabel {
				position: relative;
				height: 15px;
				min-height: 15px;
				outline: none;
				font-size: FONT_SIZE_SMALL;
				color: #606060;
			}
			
			.done {
				opacity: 0.6;
			}
			
			.visualizationPanel {
				height: 20px;
				min-height: 20px;
			}
			
			.descriptionLabel {
				position: absolute;
				top: 0px;
				left: 0px;
				right: 0px;
				bottom: 0px;
				
				cursor: pointer;
				
				color: #333333;
			}
			
			.effort {
				width: 80px;
				height: 20px;
				overflow: hidden;
				margin-right: 5px;
				cursor: default;
				-moz-user-select: none;
				-khtml-user-select: none;
				user-select: none;
			}
            
            .effortLabel {
                display: inline;
            }
            			
			.value {
				width: 80px;
				height: 20px;
				overflow: hidden;
				margin-right: 5px;
				cursor: default;
				-moz-user-select: none;
				-khtml-user-select: none;
				user-select: none;
			}
			
			.valueLabel {
				display: inline;
			}
			
			.labelInfered {
				color: #9199cf;
			}
			
			.done .labelInfered {
				color: #8088DF;
			}
			
			.labelStriped {
				text-decoration: line-through;
				color: #b7b7b7;
				text-shadow: none;
			}
			
			.done .labelStriped {
				color: #A6A6A6;
			}
			
			.scope {
				position: absolute;
                top: 0px;
                bottom: 0px;
                left: 0px;
                right: 0px;
                display: block;
			}
			
			.releasePanel {
                position: relative;
                height: 20px;
                width: 120px;
				overflow: hidden;
                text-align: right;
			}
			
			.tag {
				position: absolute;
				top: 2px;
				right: 0px;
				left: 0px;
			}

			.progressLabel {
				width: 80px;
				height: 20px;
				font-size: small;
				font-stretch: expanded;
			}
			.editionBox {
				margin: -1px;
				padding: 2px 0px 4px 4px;
				font-family: inherit;
				font-size: inherit;
				margin-left: -4px;
			
				font-family: inherit;
				font-size: inherit;
				
				color: #333333;
			}
			
			@sprite .detailsIcon {
				gwt-image: 'details';
				
				margin-left: -3px;
				margin-right: 3px;
				
				cursor: pointer;
			}

			.descriptionContainer {
				width: 100%;
				height: 20px;
				position: relative;
			}
			
		</ui:style>

	<g:FocusPanel ui:field="focusPanel" styleName="{style.editableLabel}">
		<g:DeckPanel ui:field="deckPanel" styleName="{style.editableLabel}">
			<g:FlowPanel styleName="{style.visualizationPanel}">
				<g:HorizontalPanel width="100%" height="20px">
					<g:FocusPanel ui:field="detailsIcon" styleName="{style.detailsIcon}" />
					<g:cell width="100%">
						<g:SimplePanel styleName="{style.descriptionContainer}">
							<g:Label ui:field="descriptionLabel" styleName="{style.descriptionLabel} v-ellip"/>
						</g:SimplePanel>
					</g:cell>
					<g:cell width="1">
						<g:HTMLPanel ui:field="valuePanel" styleName="{style.value}">
							<t:FastLabel ui:field="inferedValueLabel" styleName="{style.valueLabel} {style.labelInfered}" />
							<t:FastLabel ui:field="declaredValueLabel" styleName="{style.valueLabel}" />
						</g:HTMLPanel>
					</g:cell>
					<g:cell width="1">
						<g:HTMLPanel ui:field="effortPanel" styleName="{style.effort}">
							<t:FastLabel ui:field="inferedEffortLabel" styleName="{style.effortLabel} {style.labelInfered}" />
							<t:FastLabel ui:field="declaredEffortLabel" styleName="{style.effortLabel}" />
						</g:HTMLPanel>
					</g:cell>
					<g:cell width="1">
						<t:FastLabel ui:field="progressLabel" styleName="{style.progressLabel} v-ellip" />
					</g:cell>
					<g:cell width="1">
						<g:HTMLPanel ui:field="releasePanel" styleName="{style.releasePanel}" >
						    <t:Tag ui:field="releaseTag" styleName="{style.tag}" />
						</g:HTMLPanel>
					</g:cell>
				</g:HorizontalPanel>
			</g:FlowPanel>
			<g:TextBox ui:field="editionBox" styleName="{style.textBoxDecoration} {style.editionBox}" />
		</g:DeckPanel>
	</g:FocusPanel>
</ui:UiBinder>