<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">

	<ui:style>
		.editableLabel {
			height: 15px;
			min-height: 15px;
		}
		
		.visualizationLabel {
			cursor: pointer;
			cursor: hand;
		}
		
		.visualizationPanel {
			display: inline;
		}
		
		.tag {
			margin-left: 5px;
			margin-top: -1px;
		}
	</ui:style>

	<g:FocusPanel ui:field="focusPanel" styleName="{style.editableLabel}">
		<g:DeckPanel ui:field="deckPanel">
			<g:HorizontalPanel styleName="{style.visualizationPanel}">
				<g:Label ui:field="descriptionLabel" styleName="{style.visualizationLabel}" />
				<t:Tag ui:field="releaseTag" styleName="{style.tag}" />
			</g:HorizontalPanel>
			<g:TextBox styleName="edit" ui:field="editionBox" />
		</g:DeckPanel>
	</g:FocusPanel>
</ui:UiBinder>