<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">

	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.scopetree.widgets.ScopeTreeItemWidget.Style">

			.editableLabel {
				position: relative;
				height: 15px;
				min-height: 15px;
				outline: none;
				font-size: FONT_SIZE_SMALL;
				color: #b7b7b7;
			}
			
			.done {
				opacity: 0.3;
			}
			
			.visualizationPanel {
				height: 20px;
				min-height: 20px;
			}
			
			.descriptionLabel {
				cursor: pointer;
				
				color: #333333;
			}
			
			.effort {
				position: relative;
				width: 80px;
				height: 20px;
				overflow: hidden;
				margin-left: 4px;
				margin-right: 4px;
				padding-left: 3px;
				padding-right: 3px;
				vertical-align: super;
				font-size: smaller;
				cursor: default;
				-moz-user-select: none;
				-khtml-user-select: none;
				user-select: none;
			}
            
            .effortLabel {
                display: inline;
            }
            			
			.value {
				position: relative;
				width: 80px;
				height: 20px;
				overflow: hidden;
				margin-left: 4px;
				margin-right: 4px;
				padding-left: 3px;
				padding-right: 3px;
				vertical-align: super;
				font-size: smaller;
				cursor: default;
				-moz-user-select: none;
				-khtml-user-select: none;
				user-select: none;
				z-index: 1;
			}
			
			.valueLabel {
				display: inline;
			}
			
			.labelInfered {
				color: #9199cf;
			}
			
			.labelStriped {
				text-decoration: line-through;
				color: #b7b7b7;
				text-shadow: none;
			}
			
			.scope {
				position: absolute;
                top: 0px;
                bottom: 0px;
                left: 0px;
                right: 0px;
                display: block;
			}
			
			.releasePanel {
                position: relative;
                width: 120px;
				overflow: hidden;				
                text-align: right;
                height: 20px;
			}
			
			.tag {
				position: absolute;
				right: 0px;
			}

			.progressLabel {
				position: relative;
				width: 80px;
				height: 20px;
				font-size: small;
				font-stretch: expanded;
			}
			.editionBox {
			}
			
			.visualizationPanel > table > tbody > tr > td:first-child {
				position: relative;
			}
		</ui:style>

	<g:FocusPanel ui:field="focusPanel" styleName="{style.editableLabel}">
		<g:DeckPanel ui:field="deckPanel" styleName="{style.editableLabel}">
			<g:FlowPanel styleName="{style.visualizationPanel}">
				<g:HorizontalPanel width="100%">
					<g:cell width="*">
						<g:Label ui:field="descriptionLabel" styleName="{style.descriptionLabel} v-ellip"/>
					</g:cell>
					<g:cell width="1">
						<g:HTMLPanel ui:field="valuePanel" styleName="{style.value}">
							<t:FastLabel ui:field="inferedValueLabel" styleName="{style.valueLabel} {style.labelInfered}" />
							<t:FastLabel ui:field="declaredValueLabel" styleName="{style.valueLabel}" />
						</g:HTMLPanel>
					</g:cell>
					<g:cell width="1">
						<g:HTMLPanel ui:field="effortPanel" styleName="{style.effort}">
							<t:FastLabel ui:field="inferedEffortLabel" styleName="{style.effortLabel} {style.labelInfered}" />
							<t:FastLabel ui:field="declaredEffortLabel" styleName="{style.effortLabel}" />
						</g:HTMLPanel>
					</g:cell>
					<g:cell width="1">
						<t:FastLabel ui:field="progressLabel" styleName="{style.progressLabel} v-ellip" />
					</g:cell>
					<g:cell width="1">
						<g:HTMLPanel ui:field="releasePanel" styleName="{style.releasePanel}" >
						    <t:Tag ui:field="releaseTag" styleName="{style.tag}" />
						</g:HTMLPanel>
					</g:cell>
				</g:HorizontalPanel>
			</g:FlowPanel>
			<g:TextBox ui:field="editionBox" styleName="{style.editionBox}" />
		</g:DeckPanel>
	</g:FocusPanel>
</ui:UiBinder>