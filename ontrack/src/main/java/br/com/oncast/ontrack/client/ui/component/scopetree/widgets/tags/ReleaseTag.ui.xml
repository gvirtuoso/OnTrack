<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.tagLabel {
			padding: 2px;
			border: 2px;
			margin-left: 10px;
			margin-top: 2px;
			font-size: 10px;

			background-color: red;
			color: white;
			border-radius: 5px;
			-moz-border-radius: 5px;
			-webkit-border-radius: 5px;
			opacity: 0.6;
		}
		
		.tagLabel:hover {
			opacity: 0.8;
		}
	</ui:style>

	<g:HTMLPanel>
		<g:Label styleName="{style.tagLabel}" ui:field="tagLabel" />
	</g:HTMLPanel>
</ui:UiBinder> 