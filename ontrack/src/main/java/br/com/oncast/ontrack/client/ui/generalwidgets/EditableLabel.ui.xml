<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../style/default.css" >
	
		.editableLabel {
			position: relative;
		}
		
		.container {
			height: 100%;
		}
		
		.editionBox {
			margin: -1px;
			padding: 0px;
			
			font-family: inherit;
			font-size: inherit;
		}
		
	</ui:style>

		<g:DeckPanel ui:field="deckPanel" addStyleNames="{style.editableLabel}">
			<g:Label ui:field="visualizationLabel" addStyleNames="{style.container} v-ellip" />
			<g:TextBox ui:field="editionBox" addStyleNames="{style.textBoxDecoration} {style.container} {style.editionBox}" />
		</g:DeckPanel>
	
</ui:UiBinder> 