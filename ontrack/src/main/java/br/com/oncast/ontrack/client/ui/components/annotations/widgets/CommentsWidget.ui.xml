<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:aw="urn:import:br.com.oncast.ontrack.client.ui.components.annotations.widgets">
	
	<ui:style>
	
		.container {
			position: relative;
			width: 100%;
			height: auto;
			
			overflow-y: auto;
			overflow-x: hidden;
		}
	
		.separator {
			margin: -14px -15px 10px -15px;
		}
		
		.spacer {
			height: 10px;
			display: block;
		}
		
	</ui:style>
	
	<g:FocusPanel>
		<g:VerticalPanel height="100%" width="100%">
			<misc:Separator styleName="{style.separator}"/>
			<aw:ExtendableTextArea ui:field="newCommentText" defaultHeight="26px" maxHeight="100px" helpText="Type to comment this topic" />
			<g:SimplePanel ui:field="separator" styleName="{style.spacer}"/>
			<g:cell height="100%">
				<g:FocusPanel styleName="{style.container}">
					<misc:VerticalModelWidgetContainer ui:field="commentsWidgetContainer"/>
				</g:FocusPanel>
			</g:cell>
		</g:VerticalPanel>
	</g:FocusPanel>
</ui:UiBinder> 