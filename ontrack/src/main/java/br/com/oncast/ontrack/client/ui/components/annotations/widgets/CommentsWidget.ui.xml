<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:aw="urn:import:br.com.oncast.ontrack.client.ui.components.annotations.widgets">
	
	<ui:style>
	
		.container {
			position: relative;
			width: 100%;
			height: auto;
			
			overflow-y: auto;
			overflow-x: hidden;
		}
	
		.separator {
			margin: -5px -15px 10px -15px;
		}
		
		.spacer {
			height: 10px;
			display: block;
		}
		
		.annotations {
			position: absolute;
			top: 0px;
			right: 0px;
			bottom: 0px;
			left: 0px;
			
			overflow-y: auto;
			overflow-x: hidden;
		}
		
		.loadingIndicator {
            margin: 0px auto;
            padding: 15px;
            
            background: white;
            border: 2px solid #eaeaea;
            border-radius: 50%;
		}

	</ui:style>
	
	<g:FocusPanel ui:field="focusPanel">
		<g:VerticalPanel height="100%" width="100%">
			<misc:Separator styleName="{style.separator}"/>
			<aw:ExtendableTextArea ui:field="newAnnotationText" defaultHeight="26px" maxHeight="100px" helpText="Type to comment this topic" />
			<g:SimplePanel styleName="{style.spacer}"/>
			<g:cell height="100%">
				<g:FocusPanel styleName="{style.container}">
					<g:DeckPanel ui:field="loadingDeck" >
       					<g:Image url="resources/image/misc/loading.gif" styleName="{style.loadingIndicator}" />
						<misc:VerticalModelWidgetContainer ui:field="annotationsWidgetContainer"/>
					</g:DeckPanel>
				</g:FocusPanel>
			</g:cell>
			<g:FocusPanel visible="false" ui:field="uploadIcon"/>
			<aw:UploadWidget ui:field="uploadWidget" />
		</g:VerticalPanel>
	</g:FocusPanel>
</ui:UiBinder> 