<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p="urn:import:br.com.oncast.ontrack.client.ui.places.progress.details"
	xmlns:gw='urn:import:br.com.oncast.ontrack.client.ui.generalwidgets'>
	
	<ui:image field="description" src="../../../generalwidgets/description-grey.png" />
	<ui:image field="checklist" src="../../../generalwidgets/check-grey.png" />
	<ui:image field="tasks" src="../../../generalwidgets/postit-grey.png" />
	
	<ui:style src="../../../style/default.css">
	
		.root {
			position: relative;
		}
		
		.detailMenu {
			position: absolute;
			top: 0px;
			left: 0px;
			width: 40px;
			bottom: 0px;
			
			box-shadow: inset 0px 0px 10px #999;
			background: COLOR_GRAY_LIGHTEST;
			overflow: hidden;
		}
	
		.detailDeck {
			position: absolute;
			top: 0px;
			left: 40px;
			right: 0px;
			bottom: 0px;
		}
	
		.descriptionPanel {
			background-color: white;
			overflow: auto;
			overflow-x: hidden; 
		}
		
		@sprite .descriptionTab {
			gwt-image: 'description';
		}
		
		@sprite .checklistTab {
			gwt-image: 'checklist';
		}
		
		@sprite .tasksTab {
			gwt-image: 'tasks';
		}
		
		.tabButton {
			width: 40px;
			height: 40px;
			border: none;
			
			background-size: 30px;
			background-position: center;
			
			margin-bottom: 1px;
			box-shadow: inset 0px 0px 10px #999
		}
		
	</ui:style>
	<g:HTMLPanel styleName="{style.root}">
		<p:ProgressDetailMenuWidget ui:field="progressMenu" styleName="{style.detailMenu}">
			<g:Button styleName="{style.tabButton} {style.descriptionTab}" title="Description">
				<ui:attribute name="title" description="description kanban tabButton" />
			</g:Button>
			<g:Button styleName="{style.tabButton} {style.checklistTab}" title="Checklists">
				<ui:attribute name="title" description="checklists kanban tabButton" />
			</g:Button>
			<g:Button styleName="{style.tabButton} {style.tasksTab}"  title="Task management">
				<ui:attribute name="title" description="task management kanban tabButton" />
			</g:Button>
		</p:ProgressDetailMenuWidget>
		<g:DeckPanel ui:field="deckPanel" styleName="{style.detailDeck}">
			<gw:DescriptionWidget ui:field="descriptionWidget" styleName="{style.descriptionPanel}"/>
			<gw:CheckListWidget ui:field="checklistWidget" styleName="{style.descriptionPanel}"/>
			<gw:TasksManagementWidget ui:field="tasksWidget" styleName="{style.descriptionPanel}"/>
		</g:DeckPanel>
	</g:HTMLPanel>
</ui:UiBinder> 