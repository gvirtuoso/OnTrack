<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:layout="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:aw="urn:import:br.com.oncast.ontrack.client.ui.components.annotations.widgets"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">
	
	<ui:image field="closeImage" src="../releasepanel/widgets/chart/stats-close.png" />
	<ui:style src="../../style/default.css" >

		.rootPanel {
			position: absolute;
			top: 40px;
			right: 40px;
			bottom: 40px;
			left: 40px;
			opacity: 0;
		}

		.rootContainer {
			position: absolute;
			top: 0px;
			right: 0px;
			bottom: 0px;
			left: 0px;
			min-width: 720px;
			
			color: COLOR_MENUBOX_TEXT;
		}
		
		@sprite .closeIcon {
			gwt-image: 'closeImage';
			position: absolute;
			top: -9.5px;
			right: -9.5px;
			cursor: pointer;
			z-index: 10;
		}
		
		.subjectTitle {
			text-transform: uppercase;
			padding: 8px;
			border: 1px solid #C2C2C2;
			background: lightGrey;
			-webkit-box-shadow: inset 0 1px 0 0 #E9E9E9, 0 2px 6px #E1E1E1;
			-moz-box-shadow: inset 0 1px 0 0 #e9e9e9, 0 2px 6px #e1e1e1;
			box-shadow: inset 0 1px 0 0 #E9E9E9, 0 2px 6px #E1E1E1;
			color: #777;
			font-family: FONT_DEFAULT;
			font-size: 12pt;
			text-shadow: 1px 1px 0 #EDEDED;
			margin-bottom: 5px;
		}

		.header {
			position: absolute;
			top: 0px;
			right: 0px;
			left: 0px;
			height: 25px;

			text-transform: uppercase;
			padding: 16px 8px 7px 17px;
			-webkit-box-shadow: inset 0 1px 0 0 #E9E9E9, 0 2px 6px #E1E1E1;
			-moz-box-shadow: inset 0 1px 0 0 #e9e9e9, 0 2px 6px #e1e1e1;
			box-shadow: inset 0 1px 0 0 #E9E9E9, 0 2px 6px #E1E1E1;
			font-family: FONT_DEFAULT;
			font-size: 12pt;
			font-weight: bold;
			text-shadow: 1px -1px 1px #F6D792;
			color: #960;
		}		
		
		.clickable:hover {
			cursor: pointer;
		}
		
		.hseparator {
			position: absolute;
			top: 46px;
			right: 0px;
			left: 0px;
			height: 2px;
		}
		
		.contentContainer {
			position: absolute;
			top: 48px;
			right: 0px;
			left: 0px;
			bottom: 0px;
			overflow: auto;
			overflow-x: hidden; 
		}
		
		.flowContainer {
			position: absolute;
			top: 0px;
			right: 400px;
			left: 0px;
			bottom: 0px;
			
			background-color: white;
			border-right: 1px solid COLOR_GRAY_LIGHTEST;
		}
				
		.rightPanel {
			position: fixed;
			top: 88px;
			right: 64px;
			width: 380px;
		}
		
		.description {
			padding: POPUP_PADDING;
		}
		
		.detailWidget {
			padding: POPUP_PADDING;
		}
		
		.annotationsPanel {
			padding: POPUP_PADDING;
		}
		
		.checklist {
			padding: 10px;
		}
		
		.noMargin {
			margin: 0px;
		}
		
	</ui:style>
        

	<g:FocusPanel ui:field="rootPanel" styleName="{style.rootPanel}">
		<g:HTMLPanel ui:field="container" styleName="{style.rootContainer} {style.popupContainer}">
			<g:FocusPanel ui:field="closeIcon" styleName="{style.closeIcon}"/>
				<misc:EditableLabel ui:field="subjectTitle" styleName="{style.header} {style.clickable} {style.colorMenuBackgroundGradient}" />
				<misc:Separator styleName="{style.hseparator} {style.noMargin}"/>
				<g:HTMLPanel styleName="{style.contentContainer}">
					<g:HTMLPanel styleName="{style.flowContainer}">

							<g:Label styleName="{style.subjectTitle}">
								<ui:msg description="Description">Description</ui:msg>
							</g:Label>
							<misc:DescriptionRichTextLabel ui:field="descriptionLabel" styleName="{style.description}" />

							<g:Label styleName="{style.subjectTitle}">
								<ui:msg description="Checklists">Checklists</ui:msg>
							</g:Label>
							<aw:ChecklistsContainerWidget ui:field="checklist" styleName="{style.checklist}"/>

							<g:Label styleName="{style.subjectTitle}">
								<ui:msg description="Annotations">Annotations</ui:msg>
							</g:Label>
							<aw:AnnotationsWidget ui:field="annotations" styleName="{style.annotationsPanel}" />

					</g:HTMLPanel>
					<g:FocusPanel styleName="{style.rightPanel}">
							<aw:SubjectDetailWidget ui:field="subjectDetails" styleName="{style.detailWidget}" />
					</g:FocusPanel>
				</g:HTMLPanel>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 