<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:layout="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:aw="urn:import:br.com.oncast.ontrack.client.ui.components.annotations.widgets"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">
	
	<ui:style src="../../style/default.css">

		.rootPanel {
			position: absolute;
			top: 130px;
			right: 40px;
			left: 40px;
			height: 410px;
			opacity: 0;
		}

		.rootContainer {
			position: absolute;
			top: 0px;
			right: 0px;
			bottom: 0px;
			left: 0px;
			min-width: 720px;
			
			color: COLOR_MENUBOX_TEXT;
			background-color: #E0E1E2;
		}
		
		.closeIcon {
			color: COLOR_TEXT_PRIMARY;
			position: absolute;
			top: 11.5px;
			right: 12.5px;
			cursor: pointer;
			z-index: 10;
		}
		
		.subjectTitle {
			padding: 6px 0px 5px 11px;
			background: #717375;
			color: COLOR_TEXT_PRIMARY;
			font-family: FONT_DEFAULT;
			font-size: 10pt;
			margin-bottom: 5px;
		}

		.headerBar {
			position: absolute;
			top: 0px;
			right: 0px;
			left: 0px;
			height: 18px;

			text-transform: uppercase;
			padding: 10px 8px 11px 16px;
			font-family: FONT_DEFAULT;
			font-size: 14pt;
			color: #fff;
			background-color: #032340;
		}		
		
		.clickable:hover {
			cursor: pointer;
		}
		
		.scrollContainer {
			width: 100%;
			height: 100%;
		}
		
		.contentContainer {
			position: absolute;
			top: 40px;
			right: 0px;
			left: 0px;
			bottom: 0px;
			overflow: auto;
			overflow-x: hidden;
		}
		
		.flowContainer {
		}
				
		.rightPanel {
			width: 400px;
			vertical-align: top;
		}
		
		.rightPanel > div {
			margin-left: 0px;
			height: 100%;
		}
		
		.description {
			padding: POPUP_PADDING;
		}
		
		.annotationsPanel {
			padding: POPUP_PADDING;
		}
		
		.checklist {
			padding: 10px;
		}		
		
		.contentBlock {
			background: #C7C8CA;
			margin: 5px;
		}
		
	</ui:style>
        

	<g:FocusPanel ui:field="rootPanel" styleName="{style.rootPanel}">
		<g:HTMLPanel ui:field="container" styleName="{style.popupContainer} {style.rootContainer}">
			<g:FocusPanel ui:field="closeIcon" styleName="{style.closeIcon} icon-remove-circle icon-large"/>
				<misc:EditableLabel ui:field="subjectTitle" styleName="{style.headerBar} {style.clickable}" />
				<g:HTMLPanel styleName="{style.contentContainer}">
					<table class="{style.scrollContainer}" cellpadding="0" cellspacing="0">
						<tr>
							<td width="*">
								<div class="{style.flowContainer}">
									<div class="{style.contentBlock}">
										<g:Label styleName="{style.subjectTitle}">
											<ui:msg description="Description">Description</ui:msg>
										</g:Label>
										<misc:DescriptionRichTextLabel ui:field="descriptionLabel" styleName="{style.description}" />
									</div>
									<div class="{style.contentBlock}">
										<g:Label styleName="{style.subjectTitle}">
											<ui:msg description="Checklists">Checklists</ui:msg>
										</g:Label>
										<aw:ChecklistsContainerWidget ui:field="checklist" styleName="{style.checklist}"/>
									</div>
									<div class="{style.contentBlock}">
										<g:Label styleName="{style.subjectTitle}">
											<ui:msg description="Annotations">Annotations</ui:msg>
										</g:Label>
										<aw:AnnotationsWidget ui:field="annotations" styleName="{style.annotationsPanel}" />
									</div>
								</div>
							</td>
							<td class="{style.rightPanel}">
								<div class="{style.contentBlock}">
										<aw:SubjectDetailWidget ui:field="subjectDetails" />
								</div>
							</td>
						</tr>
					</table>
				</g:HTMLPanel>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 