<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:layout="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:aw="urn:import:br.com.oncast.ontrack.client.ui.components.annotations.widgets"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">
	
	<ui:image field="closeImage" src="../releasepanel/widgets/chart/stats-close.png" />
	<ui:style src="../../style/default.css" >

		.rootPanel {
			position: absolute;
			top: 40px;
			right: 40px;
			bottom: 40px;
			left: 40px;
		}
		
		@sprite .closeIcon {
			gwt-image: 'closeImage';
			position: absolute;
			top: -9.5px;
			right: -9.5px;
			cursor: pointer;
		}
		
		.rootContainer {
			height: 100%;
			width: 100%;
			min-width: 720px;
			
			color: COLOR_MENUBOX_TEXT;
		}
		
		.subjectTitle {
			text-transform: uppercase;
			padding: POPUP_PADDING;
		}
		
		.subjectTitle:hover {
			cursor: pointer;
		}
		
		.detailWidget {
			padding: POPUP_PADDING;
		}
		
		.annotationsPanel {
			height: 100%;
			min-width: 415px;
			
			padding: POPUP_PADDING;
			overflow-y: auto; 
		}
		
		.rightPanel {
			height: 100%;
			overflow-y: auto; 
		}
		
		.checklist {
			padding: 5px POPUP_PADDING;
		}
		
		.noMargin {
			margin: 0px;
		}
		
	</ui:style>
	
        

	<g:FocusPanel ui:field="rootPanel" styleName="{style.rootPanel}">
		<g:HTMLPanel ui:field="container" styleName="{style.rootContainer} {style.popupContainer}">
			<g:FocusPanel ui:field="closeIcon" styleName="{style.closeIcon}"/>
			<g:VerticalPanel height="100%" width="100%">
				<misc:EditableLabel ui:field="subjectTitle" styleName="{style.subjectTitle}" />
				<misc:Separator styleName="{style.noMargin}"/>
				<g:cell height="100%">
					<g:HorizontalPanel height="100%" width="100%">
						<g:cell width="62%">
							<aw:AnnotationsWidget ui:field="annotations" styleName="{style.annotationsPanel}" />
						</g:cell>
						<misc:Separator vertical="true"/>
						<g:cell width="38%">
							<g:FocusPanel styleName="{style.rightPanel}">
								<g:VerticalPanel width="100%">
									<aw:SubjectDetailWidget ui:field="subjectDetails" styleName="{style.detailWidget}" />
									<misc:Separator />
									<aw:ChecklistsContainerWidget ui:field="checklist" styleName="{style.checklist}"/>
									<misc:Separator />
								</g:VerticalPanel>
							</g:FocusPanel>
						</g:cell>
					</g:HorizontalPanel>
				</g:cell>
			</g:VerticalPanel>
		</g:HTMLPanel>
	</g:FocusPanel>
	
</ui:UiBinder> 