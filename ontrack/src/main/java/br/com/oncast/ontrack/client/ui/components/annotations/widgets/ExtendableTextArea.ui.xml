<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style src="../../../style/default.css">
	
		.expandPanel {
			position: relative;
			
			height: 100%;
			width: 100%;
			
			min-height: 26px;
		}
		
		.container {
			background-color: white;
			
			position: absolute;
			top: 0px;
			right: 0px;
			bottom: 0px;
			left: 0px;
			
			width: auto;
			height: auto;
		}
		
		.textArea {
			width: 100%;
			height: 100%;
			
			background: transparent;
			
			border: none;
			margin: 0px;
			padding: 0px;
			
			color: inherit;
			font: inherit;
		}
		
	</ui:style>
	<g:FocusPanel ui:field="focusPanel">
		<g:SimplePanel styleName="{style.expandPanel}">
			<g:HTMLPanel styleName="{style.textBoxDecoration} {style.container}">
				<g:TextArea ui:field="textArea" styleName="{style.textArea}"/>
			</g:HTMLPanel>
		</g:SimplePanel>
	</g:FocusPanel>
</ui:UiBinder> 