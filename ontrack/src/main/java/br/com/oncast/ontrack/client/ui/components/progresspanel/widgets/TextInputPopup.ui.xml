<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:layout="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout"
    xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style src="../../../style/default.css">
	
		.rootPanel {
			width: 200px;
		}
		
        .descriptionLabel {
        	font-family: FONT_DEFAULT;
        }
        
        .inputTextBox {
			margin-bottom: 5px;
		}

        .errorLabel {
            width: 100%;
            margin-top: 10px;
            margin-bottom: 0px;

            color: #cc3c29;
            font-family: FONT_DEFAULT;
            font-size: 13px;
            font-style: normal;
            font-variant: normal;
            font-weight: bold;
            height: 13px;
            line-height: 13px;
        }
        
	</ui:style>

    <layout:ApplicationPopupBoxContainer ui:field="rootPanel" styleName="{style.rootPanel}">
			<g:Label ui:field="descriptionLabel" styleName="{style.descriptionLabel}" />
			<misc:PaddedTextBox ui:field="inputTextBox" styleName="{style.inputTextBox}" />
			<g:Button text="Ok" ui:field="submitButton" styleName="{style.menuboxButton}" />
			<g:Label ui:field="errorMessageLabel" styleName="{style.errorLabel}" visible="false" />
	</layout:ApplicationPopupBoxContainer>

</ui:UiBinder> 