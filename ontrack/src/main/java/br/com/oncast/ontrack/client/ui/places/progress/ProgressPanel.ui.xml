<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:layout='urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout'
    xmlns:gw='urn:import:br.com.oncast.ontrack.client.ui.generalwidgets'
	xmlns:pp='urn:import:br.com.oncast.ontrack.client.ui.components.progresspanel'
	xmlns:rw='urn:import:br.com.oncast.ontrack.client.ui.components.releasepanel.widgets'
>

    <ui:data field="bgPixelImg" src="../../semitransparentPixel.png" />
	<ui:style src="../../style/default.css" type="br.com.oncast.ontrack.client.ui.places.progress.ProgressPanel.ProgressPanelStyle">
	
	   @url bgPixelUrl bgPixelImg;
		
		.kanbanPanel {
			position: absolute;
			top: 10px;
			left: 10px;
			right: 10px;
			bottom: 10px;
			overflow: auto;
			
			-webkit-box-shadow: POPUP_SHADOW;
		    -moz-box-shadow: POPUP_SHADOW;
		    box-shadow: POPUP_SHADOW;
		    border: POPUP_BORDER;
		    
		    background-image: bgPixelUrl;
		    background-repeat: repeat;
		}
		
		.kanbanContainer {
			position:relative;
			width: 100%;
			height: 100%;
		}
		
		.releasePanel {
			top: 35px;
			right: 0px;
			bottom: 0px;
			width: 400px;
			overflow: auto;
			overflow-x: hidden;
			padding: 10px;
		}
		
		.releaseContainer {
			position: relative;
			width: 410px;
			height: 100%;
		}
		
		.kanbanPanelOnDragTarget{
			background-color: COLOR_YELLOW;
		}
		
		.projectMembers {
			position: absolute;
			top: 2px;
			left: 10px;
			height: 40px;;
			width: 400px;
			overflow: hidden;
		}
		
	</ui:style>

    <layout:ApplicationMenuAndWidgetContainer ui:field="rootPanel">
    	<g:HorizontalPanel height="100%">
    		<g:FlowPanel>
				<gw:DraggableMembersListWidget ui:field="members" styleName="{style.projectMembers}"/>
				<g:ScrollPanel ui:field="releaseScroll" styleName="{style.releasePanel}">
					<rw:ReleasePanelWidget ui:field="releaseWidget" />
				</g:ScrollPanel>
			</g:FlowPanel>
			<g:cell width="100%">
				<g:SimplePanel styleName="{style.kanbanContainer}">
					<pp:KanbanPanel ui:field="kanbanPanel" addStyleNames="{style.kanbanPanel}" />
				</g:SimplePanel>
			</g:cell>
    	</g:HorizontalPanel>
   </layout:ApplicationMenuAndWidgetContainer>
</ui:UiBinder>