<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.tableStyle {
			border-collapse: collapse;
			display: inline-table;
			margin-right: 4px;
			margin-top: 3px;
			vertical-align: top;
		}
		.closeLabel {
			cursor: pointer;
			padding: 1px 4px;
		}
		.separator {
			width: 1px;
		}
		.tagLabel {
			padding-left: 4px;
			padding-right: 6px;
		}
		.redColor {
			padding-bottom: 1px;
			font: 9px verdana, arial, sans-serif;
			background-color: #CC0000;
			color: #FFE3E3;
		}
		.roundedLeft {
			-moz-border-radius-bottomleft: 3px 3px;
			border-bottom-left-radius: 3px 3px;
			-moz-border-radius-topleft: 3px 3px;
			border-bottom-top-radius: 3px 3px;
		}
		.roundedRight {
			-moz-border-radius-bottomright: 3px 3px;
			border-bottom-right-radius: 3px 3px;
			-moz-border-radius-topright: 3px 3px;
			border-top-right-radius: 3px 3px;
		}
	</ui:style>
	<g:HTML>
		<table cellpadding="0" class="{style.tableStyle}">
			<tbody>
				<tr>
					<td class="{style.redColor} {style.roundedLeft}">
						<g:Label styleName="{style.tagLabel}" ui:field="tagLabel" />
					</td>
					<td style="background-color: #ffe3e3" class="{style.separator}"></td>
					<td class="{style.redColor} {style.roundedRight}">
						<g:Label styleName="{style.closeLabel}" ui:field="closeLabel" />
					</td>
				</tr>
			</tbody>
		</table>
	</g:HTML>
</ui:UiBinder> 