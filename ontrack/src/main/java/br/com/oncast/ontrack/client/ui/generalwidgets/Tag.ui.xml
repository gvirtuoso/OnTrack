<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">

	<ui:image field="close" src="close-release.png"></ui:image>
	<ui:image field="leftBg" src="tag-release.png"></ui:image>
	<ui:style>
		.tag {
			width: 100%;
			height: 13px;
			
			border-collapse: collapse;
			vertical-align: top;
			
			font-size: 11px;
			color: #b5955c;
		}
		
		.container {
			width: 100%;
			height: 13px;
			position: relative;
		}

        .tagLabel {
			position: absolute;
			top: 0px;
			right: 0px;
			bottom: 0px;
			left: 0px;
	
            padding-left: 6px;
            padding-right: 2px;
            
			border-top: 1px solid #f7c559;
			border-bottom: 1px solid #f7c559;
			background-color: #fada9b;
			
			text-align: justify;
        }

		@sprite .closeLabel {
			gwt-image: 'close';
			background-position: center;

			cursor: pointer;

			height: 11px;
			width: 11px;

			background-color: #fada9b;

			border: 1px solid #f7c559;
			border-left: none;
		}
		
	</ui:style>
	
	<g:FocusPanel>
		<g:HorizontalPanel styleName="{style.tag}">
			<g:cell width="1">
				<g:Image resource="{leftBg}"/>
			</g:cell>
			<g:cell width="100%">
				<g:SimplePanel styleName="{style.container}">
					<t:FastLabel styleName="{style.tagLabel} v-ellip" ui:field="tagLabel" />
				</g:SimplePanel>
			</g:cell>
			<g:cell width="1">
				<g:FocusPanel ui:field="closeLabel" styleName="{style.closeLabel}"/>
			</g:cell>
		</g:HorizontalPanel>
	</g:FocusPanel>
</ui:UiBinder> 