<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.tag {
			display: inline-table;
			margin-right: 4px;
			margin-top: 3px;

			border-collapse: collapse;
			vertical-align: top;
		}

        .tagLabel {
            padding-left: 4px;
            padding-right: 6px;
        }

        .separator {
            width: 1px;
        }
		
		.closeLabel {
			padding: 1px 4px;
		}
		
		.clickable:hover {
			background: #777;
			cursor: pointer;
		}

		.bgColor {
			padding-bottom: 1px;

			font: 9px verdana, arial, sans-serif;
			background-color: #555;
			color: #FFE3E3;
		}

		.roundedLeft {
			-moz-border-radius-bottomleft: 3px 3px;
			border-bottom-left-radius: 3px 3px;
			-moz-border-radius-topleft: 3px 3px;
			border-bottom-top-radius: 3px 3px;
		}

		.roundedRight {
			-moz-border-radius-bottomright: 3px 3px;
			border-bottom-right-radius: 3px 3px;
			-moz-border-radius-topright: 3px 3px;
			border-top-right-radius: 3px 3px;
		}
	</ui:style>
	
	<g:HTMLPanel>
		<table cellpadding="0" class="{style.tag}">
			<tbody>
				<tr>
					<td class="{style.bgColor} {style.roundedLeft}">
						<g:Label styleName="{style.tagLabel}" ui:field="tagLabel" />
					</td>
					<td style="background-color: #ffe3e3" class="{style.separator}"></td>
					<td class="{style.bgColor} {style.roundedRight} {style.clickable}">
						<g:Label styleName="{style.closeLabel}" ui:field="closeLabel" />
					</td>
				</tr>
			</tbody>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 