<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">

	<ui:style>
			.panel {
				position: relative;
				border: 0px;
			}
			
			.menuImage {
				background: #dfe0e3 url("resources/image/releasePanel/arrow.png") no-repeat center;
				cursor: pointer;
                width: 18px;
                height: 18px;
                opacity: 0.2;
                display: block;
                
                -moz-border-radius: 2px;
                border-radius: 2px;
			}

            .menuImage:hover {
                background: #d4d5d9 url("resources/image/releasePanel/arrow.png") no-repeat center;
            	opacity: 1;
            }
            
			.menu {
                position: absolute;
                top: 10px;
                right: 0px;
                width: 150px;
				z-index: 2;

                border: 1px solid gray;
                -moz-box-shadow: 2px 2px 4px #888;
				-webkit-box-shadow: 2px 2px 4px #888;
				box-shadow: 2px 2px 4px #888;
			}
		</ui:style>

	<g:HTMLPanel styleName="{style.panel}">
		<g:Image styleName="{style.menuImage}" ui:field="menuImage" />
		<t:CommandMenu styleName="{style.menu}" ui:field="menu" />
	</g:HTMLPanel>
</ui:UiBinder> 