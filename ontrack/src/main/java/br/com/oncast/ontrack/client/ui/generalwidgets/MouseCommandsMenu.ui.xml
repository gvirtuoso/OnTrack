<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">

	<ui:style>
			.panel {
				position: relative;
			}
			
			.menuImage {
				background: #c5c5c5 url("resources/image/releasePanel/arrow.png") no-repeat center;
				border: 1px solid #999;
				cursor: pointer;
                width: 18px;
                height: 18px;
                opacity: 0.2;
			}

            .menuImage:hover {
            	opacity: 1;
            }
            
			.menu {
                position: absolute;
                top: 10px;
                right: 0px;
                width: 150px;
				z-index: 2;
			}
		</ui:style>

	<g:HTMLPanel styleName="{style.panel}">
		<g:Image styleName="{style.menuImage}" ui:field="menuImage" />
		<t:CommandMenu styleName="{style.menu}" ui:field="menu" />
	</g:HTMLPanel>
</ui:UiBinder> 