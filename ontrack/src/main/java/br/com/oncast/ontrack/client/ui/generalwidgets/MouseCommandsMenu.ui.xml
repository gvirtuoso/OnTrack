<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">

	<ui:style src="../style/default.css">
			.panel {
				border: 0px;
			}
			
			.menu {
                position: absolute;
                top: 0px;
                right: 0px;
                width: 160px;
				z-index: 2;
				border-bottom: none;
			}
			
		</ui:style>

	<g:HTMLPanel styleName="{style.panel}">
		<t:CommandMenu styleName="{style.popupContainer} {style.menu}" ui:field="menu" />
	</g:HTMLPanel>
</ui:UiBinder> 