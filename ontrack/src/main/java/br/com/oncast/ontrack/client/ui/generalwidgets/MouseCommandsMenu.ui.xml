<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">

	<ui:style>
			.panel {
				position: relative;
			}
			
			.menuButton {
				position : absolute;
				top:0px;
				bottom:0px;
				left:0px;
				right:0px;
				margin: 0px;
			}

			.menu {
                position: absolute;
                top: 3px;
                right: -2px;
				width: 150px;
				z-index: 10;

                color: black;
                background: white;

                border: 1px solid gray;
                box-shadow: 1px 1px 6px #d9dae1;
                -moz-box-shadow: 1px 1px 6px #d9dae1;
                -webkit-box-shadow: 1px 1px 6px #d9dae1;
			}
		</ui:style>

	<g:HTMLPanel styleName="{style.panel}">
		<g:Button styleName="{style.menuButton}" ui:field="button" />
		<t:CommandMenu styleName="{style.menu}" ui:field="menu" />
	</g:HTMLPanel>
</ui:UiBinder> 