<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">

<ui:style src="../../../../style/default.css">

	.rootPanel {
		overflow: visible;

		position: relative;
		width: auto;
		height: auto;
	}
	
	.container {
		padding: 10px 8px;
		-webkit-transform: matrix(1,0,-0.5,1,0,0);
		background: COLOR_BORDER_MENUBAR;
		height: 18px;
		padding-left: 45px;
	}
	
	.leftBg {
		position: absolute;
		top: 0px;
		left: -10px;
		width: 20px;
		bottom: 0px;
		
		background: COLOR_BORDER_MENUBAR;
	}

	.searchIcon {
		position: absolute;
		left: 22px;
	
		-webkit-transform: matrix(1,0,0.5,1,0,0);

		font-family: FONT_ICON_FILL;
		font-size: 22px;
		color: COLOR_TEXT_MENUBAR;

		cursor: pointer;
	}
	
	.searchIcon:before {
		content: '\e074'
	}

	.filterArea {
		-webkit-transform: matrix(1,0,0.5,1,0,0);
		width: 100%;
		
		background: transparent;
		color: COLOR_TEXT_MENUBAR;
		
		font-size: FONT_SIZE_SMALL;
		
		outline: none;
		border: none;
		padding: 0px;
		margin: 0px;
	}
	
	.scrollpanel {
		max-height: 275px;
	}
	
	.resultContainer {
		position: absolute;
		top: 37px;
		left: 0px;
		right: 0px;
		
		box-shadow: SHADOW_SECONDARY;
	}
	
	.resultInfoContainer {
		background: COLOR_BORDER_MENUBAR;
		padding: 17px 12px;
		font-style: italic;
		font-size: 10pt;
		color: COLOR_BACKGROUND_HEADER;
		box-shadow: SHADOW_INSET_SECONDARY;
	}
	
</ui:style>


	<g:FocusPanel ui:field="focusPanel">
		<g:HTMLPanel ui:field="rootPanel" styleName="{style.rootPanel}" >
			<g:SimplePanel styleName="{style.leftBg}"/>
			<g:HTMLPanel styleName="{style.container}" >
				<g:Label ui:field="searchIcon" styleName="{style.searchIcon} {style.flip}"/>
				<g:TextBox ui:field="filterArea" styleName="{style.filterArea}" />
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="result" styleName="{style.resultContainer}">
				<g:SimplePanel styleName="{style.resultInfoContainer}">
					<g:Label ui:field="resultInfo"/>
				</g:SimplePanel>
				<g:ScrollPanel ui:field="scrollPanel" styleName="{style.scrollpanel}">
					<t:CommandMenu ui:field="menu" />
				</g:ScrollPanel>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:FocusPanel>

</ui:UiBinder> 