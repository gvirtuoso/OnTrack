<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">

	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.appmenu.widgets.NotificationWidget.NotificationWidgetStyle">

			.rootPanel {
				position: relative;
				width: 100%;
				color : #666;

				margin-bottom: 10px;
			}
			
			.image{
				width: 40px;
				height: 40px;
				margin-right: 10px;
				margin: 0px 5px;
			}
			
			.container {
				margin-bottom: 1px;
			}
			
			.userName {
				margin-left: 5px;
			}
			
			.timestamp {
				text-align: right;
				margin: 5px 5px -5px 0px;
				
				font-size: small;
				font-style: italic;
			}
			
			.inline {
				display: inline;
			}
			
			.cell {
				position: absolute;
				width: 210px;
				vertical-alignment: middle;
			}
			
			.impediment {
				border-left: OPEN_IMPEDIMENT_BORDER;
				margin-left: -5px;
			}

			.impedimentSolved {
				border-left: SOLVED_IMPEDIMENT_BORDER;
				margin-left: -5px;
			}

			.normal {}
			
			.read {
				opacity: 0.5;
				color: #999;
			}

		</ui:style>

	<g:HTMLPanel styleName="{style.rootPanel}">
		<g:HorizontalPanel ui:field="container" styleName="{style.container}">
			<g:Image ui:field="userIcon" styleName="{style.image}" />
			<g:cell styleName="{style.cell}">
				<g:HTMLPanel styleName="{style.inline}">
					<g:Label ui:field="user" styleName="{style.inline}"/>
					<g:InlineHTML ui:field="notificationMessage" styleName="{style.inline}" />
					<g:Label ui:field="timestamp"  styleName="{style.timestamp}"/>
				</g:HTMLPanel>
			</g:cell>
		</g:HorizontalPanel>
		<t:Separator />
	</g:HTMLPanel>
</ui:UiBinder> 	
