<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.panel {
			position: relative;
			width: 100%;
			height: 20px;
			margin: 1px;
			padding-left: 5px;
			padding-top: 2px;

			border: 1px solid transparent;
			background: #cdcfda;
		}
		
		.panel:hover {
			border: 1px solid #acafc6;
			background-color: #c3c6d5;
		}
		
		.descriptionLabel {
			position: absolute;
			top: 0px;
			bottom: 0px;
			left: 0px;
			right: 100px;
			padding-right: 5px;
			padding-left: 5px;
			
			overflow: hidden;
		}
		
		.progressLabel {
			position: absolute;
			top: 0px;
			bottom: 0px;
			right: 0px;
			width: 90px;
			padding-right: 5px;
			padding-left: 5px;
			
			color: #A5A5A5;
		}

	</ui:style>

	<g:HorizontalPanel styleName="{style.panel}">
		<g:Label ui:field="descriptionLabel" styleName="{style.descriptionLabel}" />
		<g:Label ui:field="progressLabel" styleName="{style.progressLabel}" />
	</g:HorizontalPanel>
</ui:UiBinder> 