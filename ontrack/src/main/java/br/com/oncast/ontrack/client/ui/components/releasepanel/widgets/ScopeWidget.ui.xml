<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">
	
	<ui:image field="draggableImage" src="bg-move-scope.png"/>
	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.releasepanel.widgets.ScopeWidget.ScopeWidgetStyle">
	
		.panel {
			position: relative;
			margin-top: -1px;

			background: COLOR_MENUBOX_BACKGROUND;
			
			color: COLOR_MENUBOX_TEXT;
			font-family: FONT_DEFAULT;

			border: SCOPE_WIDGET_BORDER;
			
		}
		
		.panelDone {
			color: #ccc;
		}
		
		.panel:hover {
			background-color: COLOR_RELEASE_WIDGET_HEADER_BACKGROUND_CLOSED;
		}

	    .internalPanel {
	        position: relative;
	        height: 100%;
	        width: 100%;
	    }
		
		.descriptionLabel {
			padding: 10px;
		}
		
		.draggable {
			cursor: move;
			border-right: RELEASE_WIDGET_BORDER;
			height: 100%;
		}
		
		.draggableImage {
			margin: 6px 2px 0px 2px;
		}
		
	</ui:style>

	<g:FocusPanel ui:field="panel" styleName="{style.panel}">
	   <g:HorizontalPanel styleName="{style.internalPanel}" verticalAlignment="middle">
	   		<g:cell width="1">
				<g:FocusPanel ui:field="draggableAnchor" styleName="{style.draggable}">
					<g:Image resource="{draggableImage}" styleName="{style.draggableImage}"/>
				</g:FocusPanel>
	   		</g:cell>
	   		<g:cell width="*">
				<g:Label ui:field="descriptionLabel" styleName="{style.descriptionLabel}" />
	   		</g:cell>
		</g:HorizontalPanel>
	</g:FocusPanel>
</ui:UiBinder> 