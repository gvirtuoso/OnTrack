<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">
	
	<ui:style>
		.panel {
			position: relative;
			min-height: 20px;
			margin: 1px;
			border: 1px solid #cfc2dc;
			background: #cdcfda;
			padding-top: 4px;
			padding-bottom: 4px;
		}
		
		.panel:hover {
			border: 1px solid #acafc6;
			background-color: #c3c6d5;
		}

	    .internalPanel {
	        position: relative;
            top: 0px;
            bottom: 0px;
            left: 0px;
            right: 0px;
	    }
		
		.descriptionLabel {
			position: relative;
			top: 0px;
			bottom: 0px;
			left: 0px;
			margin-right: 100px;
			padding-right: 5px;
			padding-left: 8px;
			overflow: visible;
			overflow-x: visible;
			overflow-y: hidden;
			
			font-size: 12px;
			font-stretch: extra-expanded;
			line-height: 120%;
			color: #555;
		}
		
		.progressLabel {
			position: absolute;
			top: 0px;
			bottom: 0px;
			right: 25px;
			width: 70px;
			padding-right: 5px;
			padding-left: 5px;
			color: #A5A5A5;
            overflow: visible;
            overflow-x: visible;
            overflow-y: hidden;
            
            text-align: center;
            font-size: 11px;
		}
		
		.mouseActionsMenu {
			position: absolute;
			top: 0px;
			right: 5px;
		}
	</ui:style>

	<g:FocusPanel ui:field="panel" styleName="{style.panel}">
	   <g:FlowPanel styleName="{style.internalPanel}">
		<g:Label ui:field="descriptionLabel" styleName="{style.descriptionLabel}" />
		<g:Label ui:field="progressLabel" styleName="{style.progressLabel}" />
		<t:MouseCommandsMenu ui:field="mouseActionsMenu" styleName="{style.mouseActionsMenu}" />
		</g:FlowPanel>
	</g:FocusPanel>
</ui:UiBinder> 