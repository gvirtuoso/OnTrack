<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">
	
	<ui:style src="../style/default.css">
	
		.defaultLabel {
			font-family: inherit;
			font-size: inherit;
			color: inherit;
		}
		
		.defaultLabel {
			position: absolute;
			cursor: default;
			left: 1px;
			right: 1px;
			top: 0px;
			margin: TEXTBOX_PADDING;

			opacity: 0.5;	
		}
	</ui:style>
	<misc:PaddedTextBox ui:field="textBox">
		<g:Label ui:field="defaultText" styleName="{style.defaultLabel}"/>
	</misc:PaddedTextBox>
</ui:UiBinder> 