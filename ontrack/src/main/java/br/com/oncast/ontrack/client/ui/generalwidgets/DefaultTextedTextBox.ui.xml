<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style src="../style/default.css">
	
		.container {
			position: relative;
			width: auto;
		}
		
		.textBox, .defaultLabel {
			font-family: inherit;
			font-size: inherit;
			color: inherit;
		}
		
		.textBox {
			width: 100%;

			background: transparent;
			border: none;
			padding: 0px;
			margin: 0px;
		}
		
		.defaultLabel {
			position: absolute;
			cursor: default;
			left: 1px;
			right: 1px;
			top: 0px;
			margin: TEXTBOX_PADDING;

			opacity: 0.5;			
		}
	</ui:style>
	<g:FocusPanel ui:field="focusPanel">
		<g:HTMLPanel styleName="{style.textBoxDecoration} {style.container}">
			<g:TextBox ui:field="textBox" styleName="{style.textBox}"/>
			<g:Label ui:field="defaultText" styleName="{style.defaultLabel}"/>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 