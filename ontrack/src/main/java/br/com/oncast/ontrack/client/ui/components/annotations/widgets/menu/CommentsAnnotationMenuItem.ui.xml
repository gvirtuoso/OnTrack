<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">
	
	<ui:style>
	
		.icon:HOVER {
			opacity: 1;
		}
		
		.icon {
			opacity: 0.7;
			font-size: 14px;
			cursor: pointer;
		}
		
		.label {
			margin-right: 5px;
			font-weight: bold;
			cursor: default;
			font-size: 11px;
		}
		
		.item {
			display: inline-block;
		}
		
	</ui:style>
	
	<g:HTMLPanel styleName="{style.item}">
		<g:FocusPanel ui:field="icon" styleName="{style.item} {style.icon} icon-comment" title="Toggle Comments">
			<ui:attribute name="title" description="toggle comments hint text" />
		</g:FocusPanel>
		<g:Label ui:field="label" styleName="{style.item} {style.label}"/>
	</g:HTMLPanel>
</ui:UiBinder> 