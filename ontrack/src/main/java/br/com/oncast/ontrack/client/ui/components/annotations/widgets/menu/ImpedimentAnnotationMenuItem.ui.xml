<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">
	
	<ui:image field="iconImg" src="../open_impediment.png"></ui:image>
	<ui:style>
	
		.icon:HOVER {
			opacity: 1;
		}
		
		@sprite .icon {
			gwt-image: 'iconImg';
			opacity: 0.35;
			
			background-size: 12px 12px;
			width: 12px;
			height: 12px;
			
			margin-bottom: -1px;
			margin-right: 5px;
			
			cursor: pointer;
		}
		
		.item {
			display: inline-block;
		}
		
	</ui:style>
	
	<g:FocusPanel ui:field="icon" title="Mark as Impediment" styleName="{style.item} {style.icon}">
		<ui:attribute name="title" description="mark as impediment hint text" />
	</g:FocusPanel>
</ui:UiBinder> 