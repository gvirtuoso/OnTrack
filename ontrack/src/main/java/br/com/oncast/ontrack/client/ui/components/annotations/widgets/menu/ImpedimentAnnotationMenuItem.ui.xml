<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">
	
	<ui:style src="../../../../style/default.css">
	
		.icon:HOVER {
			opacity: 1;
		}
		
		.icon {
			opacity: 0.7;
			font-size: 14px;
			cursor: pointer;
			color: COLOR_ERROR_PRIMARY;
			display: inline-block;
			margin-right: 5px;
		}
		
	</ui:style>
	
	<g:FocusPanel ui:field="icon" title="Mark as Impediment" styleName="{style.icon} icon-flag">
		<ui:attribute name="title" description="mark as impediment hint text" />
	</g:FocusPanel>
</ui:UiBinder> 