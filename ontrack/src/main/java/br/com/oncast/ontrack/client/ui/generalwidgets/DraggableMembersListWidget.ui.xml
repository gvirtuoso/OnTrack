<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gw='urn:import:br.com.oncast.ontrack.client.ui.generalwidgets'>
	
	<ui:image field="sliderLeft" src="../places/planning/slider-left.png"/>
	<ui:image field="sliderRight" src="../places/planning/slider-right.png"/>
	<ui:style>
	
	.root {
		position: relative;
	}
	
	@sprite .left {
		gwt-image: 'sliderLeft';
		background-size: 16px;
		background-position: -4px 11px;
		background-color: #FAFAFA;
		
		position: absolute;
		left: 0px;
		top: 0px;
		width: 8px;
		height: 38px;

		border-radius: 3px 0px 0px 3px;
		border: 1px solid #999;
		
		opacity: 0.5;
	}
	
	@sprite .right {
		gwt-image: 'sliderRight';
		background-size: 16px;
		background-position: -4px 11px;
		background-color: #FAFAFA;
		
		position: absolute;
		right: 0px;
		top: 0px;
		width: 8px;
		height: 38px;

		border-radius: 0px 3px 3px 0px;
		border: 1px solid #999;
		
		opacity: 0.5;
	}
	
	.container {
		position: absolute;
		top: 0px;
		bottom: 0px;
		left: 12px;
		right: 12px;
		
		overflow: hidden;
	}
		
	</ui:style>
	
	<g:HTMLPanel styleName="{style.root}">
		<g:FocusPanel ui:field="left" styleName="{style.left}"/>
		<g:HTMLPanel ui:field="scroll" styleName="{style.container}">
			<gw:ModelWidgetContainer ui:field="users" width="auto"/>
		</g:HTMLPanel>
		<g:FocusPanel ui:field="right" styleName="{style.right}"/>
	</g:HTMLPanel>
</ui:UiBinder> 