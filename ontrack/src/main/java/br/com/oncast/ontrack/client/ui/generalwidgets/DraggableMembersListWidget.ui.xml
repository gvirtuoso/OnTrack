<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gw='urn:import:br.com.oncast.ontrack.client.ui.generalwidgets'>
	
	<ui:image field="sliderLeft" src="../places/planning/slider-left.png"/>
	<ui:image field="sliderRight" src="../places/planning/slider-right.png"/>
	<ui:style src="../style/default.css">
	
	.root {
		position: relative;
		width: 100%;
		height: 100%;
	}
	
	@sprite .left {
		gwt-image: 'sliderLeft';
		left: 0px;
	}
	
	@sprite .right {
		gwt-image: 'sliderRight';
		right: 0px;
	}
	
	.left, .right {
		background-size: 16px;
		background-position: center;
		
		position: absolute;
		right: 0px;
		top: 0px;
		width: 15px;
		height: 44px;

		opacity: 0.5;
	}
	
	.container {
		position: absolute;
		top: 0px;
		bottom: 0px;
		left: 12px;
		right: 12px;
		
		overflow: hidden;
	}
		
	</ui:style>
	
	<g:FocusPanel>
		<g:HTMLPanel styleName="{style.root} {style.header}">
			<g:FocusPanel ui:field="left" styleName="{style.left}"/>
			<g:HTMLPanel ui:field="scroll" styleName="{style.container}">
				<gw:ModelWidgetContainer ui:field="users" width="auto"/>
			</g:HTMLPanel>
			<g:FocusPanel ui:field="right" styleName="{style.right}"/>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 