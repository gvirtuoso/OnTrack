<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">

<ui:style>

	.rootPanel {
		position: relative;
		
		background-color: #FFF;

        border: 1px solid gray;
        -moz-box-shadow: 2px 2px 4px #888;
        -webkit-box-shadow: 2px 2px 4px #888;
        box-shadow: 2px 2px 4px #888;
	}

	.filterArea {
		position: absolute;
		top: 3px;
		left: 2px;
		right: 2px;
		font-size: 14px;
		font-weight: normal;
		padding-left: 2px;
		padding-right: 20px;
		
		background: url("resources/image/filtrableCommandMenu/search-icon.gif") no-repeat top right;
		outline: none;
		border: 0px;
	}
	
	.separator {
		position: absolute;
		top: 28px;
		left: 3px;
		right: 3px;
		height: 1px;
		border-bottom: 1px dashed #b5b5b5;
	}

	.scrollpanel {
		margin-top: 32px;
		min-width: 100px;
		padding: 1px;
	}
	
</ui:style>


	<g:FocusPanel ui:field="focusPanel">
		<g:HTMLPanel ui:field="rootPanel" styleName="{style.rootPanel}" >
			<g:TextBox ui:field="filterArea" styleName="{style.filterArea}" />
			<g:HTMLPanel styleName="{style.separator}" />
			<g:ScrollPanel ui:field="scrollPanel" styleName="{style.scrollpanel}">
				<t:CommandMenu ui:field="menu" />
			</g:ScrollPanel>
		</g:HTMLPanel>
	</g:FocusPanel>

</ui:UiBinder> 