<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:layout="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">

	<ui:image field="searchIcon" src="search-project.png"/>
	<ui:style src="../style/default.css">
	
		.rootPanel {
			width: auto;
			margin: -1px;
		}
		
		.background {
			border: none;
			margin: 1px;
		}
		
		.container {
			background-color: white;
			
			user-select: none;
			-webkit-user-select: none;
			-khtml-user-select: none;
			-moz-user-select: none;
			-ms-user-select: none;
		}
		
		@sprite .searchIcon {
			gwt-image: 'searchIcon';
			background-position: center left;
			margin: 2px 4px 0px 0px;
		}
		
		.filterBoxContainer {
			position: relative;
			width: 100%;
		}
		
		.filterArea {
			width: 100%;
			
			margin: 0px;
			padding: 0px;
			
			border: none;
			background: transparent;
			
			font-family: inherit;
			font-size: inherit;
			color: inherit;
		}
		
		.menu {
			border: TEXTINPUT_BORDER;
			border-top: none;
			border-bottom: none;
			text-shadow: none;
		}
		
		.helpLabel {
			position: absolute;
			cursor: default;
			
			bottom: 0px;
			right: 0px;
		    font-size: FONT_SIZE_SMALL;
		    color: COLOR_GRAY_LIGHT;
		    
		    display: inline-block;
		    white-space: nowrap;
		}
		
	</ui:style>

	<g:FocusPanel ui:field="focusPanel">
		<layout:ApplicationPopupBoxContainer addStyleNames="{style.rootPanel}" addBackgroundStyleNames="{style.background}" paddingEnabled="false">
			<g:HorizontalPanel styleName="{style.textBoxDecoration} {style.container}" verticalAlignment="middle">
				<g:SimplePanel styleName="{style.searchIcon}"/>
				<g:cell width="100%">
				 	<g:HTMLPanel styleName="{style.filterBoxContainer}">
						<g:TextBox ui:field="filterArea" styleName="{style.filterArea}" />
						<g:Label ui:field="helpLabel" styleName="{style.helpLabel}">
							<ui:msg description="filtrable command menu help text">Hit TAB to complete</ui:msg>
						</g:Label>
					</g:HTMLPanel>
				</g:cell>
			</g:HorizontalPanel>
			<g:ScrollPanel ui:field="scrollPanel">
				<misc:MenuBarCommandMenu ui:field="menu" styleName="{style.menu}" />
			</g:ScrollPanel>
		</layout:ApplicationPopupBoxContainer>
	</g:FocusPanel>

</ui:UiBinder> 