<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:layout="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout"
	xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">

	<ui:image field="searchIcon" src="search-project.png"/>
	<ui:style src="../style/default.css">
	
		.rootPanel {
			width: 100%;
			border: none;
		}
		
		.container {
			background-color: white;
		}
		
		@sprite .searchIcon {
			gwt-image: 'searchIcon';
			background-position: center left;
			margin: 2px 2px 0px 4px;
		}
		
		.filterBoxContainer {
			position: relative;
			width: 100%;
		}
		
		.filterArea {
			width: 100%;
			border: none;
			background: transparent;
			
			font-family: FONT_DEFAULT_ITALIC;
			font-size: FONT_SIZE_SMALL;
			color: TEXTINPUT_COLOR;
		}
		
		.scrollpanel {
			min-width: 100px;
			overflow-x: auto; 
		}
		
		.menu {
			border: TEXTINPUT_BORDER;
			border-top: none;
			border-bottom: none;
			text-shadow: none;
		}
		
		.helpLabel {
			position: absolute;
			bottom: 3px;
			right: 10px;
		    font-size: FONT_SIZE_SMALL;
		    color: COLOR_GRAY_LIGHT;
		}
		
	</ui:style>

	<g:FocusPanel ui:field="focusPanel">
		<layout:ApplicationPopupBoxContainer addStyleNames="{style.rootPanel}" paddingEnabled="false">
			<g:HorizontalPanel styleName="{style.textBoxDecoration} {style.container}" >
				<g:cell width="1">
					<g:SimplePanel styleName="{style.searchIcon}"/>
				</g:cell>
				<g:cell width="*">
				 	<g:HTMLPanel styleName="{style.filterBoxContainer}">
						<g:TextBox ui:field="filterArea" styleName="{style.filterArea}" />
						<g:Label ui:field="helpLabel" styleName="{style.helpLabel}">Hit TAB to complete</g:Label>
					</g:HTMLPanel>
				</g:cell>
			</g:HorizontalPanel>
			<g:ScrollPanel ui:field="scrollPanel" styleName="{style.scrollpanel}">
				<t:CommandMenu ui:field="menu" styleName="{style.menu}" />
			</g:ScrollPanel>
		</layout:ApplicationPopupBoxContainer>
	</g:FocusPanel>

</ui:UiBinder> 