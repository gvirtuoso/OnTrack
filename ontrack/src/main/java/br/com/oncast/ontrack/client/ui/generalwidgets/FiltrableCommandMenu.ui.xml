<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:layout="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">

	<ui:style src="../style/default.css">

		.rootPanel {
			width: auto;
			margin: -1px;
		}
		
		@def inputHeight 30px;
		.container {
			position: relative;
			background: COLOR_BACKGROUND_TERTIARY;
			color: COLOR_TEXT_TERTIARY;
			height: inputHeight;
			
			overflow: hidden;
			padding-left: 45px;
		}
	
		.iconContainer {
			position: absolute;
			top: 0px;
			left: -10px;
			height: inputHeight;
			width: 45px;
			
			transform: matrix(1,0,-0.5,1,0,0);
			-webkit-transform: matrix(1,0,-0.5,1,0,0);
			-ms-transform: matrix(1,0,-0.5,1,0,0);
			-moz-transform: matrix(1,0,-0.5,1,0,0);
			-o-transform: matrix(1,0,-0.5,1,0,0);
			
			background: COLOR_BACKGROUND_HEADER;
			color: COLOR_BACKGROUND_TERTIARY;
		}
		
		.searchIcon {
			position: absolute;
			left: 20px;
			
			line-height: inputHeight;
		
			transform: matrix(1,0,0.5,1,0,0) scaleX(-1);
			-webkit-transform: matrix(1,0,0.5,1,0,0) scaleX(-1);
			-ms-transform: matrix(1,0,0.5,1,0,0) scaleX(-1);
			-moz-transform: matrix(1,0,0.5,1,0,0) scaleX(-1);
			-o-transform: matrix(1,0,0.5,1,0,0) scaleX(-1);
	
			cursor: pointer;
		}

		.searchIcon:hover {
			color: COLOR_HOVER_4;
		}
		
		.filterArea {
			width: 100%;

			font-size: FONT_SIZE_SMALL;
			color: COLOR_TEXT_TERTIARY;
			
			background: transparent;
			outline: none;
			border: none;
			padding: 0;
			margin: 6px 0px;
		}
		
		.menu {
			border: TEXTINPUT_BORDER;
			border-top: none;
			border-bottom: none;
			text-shadow: none;
		}
		
		.helpLabel {
			position: absolute;
			cursor: default;
			
			bottom: 0px;
			right: 0px;
		    font-size: FONT_SIZE_SMALL;
		    color: COLOR_GRAY_LIGHT;
		    
		    display: inline-block;
		    white-space: nowrap;
		}
		
	</ui:style>

	<g:FocusPanel ui:field="focusPanel">
		<layout:ApplicationPopupBoxContainer addStyleNames="{style.rootPanel}" paddingEnabled="false">
			<g:HTMLPanel ui:field="container" styleName="{style.container}" >
				<div class="{style.iconContainer}">
					<i class="icon-search {style.searchIcon}"/>
				</div>
				<g:TextBox ui:field="filterArea" styleName="{style.filterArea}" />
				<g:Label ui:field="helpLabel" styleName="{style.helpLabel}">
					<ui:msg description="filtrable command menu help text">Hit TAB to complete</ui:msg>
				</g:Label>
			</g:HTMLPanel>
			
			<g:ScrollPanel ui:field="scrollPanel">
				<misc:CommandMenu ui:field="menu" styleName="{style.menu}" />
			</g:ScrollPanel>
		</layout:ApplicationPopupBoxContainer>
	</g:FocusPanel>

</ui:UiBinder> 