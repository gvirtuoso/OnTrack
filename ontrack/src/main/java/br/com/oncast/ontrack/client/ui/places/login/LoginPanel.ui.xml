<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.rootPanel {
			position: absolute;
			top: 0px;
			left: 0px;
			right: 0px;
			bottom: 0px;
			background-color: #dbdce1;
		}
		
		.loginPanel {
			position: absolute;
			top: 200px;
			height: 160px;
			right: 50%;
			margin-right: -175px;
			margin-top: -90px;
			width: 350px;
			padding-top: 5px;
			padding-left: 10px;
			
            border: 1px solid #a5a5a5;
		    -moz-box-shadow: 0px 0px 5px #a5a5a5;
		    -webkit-box-shadow: 0px 0px 5px #a5a5a5;
		    box-shadow: 0px 0px 5px #a5a5a5;

			color: #F5F5F7;
			font-size: small;
		    font-weight: bold;
   		}
		
		.loginLabel {
			display: inline;
			margin-top: 6px;
		}
		
		.welcomeLabel {
			color: #F5F5F7;
			text-align: center;
		    font-size: 20px;
		    font-weight: bold;
		    height: 35px;
		}
		
		.loginButton {
			position: relative;
			display: inline;
			width: 90px;
			margin-left: 110px;
		}
		
		.textArea {
			width: 220px;
			position: absolute;
			outline: none;
			padding-left: 7px; 
			
     		-moz-border-radius: 20px;
    		-webkit-border-radius: 20px;
   			-khtml-border-radius: 20px;
    		border-radius: 20px;
		}
		
		.emailTextArea {
			margin-left: 54px;
		}
		
		.passwordTextArea {
			margin-left: 28px;
		}
		
		.textAreaPanel {
			height: 30px;
			display: block;
			margin-top: 2px;
			margin-bottom: 2px;
		}
		
		.horizontalPanel {
			height: 22px;
			display: block;
			margin-top: 2px;
			margin-bottom: 2px;
		}
	</ui:style>
		
	<g:HTMLPanel ui:field="rootPanel" styleName="{style.rootPanel}" >
		<g:HTMLPanel ui:field="verticalPanel" styleName="{style.loginPanel} gradAppHeader" >
			<g:Label text="Welcome to OnTrack" ui:field="welcomeLabel" styleName="{style.welcomeLabel}" />
			<g:HTMLPanel styleName="{style.textAreaPanel}">
				<g:Label text="E-mail:" ui:field="emailLabel" styleName="{style.loginLabel}" />
				<g:TextBox ui:field="emailArea" addStyleNames="{style.emailTextArea} {style.textArea}" />
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{style.textAreaPanel}">
				<g:Label text="Password:" ui:field="passwordLabel" styleName="{style.loginLabel}" />
				<g:PasswordTextBox ui:field="passwordArea" addStyleNames="{style.passwordTextArea} {style.textArea}" />
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="informationPanel" styleName="{style.horizontalPanel}">
				<g:Label ui:field="messageLabel" styleName="{style.loginLabel}" />
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{style.horizontalPanel}">
				<g:Button text="Login" ui:field="loginButton" styleName="{style.loginButton}" />
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder> 