<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:layout="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout">


	<ui:style src="../../style/default.css">
		.contentPanel {
			position: relative;
			width: 325px;
			margin: 0px auto;
			padding: 25px;
		}
		
		.descriptionLabel {
			margin-bottom: 10px;

			font-family: FONT_DEFAULT_ITALIC;
		}
		
		.separator {
			margin-top: 20px;
		}
		
	</ui:style>

	<layout:ApplicationWidgetContainer debugId="loginPlace">
		<g:FormPanel ui:field="form">
			<g:HTMLPanel styleName="{style.contentPanel}">
				<g:Label text="Username" ui:field="emailLabel" styleName="{style.descriptionLabel}" />
				<layout:ValidationInputContainer debugId="emailInput" ui:field="emailArea">
					<g:TextBox name="email"/>
				</layout:ValidationInputContainer>
				
				<div class="{style.separator}" />
				
				<g:Label text="Password" ui:field="passwordLabel" styleName="{style.descriptionLabel}" />
				<layout:ValidationInputContainer debugId="passwordInput" ui:field="passwordArea">
					<g:PasswordTextBox name="password"/>
				</layout:ValidationInputContainer>
				
				<div class="{style.separator}" />
				<g:SubmitButton debugId="submitButton" text="LOGIN" ui:field="loginButton" styleName="{style.menuboxButton}" />
			</g:HTMLPanel>
		</g:FormPanel>
	</layout:ApplicationWidgetContainer>

</ui:UiBinder> 