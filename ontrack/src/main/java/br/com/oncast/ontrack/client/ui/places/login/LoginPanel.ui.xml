<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:layout="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">

	<ui:style src="../../style/default.css">
		
		.contentPanel {
			position: relative;
			width: 325px;
			margin: 0px auto;
			padding: 25px;
		}
		
		.descriptionLabel {
			margin-bottom: 10px;

			font-family: FONT_DEFAULT_ITALIC;
			font-style: italic;
		}
		
		.separator {
			margin-top: 20px;
		}

		.forgotPassword { 
			margin-top: 10px;
			font-size: 12px;
			color: blue;
			width: 100%;
			text-align: right;	
		}
		
		.forgotPassword>a:hover { 
			cursor: pointer;
			text-decoration: underline;
		}
		
	</ui:style>

	<layout:ApplicationWidgetContainer debugId="loginPlace">
		<g:FormPanel ui:field="form" action="fakeAction" method="post">
			<g:HTMLPanel styleName="{style.contentPanel}">
				<g:Label ui:field="emailLabel" styleName="{style.descriptionLabel}">
					<ui:msg description="username label">Username</ui:msg>
				</g:Label>
				<layout:ValidationInputContainer debugId="emailInput" ui:field="emailArea">
					<g:TextBox name="email"/>
				</layout:ValidationInputContainer>
				
				<div class="{style.separator}" />
				
				<g:Label ui:field="passwordLabel" styleName="{style.descriptionLabel}">
					<ui:msg description="password label">Password</ui:msg>
				</g:Label>
				<layout:ValidationInputContainer debugId="passwordInput" ui:field="passwordArea">
					<g:PasswordTextBox name="password"/>
				</layout:ValidationInputContainer>
				
				<div class="{style.separator}" />
				<g:SubmitButton debugId="submitButton" ui:field="loginButton" styleName="{style.menuboxButton}">
					<ui:msg description="login submit button label">LOGIN</ui:msg>
				</g:SubmitButton>

				<div class="{style.forgotPassword}">
					<g:Anchor ui:field="forgotPassword">
						<ui:msg description="login forgot password anchor">Forgot my password</ui:msg>
					</g:Anchor>
				</div>
				
			</g:HTMLPanel>
		</g:FormPanel>
	</layout:ApplicationWidgetContainer>

</ui:UiBinder> 