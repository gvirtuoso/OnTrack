<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.rootPanel {
			position: absolute;
			top: 0px;
			left: 0px;
			right: 0px;
			bottom: 0px;
			background-color: #dbdce1;
		}
		
		.loginPanel {
			position: absolute;
			top: 40%;
			height: 180px;
			right: 50%;
			margin-right: -175px;
			margin-top: -90px;
			width: 350px;
			padding-top: 5px;
			padding-left: 10px;
			
            border: 1px solid #a5a5a5;
		    -moz-box-shadow: 0px 0px 5px #a5a5a5;
		    -webkit-box-shadow: 0px 0px 5px #a5a5a5;
		    box-shadow: 0px 0px 5px #a5a5a5;
		    text-align: center;
		    font-size: 20px;
		    font-weight: bold;
   		}
		
		.loginLabel {
			font-size: small;
			margin-top: 6px;
			color: #F5F5F7;
		}
		
		.welcomeLabel {
			margin-left: 45px;
			color: #F5F5F7;
		}
		
		.loginButton {
			position: absolute;
			width: 70px;
			right: 50%;
			margin-right: -35px;
			top: 90%;
			margin-top: -10px;
			
			-moz-border-radius: 5px;
    		-webkit-border-radius: 5px;
   			-khtml-border-radius: 5px;
    		border-radius: 5px;
		}
		
		.textArea {
			position: absolute;
			right: 10px;
			width: 200px;
			outline: none;
			padding-left: 7px; 
			
     		-moz-border-radius: 20px;
    		-webkit-border-radius: 20px;
   			-khtml-border-radius: 20px;
    		border-radius: 20px;
		}
	</ui:style>
		
	<g:HTMLPanel ui:field="rootPanel" styleName="{style.rootPanel}" >
		<g:VerticalPanel ui:field="verticalPanel" styleName="{style.loginPanel} gradAppHeader" >
			<g:Label text="Welcome to OnTrack" ui:field="welcomeLabel" styleName="{style.welcomeLabel}" />
			<g:HorizontalPanel>
				<g:Label text="E-mail:" ui:field="emailLabel" styleName="{style.loginLabel}" />
				<g:TextBox ui:field="emailArea" styleName="{style.textArea}" />
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label text="Password:" ui:field="passwordLabel" styleName="{style.loginLabel}" />
				<g:PasswordTextBox ui:field="passwordArea" styleName="{style.textArea}" />
			</g:HorizontalPanel>
			<g:Label ui:field="messageLabel" styleName="{style.loginLabel}" />
			<g:Button text="Login" ui:field="loginButton" styleName="{style.loginButton}" />
		</g:VerticalPanel>
	</g:HTMLPanel>

</ui:UiBinder> 