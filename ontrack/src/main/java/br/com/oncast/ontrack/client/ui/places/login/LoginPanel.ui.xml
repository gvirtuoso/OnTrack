<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gwl="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout">


	<ui:style src="../../style/default.css">
		.contentPanel {
			position: relative;
			width: 325px;
			margin: 0px auto;
			padding: 25px;
		}
		
		.descriptionLabel {
			margin-bottom: 10px;

			font-family: FONT_DEFAULT_ITALIC;
		}
		
		.errorLabel {
			width: 100%;
			margin-top: 20px;

			text-align: center;
			color: #cc3c29;
		}
		
		.separator {
			margin-top: 20px;
		}
		
	</ui:style>

	<gwl:ApplicationWidgetContainer debugId="loginPlace">
		<g:HTMLPanel styleName="{style.contentPanel}">
			<g:Label text="Username" ui:field="emailLabel" styleName="{style.descriptionLabel}" />
			<g:TextBox debugId="emailInput" ui:field="emailArea" addStyleNames="{style.textBoxDecoration}" />
			
			<div class="{style.separator}" />
			
			<g:Label text="Password" ui:field="passwordLabel" styleName="{style.descriptionLabel}" />
			<g:PasswordTextBox debugId="passwordInput" ui:field="passwordArea" addStyleNames="{style.textBoxDecoration}" />
			
			<g:Label debugId="messageOutput" ui:field="messageLabel" styleName="{style.errorLabel}" visible="false" />
			
			<div class="{style.separator}" />
			<g:Button debugId="submitButton" text="LOGIN" ui:field="loginButton" styleName="{style.menuboxButton}" />
		</g:HTMLPanel>
	</gwl:ApplicationWidgetContainer>

</ui:UiBinder> 