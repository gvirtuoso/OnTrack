<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:cp="urn:import:br.com.oncast.ontrack.client.ui.components.appmenu.widgets">

	<ui:style>
		.logoutLabel {
			position: absolute;
			top: 10px;
			right: 10px;
			color: #ffffff;
		}
		
		.logoutLabel:HOVER {
			cursor: pointer;
		}
		
		.changePasswordWidget {
			position: absolute;
			top: 10px;
			right: 80px;
			color: #ffffff;
		}
	</ui:style>

	<g:HTMLPanel>
		<cp:ChangePasswordWidget ui:field="changePasswordWidget" styleName="{style.changePasswordWidget}" />
		<g:Label ui:field="logoutLabel" text="Logout" styleName="{style.logoutLabel}" />
	</g:HTMLPanel>
</ui:UiBinder>