<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:aw="urn:import:br.com.oncast.ontrack.client.ui.components.appmenu.widgets">

	<ui:image field="logo" src="logo.png"/>
	<ui:style src="../../style/decorations.css, ../../style/colors.css">

		.rootPanel {
			position: relative;
		}
		
		.menuBar {
			position: relative;
            height: 56px;
            width: 100%;
		}
		
		.logo {
			float: right;
			margin: 8px 15px;
		}
		
		.menuItemContainer {
			position: relative;
			float: right;
						
			margin: 20px 15px; 
		}
		
		.leftSideMenuItem {
			float: left;
		}
		
		.border1 {
			background: COLOR_MENU_BORDER1;
		}
		
		.border2 {
			background: COLOR_MENU_BORDER2;
		}
	</ui:style>

	<g:FlowPanel styleName="{style.rootPanel}">
		<g:HTMLPanel ui:field="applicationMenuPanel" styleName="{style.menuBar} {style.colorMenuBackgroundGradient}" >
			<aw:ApplicationMenuItem ui:field="projectMenuItem" styleName="{style.menuItemContainer} {style.leftSideMenuItem}" text="Project" biggerFont="true"/>
			<g:FlowPanel styleName="{style.menuItemContainer} {style.leftSideMenuItem}">
				<aw:BreadcrumbWidget ui:field="breadcrumb" />
			</g:FlowPanel>
			<g:Image resource="{logo}" styleName="{style.logo}"/>
			<aw:ApplicationMenuItem ui:field="userMenuItem" styleName="{style.menuItemContainer}" text="User" />
			<aw:ApplicationMenuItem ui:field="memberMenuItem" styleName="{style.menuItemContainer}" text="Members" />
		</g:HTMLPanel>
		<g:SimplePanel styleName="{style.border1} {style.borderDecoration}"/>
		<g:SimplePanel styleName="{style.border2} {style.borderDecoration}"/>
	</g:FlowPanel>
</ui:UiBinder>