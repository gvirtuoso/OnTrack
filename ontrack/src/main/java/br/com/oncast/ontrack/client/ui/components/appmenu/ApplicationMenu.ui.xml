<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:cp="urn:import:br.com.oncast.ontrack.client.ui.components.appmenu.widgets">

	<ui:style>
		.rootPanel {
			position: absolute;
			left: 0px;
			right: 0px;
			top: 0px;
			bottom: 0px;
		}
	
		.logoutLabel {
			position: absolute;
			top: 10px;
			right: 10px;
			color: #ffffff;
		}
		
		.logoutLabel:HOVER {
			cursor: pointer;
		}
				
		.changeProjectWidget{
			position: absolute;
			top: 10px;
			left: 10px;
			color: #ffffff;
		}
		
		.changePasswordLabel {
			position: absolute;
			top: 10px;
			right: 80px;
			color: #ffffff;
		}
		
		.changePasswordLabel:HOVER {
				cursor: pointer;
		}
	</ui:style>

	<g:HTMLPanel styleName="{style.rootPanel}">
		<cp:ProjectSelectionWidget ui:field="changeProjectWidget" styleName="{style.changeProjectWidget}" />
		<g:Label ui:field="changePasswordLabel" text="Change Password" styleName="{style.changePasswordLabel}"  />
		<g:Label ui:field="logoutLabel" text="Logout" styleName="{style.logoutLabel}" />
	</g:HTMLPanel>
</ui:UiBinder>