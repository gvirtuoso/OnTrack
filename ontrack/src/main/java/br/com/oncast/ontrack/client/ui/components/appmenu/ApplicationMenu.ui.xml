<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:cp="urn:import:br.com.oncast.ontrack.client.ui.components.appmenu.widgets">

	<ui:style>
		.rootPanel {
			position: absolute;
			left: 0px;
			right: 0px;
			top: 0px;
			bottom: 0px;
		}
		
		.customItemContainer {
			position: absolute;
			left: 10px;
			top: 0px;
			bottom: 0px;
			color: #FFF;
		}
	
		.projectSwitchingMenuButton:HOVER {
			cursor: pointer;
		}
		
		.menu {
			position: absolute;
			top: 6px;
			color: #FFF;
			text-shadow: -2px 2px 5px #000;
		}
		.menu:HOVER {
			cursor: pointer;
		}
		.projectMenu {
			right: 207px;
		}
		.userMenu {
			right: 150px;
		}
		.separator {
			position: absolute;
			width: 1px;
			top: 2px;
			bottom: 2px;
			right: 194px;
			background-color: #BBB;
			box-shadow: -2px 2px 5px #000;
			-moz-box-shadow: -2px 2px 5px #000;    
	 		-webkit-box-shadow: -2px 2px 5px #000;
		}
	</ui:style>

	<g:HTMLPanel styleName="{style.rootPanel}">
		<g:HTMLPanel ui:field="customItemContainer" styleName="{style.customItemContainer}" />
		<g:MenuBar ui:field="projectMenuBar" styleName="{style.projectMenu} {style.menu}" />
		<g:HTMLPanel styleName="{style.separator}"/>
		<g:MenuBar ui:field="userMenuBar" styleName="{style.userMenu} {style.menu}" />
<!-- 		<g:Label ui:field="projectMenuLabel" styleName="{style.projectMenuLabel} {style.menuLabel}" text="Project" /> -->
<!-- 		<g:Label ui:field="userMenuLabel" styleName="{style.userMenuLabel} {style.menuLabel}" text="Users" /> -->
	</g:HTMLPanel>
</ui:UiBinder>