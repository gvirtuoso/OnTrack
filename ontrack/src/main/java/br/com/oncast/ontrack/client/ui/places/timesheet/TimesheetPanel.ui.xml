<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">
	
	<ui:image field="closeImage" src="../../components/releasepanel/widgets/chart/stats-close.png" />
	<ui:image field="previousImage" src="arrow_left_regular.png" />
	<ui:image field="previousImageHover" src="arrow_left_hover.png" />
	<ui:image field="previousImageDisable" src="arrow_left_disable.png" />
	<ui:image field="nextImage" src="arrow_right_regular.png" />
	<ui:image field="nextImageHover" src="arrow_right_hover.png" />
	<ui:image field="nextImageDisable" src="arrow_right_disable.png" />
	<ui:style src="../../style/default.css" >
		
		.root {
			position: absolute;
			top: 40px;
			right: 40px;
			bottom: 40px;
			left: 40px;

			padding: PADDING_MEDIUM;
		}
		
		@sprite .closeIcon {
			gwt-image: 'closeImage';
			position: absolute;
			top: -9.5px;
			right: -9.5px;
			cursor: pointer;
			z-index: 10;
		}
		
		.title {
			font-size: FONT_SIZE_LARGE;
			text-transform: uppercase;
			color: COLOR_GRAY_DARK;
		}
		
		.body {
			top: 27px;

			border: 1px solid #DEDEDE;
			background: white;
		}
		
		.header {
			position: absolute;
			top: 0px;
			right: 0px;
			left: 0px;
			height: 25px;

			text-transform: uppercase;
			padding: 16px 8px 7px 17px;
			-webkit-box-shadow: inset 0 1px 0 0 #E9E9E9, 0 2px 6px #E1E1E1;
			-moz-box-shadow: inset 0 1px 0 0 #e9e9e9, 0 2px 6px #e1e1e1;
			box-shadow: inset 0 1px 0 0 #E9E9E9, 0 2px 6px #E1E1E1;
			font-family: "ProximaNovaRegular";
			font-size: 12pt;
			font-weight: bold;
			text-shadow: 1px -1px 1px #F6D792;
			color: #960;
		}		
		
		.clickable:hover {
			cursor: pointer;
		}
		
		.hseparator {
			position: absolute;
			top: 46px;
			right: 0px;
			left: 0px;
			height: 2px;
		}
		
		.contentContainer {
			position: absolute;
			top: 48px;
			right: 40px;
			left: 40px;
			bottom: 0px;
			overflow: auto;
		}
		
		.noMargin {
			margin: 0px;
		}
		
		.navigationButton {
			position: absolute;
			top: 50%;
			margin-top: -17.5px;
			border: 0px;

			cursor: pointer;
		}
		
		@sprite .previous {
			gwt-image: 'previousImage';
			left: 10px;
		}
		
		@sprite .next {
			gwt-image: 'nextImage';
			right: 10px;
		}
		
		@sprite .previous:hover {
			gwt-image: 'previousImageHover';
		}
		
		@sprite .next:hover {
			gwt-image: 'nextImageHover';
		}
		
		@sprite .previous:disabled {
			gwt-image: 'previousImageDisable';
		}
		
		@sprite .next:disabled {
			gwt-image: 'nextImageDisable';
		}
		
	</ui:style>
	
	<g:HTMLPanel styleName="{style.root} {style.popupContainer}">
		<g:FocusPanel ui:field="closeIcon" styleName="{style.closeIcon}"/>
		<misc:EditableLabel ui:field="releaseTitle" styleName="{style.header} {style.clickable} {style.colorMenuBackgroundGradient}" />
		<misc:Separator styleName="{style.hseparator} {style.noMargin}"/>
		
		<g:SimplePanel ui:field="contentContainer" styleName="{style.contentContainer}" >
			<g:HorizontalPanel ui:field="timesheetContainer" verticalAlignment="middle" horizontalAlignment="center" width="100%" height="100%" spacing="0" borderWidth="0"/>
		</g:SimplePanel>
		<g:Button ui:field="previousReleaseButton" styleName="{style.navigationButton} {style.previous}"/>
		<g:Button ui:field="nextReleaseButton" styleName="{style.navigationButton} {style.next}"/>
		
	</g:HTMLPanel>
	
</ui:UiBinder> 