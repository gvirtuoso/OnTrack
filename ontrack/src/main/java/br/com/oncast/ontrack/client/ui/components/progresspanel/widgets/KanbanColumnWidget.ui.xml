<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gw='urn:import:br.com.oncast.ontrack.client.ui.generalwidgets'
	xmlns:ow='urn:import:br.com.oncast.ontrack.client.ui.components.progresspanel.widgets'
	>
	
	<ui:data src="delete_column.png" field="deleteColumnImg" />
	<ui:data src="delete_column_hover.png" field="deleteColumnHoverImg" />
	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.progresspanel.widgets.KanbanColumnWidget.KanbanColumnWidgetStyle">
	
	   @url deleteImgUrl deleteColumnImg;
	   @url deleteHoverImgUrl deleteColumnHoverImg;
	
		.rootPanel {
			height: 100%;
			width: 250px;
		}

        .createButton {
			position: absolute;
			right: -27px;
			top: 10px;
	
            cursor: pointer;
        }

		.titlePanel {
			position: relative;
	
			height: 36px;
			width: 214px;
			margin: 10px 0px;
			vertical-align: middle;
			
            background: KANBAN_TITLE_BACKGROUND_COLOR;
	        -webkit-box-shadow: KANBAN_TITLE_SHADOW;
	        -moz-box-shadow: KANBAN_TITLE_SHADOW;
	        box-shadow: KANBAN_TITLE_SHADOW;
            
            border: KANBAN_TITLE_BORDER;
            border-color: KANBAN_TITLE_BORDER_COLORS;
            color: KANBAN_TITLE_TEXT_COLOR;
            font-family: FONT_DEFAULT;
            font-size: FONT_SIZE_LARGE;             
            text-shadow: KANBAN_TITLE_TEXT_SHADOW;
            filter: KANBAN_TITLE_TEXT_SHADOW_IE;
		}
		
        .titleLabel {
        	padding-top: 8px;
        	border-top: 1px solid #DEDEDE;
            text-align: center;
            
        }
		
		.scopeContainer {
			height: 100%;
	
            overflow-y: auto;
            overflow-x: hidden;
        }
        
        .highlightBlock {
			height: 100%;
        }
        
		.draggable {
			position: absolute;
			top: 4px;
			left: 4px;
			bottom: 4px;
			width: 8px;
			
			background: url("resources/image/releasePanel/draggable.png") repeat-y;
			cursor: move;
			
		}
		
		.deleteButton {
			position: absolute;
			top: 12px;
			right: 5px;
			width: 9px;
			height: 9px;

			cursor: pointer;
			border: 1px solid transparent;
			
			background-image: deleteImgUrl;
			background-repeat: no-repeat;
			background-position: center;
		}
		
		.deleteButton:hover {
			background-image: deleteHoverImgUrl;
			background-color: #efefef;
            border: 1px solid #ededed;
		}
		
		.highlight {
			background-color: #e5e5e5;
		}
		
	</ui:style>
	
	<g:FocusPanel ui:field="rootPanel" styleName="{style.rootPanel}">
		<g:VerticalPanel ui:field="highlightBlock" styleName="{style.highlightBlock}">
			<g:cell height="1">
				<g:HTMLPanel styleName="{style.titlePanel}">
					<g:FocusPanel ui:field="draggableAnchor" styleName="{style.draggable}" />
					<g:Label ui:field="title" styleName="{style.titleLabel}"/>
					<g:Label ui:field="deleteButton" styleName="{style.deleteButton}" />
					<ow:KanbanColumnCreateWidget ui:field="createColumn" styleName="{style.createButton}" />
				</g:HTMLPanel>
			</g:cell>
			<g:cell height="*" horizontalAlignment="center">
				<ow:KanbanScopeContainer ui:field="scopeContainer" styleName="{style.scopeContainer}"/>
			</g:cell>
		</g:VerticalPanel>
	</g:FocusPanel>
</ui:UiBinder> 