<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gw='urn:import:br.com.oncast.ontrack.client.ui.generalwidgets'
	xmlns:ow='urn:import:br.com.oncast.ontrack.client.ui.components.progresspanel.widgets'
	>
	
	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.progresspanel.widgets.KanbanColumnWidget.KanbanColumnWidgetStyle">
	
		.rootPanel {
			width: 250px;
			height: 98%;
		}

		.addControlPanel {
			z-index: 2;
			position: relative;
			width: 100%;
		}

		.titlePanel {
			position: relative;
			
			height: 36px;
			width: 214px;
			margin-top: 10px;
			margin-left:  auto;
			margin-right: auto;
			vertical-align: middle;
			
			z-index: 1;
			
            background: KANBAN_TITLE_BACKGROUND_COLOR;
	        -webkit-box-shadow: POPUP_SHADOW;
	        -moz-box-shadow: POPUP_SHADOW;
	        box-shadow: POPUP_SHADOW;
            
            border: KANBAN_TITLE_BORDER;
            border-color: KANBAN_TITLE_BORDER_COLORS;
            color: KANBAN_TITLE_TEXT_COLOR;
            font-family: FONT_DEFAULT;
            font-size: FONT_SIZE_LARGE;             
            text-shadow: KANBAN_TITLE_TEXT_SHADOW;
            filter: KANBAN_TITLE_TEXT_SHADOW_IE;
		}
		
        .titleLabel {
        	position: absolute;
        	top: 1px;
        	right: 1px;
        	left: 1px;
        	bottom: 1px;
        	padding-top: 8px;
        	border-top: 1px solid #DEDEDE;
            text-align: center;
        }
		
		.scopeContainer {
            position: absolute;
            top: 52px;
            bottom: 1px;
            right: 0px;
            left: 20px;
            display: block;
            overflow: auto;
            overflow-x: hidden;
            
            z-index: 1;
        }
        
        .highlightBlock {
        	top: 0px;
        	right: 0px;
        	left: 1px;
        	bottom: 0px;
        	overflow: hidden;
        	z-index: 0;
        }
        
        .scopeContainer > tbody > tr > td, .scopeContainer > tr > td {
        	width: 210px;
        	position: relative;
        }
        
		.columnControls {
			position: absolute;
			top : 0px;	
			left : 0px;	
			bottom : 0px;	
			right : 0px;
		}
		
		.draggable {
			background: url("resources/image/releasePanel/draggable.png") repeat-y;
			cursor: move;
			
			position: absolute;
			top: 4px;
			left: 4px;
			bottom: 4px;
			width: 8px;
		}
		
		.deleteButton {
			position: absolute;
			right: 4px;
			top: 0px;
			color: red;
			cursor: pointer;
		}
		
		.createButton {
			position: absolute;
			right: -9px;
			top: 8px;
			cursor: pointer;
		}
		
		.highlight {
			background-color: #FAFAFC;
		}
		
	</ui:style>
	
	<g:FocusPanel ui:field="rootPanel" styleName="{style.rootPanel}">
		<g:HTMLPanel>
			<g:HTMLPanel ui:field="highlightBlock" styleName="{style.scopeContainer} {style.highlightBlock}" />
			<g:HTMLPanel styleName="{style.addControlPanel}">
				<ow:KanbanColumnCreateWidget ui:field="createColumn" styleName="{style.createButton}" />
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{style.titlePanel}">
				<g:Label ui:field="title" styleName="{style.titleLabel}"/>
				<g:FocusPanel ui:field="draggableAnchor" styleName="{style.draggable}" />
				<g:Label ui:field="deleteButton" styleName="{style.deleteButton}">x</g:Label>
			</g:HTMLPanel>
			<ow:KanbanScopeContainer ui:field="scopeContainer" styleName="{style.scopeContainer}"/>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 