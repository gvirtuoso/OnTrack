<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gw='urn:import:br.com.oncast.ontrack.client.ui.generalwidgets'
	xmlns:ow='urn:import:br.com.oncast.ontrack.client.ui.components.progresspanel.widgets'
	>
	
	<ui:style type="br.com.oncast.ontrack.client.ui.components.progresspanel.widgets.KanbanColumnWidget.KanbanColumnWidgetStyle">
	
		.rootPanel {
			width: 250px;
		}

		.addControlPanel {
			position: relative;
			width: 100%;
		}

		.titlePanel {
			position: relative;
			
			height: 25px;
			width: 214px;
			margin-top: 10px;
			margin-left:  auto;
			margin-right: auto;
			padding-top: 8px;
			border: solid 1px #333;
			background-color: #333;
			color: #FFF;
			font-weight: bold;
			vertical-align: middle;
			
			-moz-box-shadow: 2px 2px 4px #ccc;
			-webkit-box-shadow: 2px 2px 4px #ccc;
			box-shadow: 2px 2px 4px #ccc;
		}
		
		.scopeContainer {
            position: absolute;
            top: 46px;
            bottom: 1px;
            right: 0px;
            left: 20px;
            display: block;
            overflow: auto;
            overflow-x: hidden;
        }
        
        .highlightBlock {
        	right: 16px;
        	left: 17px;
        	bottom: 10px;
        	overflow: hidden;
        }
        
        .scopeContainer > tbody > tr > td, .scopeContainer > tr > td {
        	height: 30px;
        	width: 210px;
        	position: relative;
        }
        
		.columnControls {
			position: absolute;
			top : 0px;	
			left : 0px;	
			bottom : 0px;	
			right : 0px;
		}
		
		.draggable {
			background: url("resources/image/releasePanel/draggable.png") repeat-y;
			cursor: move;
			
			position: absolute;
			top: 4px;
			left: 4px;
			bottom: 4px;
			width: 8px;
		}
		
		.deleteButton {
			position: absolute;
			right: 4px;
			top: 0px;
			color: red;
			cursor: pointer;
		}
		
		.createButton {
			position: absolute;
			right: 2px;
			top: 2px;
			cursor: pointer;
		}
		
		.titleLabel {
			font-size: 13px;
			text-align: center;
		}
		
		.highlight {
			background-color: #FCFCFC;
		}
		
	</ui:style>
	
	<g:FocusPanel ui:field="rootPanel" styleName="{style.rootPanel}">
		<g:HTMLPanel>
			<g:HTMLPanel styleName="{style.addControlPanel}">
				<ow:KanbanColumnCreateWidget ui:field="createColumn" styleName="{style.createButton}" />
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{style.titlePanel} gradAppHeader">
				<g:Label ui:field="title" styleName="{style.titleLabel}"/>
				<g:FocusPanel ui:field="draggableAnchor" styleName="{style.draggable}" />
				<g:Label ui:field="deleteButton" styleName="{style.deleteButton}">x</g:Label>
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="highlightBlock" styleName="{style.scopeContainer} {style.highlightBlock}" />
			<ow:KanbanScopeContainer ui:field="scopeContainer" styleName="{style.scopeContainer}"/>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 