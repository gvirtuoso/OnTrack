<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gw='urn:import:br.com.oncast.ontrack.client.ui.generalwidgets'
	>
	
	<ui:style>
		.rootPanel {
			width: 250px;

			padding: 10px;
			margin: 2px 4px;
			border: solid 1px #CCC;
		}
		.titlePanel {
			position: relative;
			
			width: 210px;
			margin-left:  auto;
			margin-right: auto;
			border: solid 1px #333;
			background-color: #333;
			color: #FFF;
		}
		.draggable {
			background: url("resources/image/releasePanel/draggable.png") repeat-y;
			cursor: move;
			
			position: absolute;
			top: 4px;
			left: 4px;
			bottom: 4px;
			width: 8px;
		}
		.titleLabel {
			font-size: 13px;
			text-align: center;
		}
		.scopeContainer {
			margin-top: 30px;
			width: 210px;
			margin-left:  auto;
			margin-right: auto;
		}
	</ui:style>
	
	<g:HTMLPanel styleName="{style.rootPanel}">
		<g:HTMLPanel styleName="{style.titlePanel}">
			<g:FocusPanel styleName="{style.draggable}" />
			<g:Label ui:field="title" styleName="{style.titleLabel}"/>
		</g:HTMLPanel>
		<gw:VerticalModelWidgetContainer ui:field="scopeContainer" styleName="{style.scopeContainer}"/>
	</g:HTMLPanel>
</ui:UiBinder> 