<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:aw="urn:import:br.com.oncast.ontrack.client.ui.components.annotations.widgets">
	
	<ui:style>
	
		.container {
			position: relative;
			width: 100%;
			height: 100%;
			
			overflow-y: auto;
			overflow-x: hidden;
		}
		
		.separator {
			margin: 15px -15px 10px -15px;
		}
		
		.annotations {
			position: absolute;
			top: 0px;
			right: 0px;
			bottom: 0px;
			left: 0px;
			
			overflow-y: auto;
			overflow-x: hidden;
		}
		
		.uploadPanel {
			margin-left: 15px;
		}
		
		.loadingIndicator {
			text-align: center;
		}
		
	</ui:style>
	
	<g:FocusPanel ui:field="focusPanel">
		<g:VerticalPanel height="100%" width="100%">
			<g:HorizontalPanel width="100%">
				<g:cell width="100%">
					<aw:ExtendableTextArea ui:field="newAnnotationText" defaultHeight="26px"  maxHeight="100px" helpText="Type to create a new topic" />
				</g:cell>
				<aw:UploadWidget ui:field="uploadWidget" styleName="{style.uploadPanel}"/>
			</g:HorizontalPanel>
			<misc:Separator styleName="{style.separator}"/>
			<g:cell height="100%">
				<g:FocusPanel styleName="{style.container}">
					<g:DeckPanel ui:field="loadingDeck" >
						<g:SimplePanel  styleName="{style.loadingIndicator}" >
	       					<g:Image url="resources/image/misc/loading.gif"/>
						</g:SimplePanel>
						<misc:VerticalModelWidgetContainer ui:field="annotationsWidgetContainer"/>
					</g:DeckPanel>
				</g:FocusPanel>
			</g:cell>
		</g:VerticalPanel>
	</g:FocusPanel>
</ui:UiBinder> 