<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:aw="urn:import:br.com.oncast.ontrack.client.ui.components.annotations.widgets"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">
	
	<ui:style>
	
		.container {
			position: relative;
			width: 100%;
			height: 100%;
			
			overflow-y: auto;
			overflow-x: hidden;
		}
		
		.separator {
			margin: 15px -15px 10px -15px;
		}
		
		.uploadPanel {
			margin-left: 15px;
		}
		
	</ui:style>
	
	<g:FocusPanel>
		<g:VerticalPanel height="100%" width="100%">
			<g:HorizontalPanel width="100%">
				<g:cell width="100%">
					<aw:ExtendableTextArea ui:field="newAnnotationText" />
				</g:cell>
				<g:cell verticalAlignment="bottom">
					<aw:UploadWidget ui:field="uploadWidget" styleName="{style.uploadPanel}"/>
				</g:cell>
			</g:HorizontalPanel>
			<misc:Separator ui:field="separator" styleName="{style.separator}"/>
			<g:cell height="100%">
				<g:FocusPanel styleName="{style.container}">
					<misc:ModelWidgetContainer ui:field="annotationsWidgetContainer"/>
				</g:FocusPanel>
			</g:cell>
		</g:VerticalPanel>
	</g:FocusPanel>
</ui:UiBinder> 