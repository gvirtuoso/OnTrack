<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:aw="urn:import:br.com.oncast.ontrack.client.ui.components.annotations.widgets"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">
	
	<ui:image field="createIcon" src="black_check.png" />
	<ui:style src="../../../style/default.css">
	
		.container {
			position: relative;
			width: 100%;
			height: 100%;
			
			overflow-y: auto;
			overflow-x: hidden;
		}
		
		.separator {
			margin: 15px -15px 10px -15px;
		}
		
		.uploadPanel {
			margin-left: 10px;
		}
		
		@sprite .create {
			gwt-image: 'createIcon';
			
			background-size: 30px 30px;
			background-position: center;
			
			width: 24px;
			height: 24px;
			
			margin: 1px;
			margin-left: 11px;
			
			border-radius: 3px;
			padding: 2px;
			
			opacity: 0.8;
			cursor: pointer;
		}
		
		.create:HOVER {
			margin: 0px;
			margin-left: 10px;
			border: 1px solid #AEAEAE;
			box-shadow: inset 1px 1px 1px white;
		}
		
	</ui:style>
	
	<g:FocusPanel>
		<g:VerticalPanel height="100%" width="100%">
			<g:HorizontalPanel width="100%">
				<g:cell width="100%" verticalAlignment="middle">
					<aw:ExtendableTextArea ui:field="newAnnotationText" />
				</g:cell>
				<g:cell verticalAlignment="bottom"  horizontalAlignment="right">
					<g:VerticalPanel horizontalAlignment="right">
						<aw:UploadWidget ui:field="uploadWidget" styleName="{style.uploadPanel}"/>
						<g:FocusPanel ui:field="createNotificationButton" styleName="{style.create}"/>
					</g:VerticalPanel>
				</g:cell>
			</g:HorizontalPanel>
			<misc:Separator ui:field="separator" styleName="{style.separator}"/>
			<g:cell height="100%">
				<g:FocusPanel styleName="{style.container}">
					<misc:ModelWidgetContainer ui:field="annotationsWidgetContainer"/>
				</g:FocusPanel>
			</g:cell>
		</g:VerticalPanel>
	</g:FocusPanel>
</ui:UiBinder> 