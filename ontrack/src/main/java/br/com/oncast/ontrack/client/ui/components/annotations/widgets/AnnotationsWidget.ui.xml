<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:aw="urn:import:br.com.oncast.ontrack.client.ui.components.annotations.widgets">
	
	<ui:style>
	
		.separator {
			margin: 15px -15px 10px -15px;
		}
			

	</ui:style>
	
	<g:FocusPanel ui:field="focusPanel">
		<g:HTMLPanel>
			<aw:ExtendableTextArea ui:field="newAnnotationText" maxHeight="100px" />
			<misc:Separator styleName="{style.separator}"/>
			<g:VerticalPanel ui:field="annotations" width="100%"/>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 