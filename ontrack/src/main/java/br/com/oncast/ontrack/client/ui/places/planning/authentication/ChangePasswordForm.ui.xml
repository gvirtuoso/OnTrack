<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.loginPanel {
			position: absolute;
			top: 23px;
			height: 180px;
			right: -10px;
			width: 350px;
			padding-top: 5px;
			padding-left: 10px;
			
            border: 1px solid #a5a5a5;
		    -moz-box-shadow: 0px 0px 5px #a5a5a5;
		    -webkit-box-shadow: 0px 0px 5px #a5a5a5;
		    box-shadow: 0px 0px 5px #a5a5a5;
		    text-align: center;
		    font-size: 20px;
		    font-weight: bold;
		    
		    z-index: 2px;
   		}
		
		.headerLabel {
			margin-left: 45px;
			color: #F5F5F7;
		}
		
		.passwordLabel {
			font-size: small;
			margin-top: 6px;
			color: #F5F5F7;
		}
		
		.changePasswordButton {
			position: absolute;
			width: 140px;
			right: 70%;
			margin-right: -70px;
			top: 90%;
			margin-top: -10px;
			
			-moz-border-radius: 5px;
    		-webkit-border-radius: 5px;
   			-khtml-border-radius: 5px;
    		border-radius: 5px;
		}
		
		.closeButton {
			position: absolute;
			width: 60px;
			right: 30%;
			margin-right: -70px;
			top: 90%;
			margin-top: -10px;
			
			-moz-border-radius: 5px;
    		-webkit-border-radius: 5px;
   			-khtml-border-radius: 5px;
    		border-radius: 5px;
		}
		
		.textArea {
			position: absolute;
			right: 10px;
			width: 130px;
			outline: none;
			padding-left: 7px; 
			
     		-moz-border-radius: 20px;
    		-webkit-border-radius: 20px;
   			-khtml-border-radius: 20px;
    		border-radius: 20px;
		}
	</ui:style>
		
	<g:FocusPanel ui:field="rootPanel">
		<g:VerticalPanel ui:field="verticalPanel" styleName="{style.loginPanel} gradAppHeader" >
			<g:Label text="Change Password" styleName="{style.headerLabel}" />
			<g:HorizontalPanel>
				<g:Label text="Old password:" styleName="{style.passwordLabel}" />
				<g:PasswordTextBox ui:field="oldPasswordArea" styleName="{style.textArea}" />
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label text="New password:" styleName="{style.passwordLabel}" />
				<g:PasswordTextBox ui:field="newPasswordArea" styleName="{style.textArea}" />
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label text="Retype new password:" styleName="{style.passwordLabel}" />
				<g:PasswordTextBox ui:field="retypePasswordArea" styleName="{style.textArea}" />
			</g:HorizontalPanel>
			<g:Label ui:field="messageLabel" styleName="{style.passwordLabel}" />
			<g:Button text="Change Password" ui:field="changePasswordButton" styleName="{style.changePasswordButton}" />
			<g:Button text="Close" ui:field="closeButton" styleName="{style.closeButton}" />
		</g:VerticalPanel>
	</g:FocusPanel>
</ui:UiBinder>