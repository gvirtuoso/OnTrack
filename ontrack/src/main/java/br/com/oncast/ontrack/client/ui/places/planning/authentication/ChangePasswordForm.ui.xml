<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.verticalPanel {
			position: absolute;
			top: 23px;
			height: 184px;
			right: -10px;
			width: 350px;
			padding-top: 5px;
			padding-left: 10px;
			
            border: 1px solid #a5a5a5;
		    -moz-box-shadow: 0px 0px 5px #a5a5a5;
		    -webkit-box-shadow: 0px 0px 5px #a5a5a5;
		    box-shadow: 0px 0px 5px #a5a5a5;
		    
		    color: #F5F5F7;
			font-size: small;
		    font-weight: bold;
   		}
		
		.headerLabel {
		    font-size: 16px;
		    font-weight: bold;
		    text-align: center;
			color: #F5F5F7;
		}
		
		.passwordLabel {
			position: absolute;
			display: inline;
			padding-top: 7px;
		}
		
		.messageLabel {
			position: absolute;
			display: inline;
		}
		
		.changePasswordButton {
			position: inline;
			margin-left: 30px;
			width: 160px;
		}
		
		.closeButton {
			position: inline;
			margin-left: 50px;			
			width: 60px;
		}
		
		.textArea {
			position: absolute;
			right: 10px;
			width: 130px;
			outline: none;
			padding-left: 7px; 
			
     		-moz-border-radius: 20px;
    		-webkit-border-radius: 20px;
   			-khtml-border-radius: 20px;
    		border-radius: 20px;
		}
		
		.textAreaPanel {
			height: 30px;
			display: block;
			margin-top: 2px;
			margin-bottom: 2px;
		}
		
		.horizontalPanel {
			height: 22px;
			display: block;
			margin-top: 2px;
			margin-bottom: 2px;
		}
		
		.buttomPanel {
			height: 28px;
			display: block;
			margin-top: 2px;
			margin-bottom: 2px;
			align: center;
		}
	</ui:style>

	<g:FocusPanel ui:field="rootPanel">
		<g:HTMLPanel ui:field="verticalPanel" styleName="{style.verticalPanel} gradAppHeader" >
			<g:HTMLPanel styleName="{style.textAreaPanel}">
				<g:Label text="Change Password" styleName="{style.headerLabel}" />
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{style.textAreaPanel}">
				<g:Label text="Old password:" styleName="{style.passwordLabel}" />
				<g:PasswordTextBox ui:field="oldPasswordArea" styleName="{style.textArea}" />
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{style.textAreaPanel}">
				<g:Label text="New password:" styleName="{style.passwordLabel}" />
				<g:PasswordTextBox ui:field="newPasswordArea" styleName="{style.textArea}" />
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{style.textAreaPanel}">
				<g:Label text="Retype new password:" styleName="{style.passwordLabel}" />
				<g:PasswordTextBox ui:field="retypePasswordArea" styleName="{style.textArea}" />
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{style.horizontalPanel}">
				<g:Label ui:field="messageLabel" styleName="{style.messageLabel}" />
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{style.buttomPanel}">
				<g:Button text="Change Password" ui:field="changePasswordButton" styleName="{style.changePasswordButton}" />
				<g:Button text="Close" ui:field="closeButton" styleName="{style.closeButton}" />
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder>