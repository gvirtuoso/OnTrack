<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">
	
	<ui:style>
	
		.container {
			margin-bottom: 5px;
		}
		
		.title {
			text-transform: uppercase;
			cursor: default;
			padding: 0px 15px;
		}
		
		.remove {
			color: red;
			font-weight: bold;
			
			cursor: pointer;
			padding: 0px 2px;
		}
		
		.separator {
			margin: 10px 0px;
		}
		
		.addButton {
			cursor: pointer;
			font-weight: bold;
			
			margin: 0px 5px;
		}
		
		.newItemDescription {
			width: 100%;
		}
		
		.addItemLabel {
			cursor: pointer;
			font-weight: bold;
			
			margin-left: 5px;
		}
		
		.addItemDeck {
			margin-top: 5px;
		}
		
	</ui:style>
	
	<g:FocusPanel ui:field="rootPanel">
		<g:HTMLPanel>
			<g:HorizontalPanel width="100%" horizontalAlignment="center" styleName="{style.container}">
				<g:cell width="100%">
					<misc:EditableLabel styleName="{style.title}" ui:field="title"/>
				</g:cell>
				<g:Label ui:field="remove" text="x" styleName="{style.remove}"/>
			</g:HorizontalPanel>
			<misc:VerticalModelWidgetContainer ui:field="items" />
			<g:DeckPanel ui:field="addItemDeck" styleName="{style.addItemDeck}">
				<g:Label ui:field="addItemLabel" styleName="{style.addItemLabel}" text="+ add Item"/>
				<g:HorizontalPanel width="100%" verticalAlignment="middle">
					<g:Label ui:field="addButton" text="+" styleName="{style.addButton}"/>
					<g:cell width="100%">
						<misc:DefaultTextedTextBox ui:field="newItemDescription" styleName="{style.newItemDescription}" defaultText="New Item Description"/>
					</g:cell>
				</g:HorizontalPanel>
			</g:DeckPanel>
			<misc:Separator styleName="{style.separator}"/>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 