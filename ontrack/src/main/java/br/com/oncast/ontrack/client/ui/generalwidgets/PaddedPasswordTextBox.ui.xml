<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
		<ui:style src="../style/default.css">
	
		.container {
			position: relative;
			width: auto;
			background-color: white;
		}
		
		.passwordTextBox {
			font-family: inherit;
			font-size: inherit;
			color: inherit;
		}
		
		.passwordTextBox {
			width: 100%;

			background: transparent;
			border: none;
			padding: 0px;
			margin: 0px;
		}
		
	</ui:style>
	<g:FocusPanel ui:field="focusPanel">
		<g:HTMLPanel ui:field="container" styleName="{style.textBoxDecoration} {style.container}">
			<g:PasswordTextBox ui:field="passwordTextBox" styleName="{style.passwordTextBox}"/>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 