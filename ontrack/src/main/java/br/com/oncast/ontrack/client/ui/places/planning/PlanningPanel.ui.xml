<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:rp='urn:import:br.com.oncast.ontrack.client.ui.components.releasepanel'
	xmlns:st='urn:import:br.com.oncast.ontrack.client.ui.components.scopetree'
	xmlns:ap='urn:import:br.com.oncast.ontrack.client.ui.components.appmenu'  >

	<ui:style>
		.rootPanel {
			position: absolute;
			top: 0px;
			left: 0px;
			right: 0px;
			bottom: 0px;
		}
		
		.appMenu {
			position: absolute;
            top: 0px;
            left: 0px;
            right: 0px;
            height: 35px;
            border-bottom: 1px solid #333;
            -moz-box-shadow: 0px 0px 5px #a5a5a5;
            -webkit-box-shadow: 0px 0px 5px #a5a5a5;
            box-shadow: 0px 0px 5px #a5a5a5;
		}
		
		.scopeTree {
			position: absolute;
			top: 50px;
			left: 10px;
			right: 420px;
			bottom: 20px;
			padding: 5px;
			overflow: auto;
			overflow-x: hidden;
			border: 1px solid #a5a5a5;
			-moz-box-shadow: 0px 0px 5px #a5a5a5;
			-webkit-box-shadow: 0px 0px 5px #a5a5a5;
			box-shadow: 0px 0px 5px #a5a5a5;
			background: #fff;
		}
		
		.releasePanel {
			position: absolute;
			top: 40px;
			right: 0px;
			bottom: 0px;
			width: 400px;
			overflow: auto;
			overflow-x: hidden;
			padding-right: 10px;
			padding-top: 10px;
		}
		
		.exportToMapLink {
			position: absolute;
			bottom: 0px;
			left: 10px;
			width: 200px;
			padding: 5px;
		    font-size: 11px;
		}
	</ui:style>

	<g:FlowPanel styleName="{style.rootPanel}">
        <g:SimplePanel styleName="{style.appMenu} gradAppHeader">
        	<ap:ApplicationMenu ui:field="applicationMenu"/>
        </g:SimplePanel>
		<g:SimplePanel styleName="{style.scopeTree}">
			<st:ScopeTree ui:field="scopeTree" />
		</g:SimplePanel>
		<g:SimplePanel styleName="{style.releasePanel}">
			<rp:ReleasePanel ui:field="releasePanel" />
		</g:SimplePanel>
		<g:Anchor ui:field="exportMapLink" text="Export to mind map"
			target="_blank" styleName="{style.exportToMapLink}" />
	</g:FlowPanel>
</ui:UiBinder>