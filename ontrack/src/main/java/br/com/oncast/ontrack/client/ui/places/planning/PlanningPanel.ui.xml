<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:rp='urn:import:br.com.oncast.ontrack.client.ui.components.releasepanel'
	xmlns:st='urn:import:br.com.oncast.ontrack.client.ui.components.scopetree'
	xmlns:ap='urn:import:br.com.oncast.ontrack.client.ui.components.appmenu'  >

	<ui:style>
		.rootPanel {
			position: absolute;
			top: 0px;
			left: 0px;
			right: 0px;
			bottom: 0px;
		}
		.content {
			position: absolute;

			top: 58px;
			left: 0px;
			right: 0px;			
			bottom: 0px;
		}
		
		.scopeTree {
			position: absolute;
			top: 10px;
			left: 10px;
			right: 420px;
			bottom: 20px;
			padding: 5px;
			overflow: auto;
			overflow-x: hidden;
			
			border: 1px solid #a5a5a5;
			-moz-box-shadow: 0px 0px 5px #a5a5a5;
			-webkit-box-shadow: 0px 0px 5px #a5a5a5;
			box-shadow: 0px 0px 5px #a5a5a5;
            background: #fff;
		}
		
		.releasePanel {
			position: absolute;
			top: 10px;
			right: 0px;
			bottom: 0px;
			width: 400px;
			overflow: auto;
			overflow-x: hidden;
			padding-right: 10px;
			padding-top: 10px;
		}
		
		.exportToMapLink {
			position: absolute;
			bottom: 0px;
			left: 10px;
			width: 200px;
			padding: 5px;
		    font-size: 11px;
		}
	</ui:style>

	<g:FlowPanel styleName="{style.rootPanel}">
       	<ap:ApplicationMenu ui:field="applicationMenu"/>
       	<g:FlowPanel styleName="{style.content}">
			<g:SimplePanel styleName="{style.scopeTree}">
				<st:ScopeTree ui:field="scopeTree" />
			</g:SimplePanel>
			<g:ScrollPanel ui:field="releaseScroll" styleName="{style.releasePanel}">
				<rp:ReleasePanel ui:field="releasePanel" />
			</g:ScrollPanel>
			<g:Anchor ui:field="exportMapLink" text="Export to mind map"
				target="_blank" styleName="{style.exportToMapLink}" />
       	</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>