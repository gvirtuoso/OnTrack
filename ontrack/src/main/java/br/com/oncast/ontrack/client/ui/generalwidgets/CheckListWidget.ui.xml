<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.components.annotations.widgets">
	<ui:style>
		
		.root {
			padding: 5px;
		}
		
		.subjectTitle {
			text-transform: uppercase;
			padding: 8px;
			border: 1px solid #C2C2C2;
			background: lightGrey;
			-webkit-box-shadow: inset 0 1px 0 0 #E9E9E9, 0 2px 6px #E1E1E1;
			-moz-box-shadow: inset 0 1px 0 0 #e9e9e9, 0 2px 6px #e1e1e1;
			box-shadow: inset 0 1px 0 0 #E9E9E9, 0 2px 6px #E1E1E1;
			color: #777;
			font-family: FONT_DEFAULT;
			font-size: 12pt;
			text-shadow: 1px 1px 0 #EDEDED;
			margin-bottom: 5px;
		}
		
		.checklistContainer {
		}
		
	</ui:style>

	<g:SimplePanel>
		<g:HTMLPanel styleName="{style.root}">
			<g:Label ui:field="label" styleName="{style.subjectTitle}" />
			<misc:ChecklistsContainerWidget ui:field="container" styleName="{style.checklistContainer}" />
		</g:HTMLPanel>
	</g:SimplePanel>
</ui:UiBinder> 