<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:cp='urn:import:br.com.oncast.ontrack.client.ui.components.appmenu.widgets'>
	
	<ui:style>
		.rootPanel {
			position: absolute;
			top: 0px;
			left: 0px;
			right: 0px;
			bottom: 0px;
			background-color: #dbdce1;
			z-index: 0;
		}
		
		.mainPanel {
			position: absolute;
			top: 200px;
			height: 400px;
			right: 50%;
			margin-right: -175px;
			margin-top: -90px;
			width: 350px;
			padding-top: 5px;
			padding-left: 10px;
			
            border: none;

			font-size: small;
		    font-weight: bold;
   		}
   		
   		.projectSelectionWidget{
   			margin-top: 50px;
   		}
		
		.welcomeLabel {
			color: black;
			text-align: center;
		    font-size: 28px;
		    font-weight: lighter;
		    height: 35px;
		    text-shadow: 2px 2px 5px #a5a5a5;
		}
	
		.projectSelectionPanel {
			height: 22px;
			display: block;
			margin-top: 2px;
			margin-bottom: 2px;
			z-index: 1;
		}
	</ui:style>

	<g:FocusPanel ui:field="rootPanel" styleName="{style.rootPanel}" >
		<g:HTMLPanel ui:field="verticalPanel" styleName="{style.mainPanel}" >
			<g:Label text="Choose a project" styleName="{style.welcomeLabel}" />
			<g:HTMLPanel styleName="{style.projectSelectionPanel}">
				<cp:ProjectSelectionWidget ui:field="selectionProject" styleName="{style.projectSelectionWidget}" />
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:FocusPanel>

</ui:UiBinder> 