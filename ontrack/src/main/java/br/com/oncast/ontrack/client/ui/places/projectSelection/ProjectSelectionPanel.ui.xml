<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc='urn:import:br.com.oncast.ontrack.client.ui.generalwidgets'
    xmlns:layout="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout">

	<ui:style>
		.rootPanel {
			position: absolute;
			top: 0px;
			left: 0px;
			right: 0px;
			bottom: 0px;
			z-index: 0;
		}
		
		.projectSelectionWidget {
		}
		
		.projectSelectionPanel {
			height: 22px;
			width: 600px;
			margin: 0px auto;
			display: block;
			margin-top: 2px;
			margin-bottom: 2px;
			z-index: 1;
		}
	</ui:style>

	<g:FocusPanel debugId="projectSelectionPlace" ui:field="rootPanel" styleName="{style.rootPanel}">
	   <layout:ApplicationWidgetContainer text="Choose a project">
            <g:HTMLPanel styleName="{style.projectSelectionPanel}">
                <misc:ProjectSelectionWidget ui:field="selectionProject"
                    styleName="{style.projectSelectionWidget}" closeOnEscape="false"/>
            </g:HTMLPanel>
	   </layout:ApplicationWidgetContainer>
	</g:FocusPanel>

</ui:UiBinder> 