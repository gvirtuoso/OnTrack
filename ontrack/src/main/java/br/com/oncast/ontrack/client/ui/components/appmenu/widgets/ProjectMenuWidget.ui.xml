<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:layout="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:menuWidget="urn:import:br.com.oncast.ontrack.client.ui.components.appmenu.widgets"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">
	
	<ui:image field="exportData" src="exportproject.png" />
	<ui:style src="../../../style/default.css">

        .rootPanel {
			width: 300px;
        }
        
        .container {
			padding-bottom: 0px;
        }
        
		@sprite .exportDataImg {
			gwt-image: 'exportData';
		}
		
		.exportToMapLink {
            font: FONT_SIZE_LARGE FONT_DEFAULT_ITALIC;
            font-style: italic;
            color: COLOR_MENUBOX_TEXT;
            
            text-decoration: none;
            font-weight: 500;
		}
		
		.countdownLabel {
            margin-bottom: -5px;
            width: 100%;
            text-align: center;
        }
        
        .customSeparatorMargin {
        	margin: 10px -PADDING_LARGE;
        	margin-top: 16px;
        }
        
        .separator {
			margin: 10px -PADDING_LARGE;
        }
        
        .switchProjectLabel {
			margin-bottom: 10px;
        }
		
	</ui:style>

	<layout:ApplicationPopupBoxContainer ui:field="menu" styleName="{style.rootPanel}" addContainerStyleNames="{style.container}">
		<g:Anchor ui:field="exportMapLink" target="_blank" styleName="{style.exportToMapLink}" href="#">
		    <table width="100%">
		        <tr>
		            <td width="1" align="center">
		                <div class="{style.exportDataImg}" />
		            </td>
		            <td width="*" align="center"><ui:msg description="export data label">Export data (.mm)</ui:msg></td>
		        </tr>
		    </table>
           </g:Anchor>
		<misc:Separator styleName="{style.separator}" />
		<g:Label  styleName="{style.switchProjectLabel}">
			<ui:msg description="switch project label">Switch project</ui:msg>
		</g:Label>
		<misc:ProjectSelectionWidget ui:field="projectSelectionWidget"/>
	</layout:ApplicationPopupBoxContainer>
</ui:UiBinder> 