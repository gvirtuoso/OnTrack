<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">
	
	<ui:image field="exportData" src="exportproject.png" />
	<ui:image field="background" src="box-bg-project.png" />
	<ui:style src="../../../style/fonts.css, ../../../style/decorations.css, ../../../style/colors.css">

		.container {
			background-color: COLOR_MENUBOX_BACKGROUND;
			-webkit-box-shadow: POPUP_SHADOW;
			-moz-box-shadow: POPUP_SHADOW;
			box-shadow: POPUP_SHADOW;
			border: POPUP_BORDER;
			border-top: 0px;
            position: relative;
            padding: 15px;

			width: 210px;
		}

        @sprite .backgroundImg {
        	gwt-image: 'background';
        	position: absolute;
        	right: 0px;
        	bottom: 0px;
        }
        
        .content {
        	position: relative;
        }
        		
		.switchLabel {
			color: COLOR_MENUBOX_TEXT;
			font: FONT_SIZE_LARGE FONT_DEFAULT_ITALIC;
			
			margin: 10px 0;
		}
		
		@sprite .exportDataImg {
			gwt-image: 'exportData';
		}
		
		.exportToMapLink {
            font: FONT_SIZE_LARGE FONT_DEFAULT_ITALIC;
            color: COLOR_MENUBOX_TEXT;
            
            text-decoration: none;
		}
	</ui:style>

	<g:FocusPanel ui:field="exportDataPanel" styleName="{style.container}">
		<g:HTMLPanel>
			<div class="{style.backgroundImg}" />
			<div class="{style.content}">
				<g:Anchor ui:field="exportMapLink" target="_blank" styleName="{style.exportToMapLink}" href="#">
				    <table width="100%">
				        <tr>
				            <td width="1" align="center">
				                <div class="{style.exportDataImg}" />
				            </td>
				            <td width="*" align="center">Export data (.mm)</td>
				        </tr>
				    </table>
	            </g:Anchor>
				<misc:Separator/>
				<g:Label styleName="{style.switchLabel}" text="Switch project" />
				<misc:ProjectSelectionWidget ui:field="projectSelector" minimalist="true"/>
			</div>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 