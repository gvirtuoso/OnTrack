<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:layout="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout"
	xmlns:w="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:footer="urn:import:br.com.oncast.ontrack.client.ui.components.footerbar"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">
	
	<ui:image field="planningIcon" src="link.png"></ui:image>
	<ui:style src="../../../style/default.css">
	
		.root {
			position: relative;
		}
		
		.header {
			position: absolute;
			top: 5px;
			left: 0px;
			right: 0px;
			
			padding: 5px PADDING_LARGE;

			border: RELEASE_WIDGET_BORDER;
			margin: 1px;
		
			background: COLOR_RELEASE_WIDGET_HEADER_BACKGROUND_OPENED;
			box-shadow: inset 0px 1px 0px 0px #e9e9e9, 0px 1px 3px #9F9F9F;
			
			color: COLOR_RELEASE_WIDGET_HEADER_TEXT_OPENED;
			font-family: FONT_DEFAULT;
			font-size: FONT_SIZE_LARGE;				
			text-shadow: RELEASE_WIDGET_HEADER_TEXT_SHADOW;
			filter: RELEASE_WIDGET_HEADER_TEXT_SHADOW_IE;
		}
		
		.body {
			margin: 0px 6px;
		}
		
		.headerSpacer {
			height: 12px;
		}
		
		.content {
			position: relative;
			padding-top: 20px;
		}
	
		.spacer {
			height: PADDING_LARGE;
		}
		
		.name {
			font-size: FONT_SIZE_LARGE;
			text-transform: uppercase;
			
			cursor: pointer;
		}
		
		.name:HOVER {
			color: COLOR_YELLOW_DARK;
		}
		
		@sprite .planningLink {
			gwt-image: 'planningIcon';
			
			cursor: pointer;
		}
		
		.sujestionLabel {
			font-size: FONT_SIZE_LARGE;
			margin-bottom: PADDING_LARGE;
		}
		
		.feedbackArea {
			width: 554px;
			height: 80px;
		}
		
		.sendFeedbackButton {
			display: block;
			margin-top: 5px;
			width: 127px;
			margin-left: 439px;
			cursor: pointer;
		}
	
	</ui:style>
	<g:HTMLPanel styleName="{style.root}">
		<layout:ApplicationPopupBoxContainer styleName="{style.body}">
			<g:HTMLPanel>
				<g:SimplePanel styleName="{style.headerSpacer}"/>
				<g:HTMLPanel ui:field="bodyContent" styleName="{style.content}">
					<g:Label styleName="{style.sujestionLabel}">
						<ui:msg description="sujestion for user to send his feedback to build this widget"> Please tell us what informations you want to see here by sending us a feedback </ui:msg>
					</g:Label>
					<g:TextArea ui:field="feedbackArea" styleName="{style.textBoxDecoration} {style.feedbackArea}"/>
					<g:Button ui:field="sendFeedbackButton" styleName="{style.menuboxButton} {style.sendFeedbackButton}">
						<ui:msg description="send feedback button text">Send Feedback</ui:msg>
					</g:Button>
				</g:HTMLPanel>
			</g:HTMLPanel>
		</layout:ApplicationPopupBoxContainer>
		<g:HorizontalPanel styleName="{style.header}" verticalAlignment="middle">
			<g:cell width="100%">
				<g:Label ui:field="name" styleName="{style.name}"/>
			</g:cell>
			<g:FocusPanel ui:field="planningLink" styleName="{style.planningLink}"/>
		</g:HorizontalPanel>
		<g:SimplePanel styleName="{style.spacer}"/>
	</g:HTMLPanel>
</ui:UiBinder> 