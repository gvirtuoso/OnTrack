<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:layout="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout"
	xmlns:w="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:ow="urn:import:br.com.oncast.ontrack.client.ui.components.organization.widgets"
	xmlns:aw="urn:import:br.com.oncast.ontrack.client.ui.components.annotations.widgets"
	xmlns:chart='urn:import:br.com.oncast.ontrack.client.ui.components.releasepanel.widgets.chart'>
	
	<ui:image field="planningIcon" src="link.png"/>
	<ui:image field="containerStateOpenImg" src="../../releasepanel/widgets/bg-expand-minus.png"/>
	<ui:image field="containerStateClosedImg" src="../../releasepanel/widgets/bg-expand-plus.png"/>
	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.organization.widgets.ProjectSummaryWidget.ProjectSummaryWidgetStyle">
	
		.root {
			position: relative;
		}
		
		.header {
			position: absolute;
			top: 5px;
			left: 0px;
			right: 0px;
			
			padding: 5px PADDING_LARGE;

			border: RELEASE_WIDGET_BORDER;
			margin: 1px;
		
			background: COLOR_RELEASE_WIDGET_HEADER_BACKGROUND_OPENED;
			box-shadow: inset 0px 1px 0px 0px #e9e9e9, 0px 1px 3px #9F9F9F;
			
			color: COLOR_RELEASE_WIDGET_HEADER_TEXT_OPENED;
			font-family: FONT_DEFAULT;
			font-size: FONT_SIZE_LARGE;				
			text-shadow: RELEASE_WIDGET_HEADER_TEXT_SHADOW;
			filter: RELEASE_WIDGET_HEADER_TEXT_SHADOW_IE;
		}
		
		.body {
			margin: 0px 6px;
		}
		
		.content {
			position: relative;
			margin-top: 19px;
			height: 400px;
		}
		
		.releaseContainer {
			position: absolute;
			
			top: 0px;
			right: 0px;
			bottom: 240px;
			left: 0px;
			
			overflow: auto;
			
			background: white;
			border: BORDER_DEFAULT;
			border-radius: 3px;
			padding: PADDING_SMALL;
		}
		
		.details {
			position: absolute;
			
			top: 165px;
			bottom: 0px;
			left: 0px;
			right: 0px;
			
			overflow-y: hidden;
			overflow-x: auto;
		}
		
		.detailsContainer {
			position: relative;
			width: 250px;
			height: 223px;
			
			border: BORDER_DEFAULT;
			border-radius: 3px;
			padding: PADDING_SMALL;
			
			background: white;
			
			margin-right: PADDING_MEDIUM;
		}
		
		.scopeListContainer {
			width: auto;
			min-width: 250px;
		}
		
		.releaseChartContainer { 
			width: 400px;
			margin-right: 0px;
		}
		
		.scopesListTitle {
			text-align: center;
			text-transform: uppercase;
			white-space: nowrap;
			diplay: block;
			color: COLOR_GRAY_DARK;
		}
		
		.scopesList {
			position: absolute;
			
			top: 30px;
			bottom: PADDING_SMALL;
			left: PADDING_SMALL;
			right: PADDING_SMALL;
			
			overflow: auto;
		}
		
		.spacer {
			height: 11px;
		}
		
		@sprite .containerStateOpen {
			gwt-image: 'containerStateOpenImg';
		}
		
		@sprite .containerStateClosed {
			gwt-image: 'containerStateClosedImg';
		}
		
		.containerStateToggleButton {
			margin-right: PADDING_MEDIUM;
			cursor: pointer;
		}
		
		.name {
			font-size: FONT_SIZE_LARGE;
			text-transform: uppercase;
		}
		
		@sprite .planningLink {
			gwt-image: 'planningIcon';
			
			cursor: pointer;
		}
		
	</ui:style>
	<g:HTMLPanel styleName="{style.root}">
	
		<layout:ApplicationPopupBoxContainer styleName="{style.body}">
			<g:SimplePanel styleName="{style.spacer}"/>
			<g:HTMLPanel ui:field="bodyContent" styleName="{style.content}">
				<g:FocusPanel ui:field="releaseContainer" styleName="{style.releaseContainer}">
					<w:ModelWidgetContainer ui:field="releases"/>
				</g:FocusPanel>
				<g:FocusPanel styleName="{style.details}">
					<g:HorizontalPanel height="100%">
						<aw:ReleaseDetailWidget ui:field="releaseDetail" styleName="{style.detailsContainer}"/>
						<g:cell width="100%">
							<g:HTMLPanel styleName="{style.detailsContainer} {style.scopeListContainer}">
								<g:Label ui:field="scopesListTitle" styleName="{style.scopesListTitle}"></g:Label>
								<g:SimplePanel styleName="{style.scopesList}">
									<w:ModelWidgetContainer ui:field="scopesList"/>
								</g:SimplePanel>
							</g:HTMLPanel>
						</g:cell>
						<g:SimplePanel ui:field="chartPanel" styleName="{style.detailsContainer} {style.releaseChartContainer}" />
					</g:HorizontalPanel>
				</g:FocusPanel>
			</g:HTMLPanel>
		</layout:ApplicationPopupBoxContainer>
		
		<g:HorizontalPanel styleName="{style.header}" verticalAlignment="middle">
			<g:FocusPanel ui:field="containerStateToggleButton" styleName="{style.containerStateToggleButton}"/>
			<g:cell width="100%">
				<g:Label ui:field="name" styleName="{style.name}"/>
			</g:cell>
			<g:FocusPanel ui:field="planningLink" styleName="{style.planningLink}"/>
		</g:HorizontalPanel>
		
		<g:SimplePanel styleName="{style.spacer}"/>
		
	</g:HTMLPanel>
</ui:UiBinder> 