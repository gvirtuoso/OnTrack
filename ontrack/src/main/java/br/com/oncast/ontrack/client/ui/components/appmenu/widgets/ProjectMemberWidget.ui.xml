<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:u="urn:import:br.com.oncast.ontrack.client.ui.components.user">
	<ui:style>
	
		.container {
			margin-bottom: 5px;
		}
		
		.userName {
			margin-left: 5px;
			width: 153px;
			text-transform: capitalize;
		}
		
		
	</ui:style>
	<g:HorizontalPanel ui:field="container" styleName="{style.container}">
		<u:UserWidget ui:field="userWidget"/>
		<g:cell width="100%" verticalAlignment="middle">
			<g:Label ui:field="userName" styleName="{style.userName} v-ellip" />
		</g:cell>
	</g:HorizontalPanel>
</ui:UiBinder> 