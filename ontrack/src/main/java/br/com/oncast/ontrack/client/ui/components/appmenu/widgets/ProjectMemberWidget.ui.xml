<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="br.com.oncast.ontrack.client.ui.components.appmenu.widgets.ProjectMemberWidget.ProjectMemberWidgetStyle">
	
		.container {
			margin-bottom: 5px;
		}
		
		.image{
			width: 40px;
			height: 40px;
		}
	
		.userName {
			margin-left: 5px;
			width: 153px;
		}
		
		.active {
			border-right: solid 5px #6EB18E;
		}
		
		.online {
			border-right: solid 5px #4D5781;
		}
		
		.offline {
			border-right: solid 5px #C5C5C5;
		}
	</ui:style>
	<g:HorizontalPanel ui:field="container" styleName="{style.container}">
		<g:Image ui:field="userIcon" styleName="{style.image}" />
		<g:cell width="100%" verticalAlignment="middle">
			<g:Label ui:field="userName" styleName="{style.userName} v-ellip" />
		</g:cell>
	</g:HorizontalPanel>
</ui:UiBinder> 