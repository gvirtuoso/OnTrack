<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:u="urn:import:br.com.oncast.ontrack.client.ui.components.user"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">
	
	<ui:image field="removeImg" src="remove.png" />
	<ui:style src="../../../style/default.css">
	
		.focusPanel:HOVER {
			background: #EAEAEA;
			box-shadow: inset 0px 0px 5px 3px #FAFAFA;
		}
	
		.container {
			margin-bottom: 5px;
		}
		
		.userName {
			margin-left: 10px;
			width: 230px;
			text-transform: capitalize;
		}
		
		@sprite .removeUser {
			gwt-image: 'removeImg';
			
			width: 24px;
			height: 24px;
			
			background-size: 24px;
			background-position: center;
			cursor: pointer;
		}
		
		.confirmRemotion {
			border-radius: 5px;
			border: 2px solid white;
			background: COLOR_RED;
			color: white;
			padding: 5px;
			font-weight: bold;
			cursor: pointer;
			box-shadow: 0px 0px 1px COLOR_GRAY_DARKEST;
			margin-left: 10px;
		}
		
	</ui:style>
	<g:FocusPanel ui:field="focusPanel" styleName="{style.focusPanel}">
		<g:HorizontalPanel ui:field="container" styleName="{style.container}" verticalAlignment="middle">
			<u:UserWidget ui:field="userWidget"/>
			<g:Label ui:field="confirmRemotion" styleName="{style.confirmRemotion}">
				<ui:msg description="confirm remotion button text">Confirm</ui:msg>
			</g:Label>
			<g:cell width="100%">
				<g:Label ui:field="userNameLabel" styleName="{style.userName} v-ellip" />
			</g:cell>
			<g:FocusPanel ui:field="removeUser" styleName="{style.removeUser}"/>
		</g:HorizontalPanel>
	</g:FocusPanel>
</ui:UiBinder> 