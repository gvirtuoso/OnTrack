<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:chart="urn:import:br.com.oncast.ontrack.client.ui.components.releasepanel.widgets.chart"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:t="urn:import:org.moxieapps.gwt.highcharts.client">
	
	<ui:image field="closeImage" src="stats-close.png"/>
	
	<ui:style src="../../../../style/default.css">
	
	.rootPanel {
		position: relative;
		background: white;
	}
	
	.container {
		margin: POPUP_PADDING;
		
		color: #606060;
	}
	
	.closeIcon {
		position: absolute;
		top: -9.5px;
		right: -9.5px;
		
		cursor: pointer;
	}
	
	.parameterLabel {
		font-weight: bold;
		margin-right: 5px;
	}

	.parameterLabel, .unitLabel {
		display: inline;
	}
	
	.unitLabel {
		margin-left: 3px;
	}
	
	.separator {
		margin-right: 15px;
	}
	
	.helpText {
		position: absolute;
		top: 3px;
		right: 12px;
		
		color: #9ba2d2;
		font-style: italic;
	}
	
	</ui:style>
	
	<g:HTMLPanel styleName="{style.popupContainer} {style.rootPanel}">
		<g:FocusPanel ui:field="clickableChartPanel" styleName="{style.container}">
			<g:HTMLPanel>
				<g:FocusPanel ui:field="chartPanel"/>
				<g:HorizontalPanel>
					<chart:ReleaseChartEditableDateLabel ui:field="startDate" text="Start:"/>
					<g:SimplePanel styleName="{style.separator}"/>
					
					<chart:ReleaseChartEditableDateLabel ui:field="endDate" text="End:"/>
					<g:SimplePanel styleName="{style.separator}"/>
					
					<chart:ReleaseChartEditableLabel ui:field="velocity" text="Estimated Velocity:"/>
					<g:SimplePanel styleName="{style.separator}"/>
					
					<g:Label text="Current Velocity:" styleName="{style.parameterLabel}"/>
					<g:Label ui:field="currentVelocity" styleName="{style.parameterLabel}"/>
					<g:Label text="ep/day" styleName="{style.unitLabel}"/>
				</g:HorizontalPanel>
				<g:Label ui:field="helpText" text="OnTrack has different estimatives. Click 'Infered Ideal Line' to compare" styleName="{style.helpText}"/>
			</g:HTMLPanel>
		</g:FocusPanel>
		<g:Image ui:field="closeIcon" resource="{closeImage}" styleName="{style.closeIcon}"/>
	</g:HTMLPanel>

</ui:UiBinder> 