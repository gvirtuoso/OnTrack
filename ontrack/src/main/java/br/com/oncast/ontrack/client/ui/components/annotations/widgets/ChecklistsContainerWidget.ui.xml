<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">
	
	<ui:style src="../../../style/default.css">
		
		.newChecklistTitle {
			width: 100%;
		}
		
		.addChecklistLabel {
			width: 198px !important;
			margin: auto;
			
			font-weight: bold;
			text-align: center;
			text-transform: uppercase;

			padding: PADDING_MEDIUM;
			border: 1px solid transparent;
			border-radius: BORDER_RADIUS_SMALL;
			
			cursor: pointer;
		}

		.addChecklistLabel:hover {
			border-color: #AEAEAE;
			-webkit-box-shadow: inset -1px -1px 1px #E9E9E9;
			-moz-box-shadow: inset -1px -1px 1px #E9E9E9;
			box-shadow: inset -1px -1px 1px #E9E9E9;
		}
		
		.addChecklistDeck {
			margin-top: 3px;
		}

		.addButton {
			cursor: pointer;
			font-weight: bold;
			text-align: center;
			padding: BORDER_RADIUS_SMALL;
			border: 1px solid transparent;
			border-radius: BORDER_RADIUS_SMALL;
			
			margin: 0px 8px;
		}
		
		.addButton:HOVER {
			border-color: #AEAEAE;
			-webkit-box-shadow: inset -1px -1px 1px #E9E9E9;
			-moz-box-shadow: inset -1px -1px 1px #E9E9E9;
			box-shadow: inset -1px -1px 1px #E9E9E9;
		}

	</ui:style>
	
	<g:HTMLPanel>
		<misc:ModelWidgetContainer ui:field="checklists"/>
		
		<g:DeckPanel ui:field="addChecklistDeck" styleName="{style.addChecklistDeck}">
			<g:Label ui:field="addChecklistLabel" styleName="{style.addChecklistLabel}">
				<ui:msg description="add checklist label">+ Add checklist</ui:msg>
			</g:Label>
			
			<g:HorizontalPanel width="100%" verticalAlignment="middle">
				<g:Label ui:field="addButton" text="+" styleName="{style.addButton}"/>
				<g:cell width="100%">
					<misc:DefaultTextedTextBox ui:field="newChecklistTitle" styleName="{style.newChecklistTitle}" defaultText="New Checklist Title">
						<ui:attribute name="defaultText" description="new checklist input default text" />
					</misc:DefaultTextedTextBox>
				</g:cell>
			</g:HorizontalPanel>
		</g:DeckPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 