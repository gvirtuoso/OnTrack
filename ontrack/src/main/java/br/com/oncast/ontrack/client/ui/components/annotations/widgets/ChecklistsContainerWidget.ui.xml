<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">
	
	<ui:style>
		
		.newChecklistTitle {
			width: 100%;
		}
		
		.addChecklistLabel {
			width: 100%;
			font-weight: bold;
			cursor: pointer;
			padding: 11px 0px 9px 0px;
			text-align: center;
			border: 1px solid white;
			
			margin: auto;
			
		}

		.addChecklistLabel:hover {
			border: 1px solid #d3d3d3;
			background-color: #fafafa;
			-webkit-box-shadow: inset 0 1px 0 0 #E9E9E9, 0 2px 6px #E1E1E1;
			-moz-box-shadow: inset 0 1px 0 0 #e9e9e9, 0 2px 6px #e1e1e1;
			box-shadow: inset 0 1px 0 0 #E9E9E9, 0 2px 6px #E1E1E1;
		}
		
		.addChecklistDeck {
			margin-top: 3px;
		}

		.addButton {
			cursor: pointer;
			font-weight: bold;
			
			margin: 0px 8px;
		}

	</ui:style>
	
	<g:HTMLPanel>
		<misc:ModelWidgetContainer ui:field="checklists"/>
		
		<g:DeckPanel ui:field="addChecklistDeck" styleName="{style.addChecklistDeck}">
			<g:Label ui:field="addChecklistLabel" styleName="{style.addChecklistLabel}">
				<ui:msg description="add checklist label">+ ADD CHECKLIST</ui:msg>
			</g:Label>
			
			<g:HorizontalPanel width="100%" verticalAlignment="middle">
				<g:Label ui:field="addButton" text="+" styleName="{style.addButton}"/>
				<g:cell width="100%">
					<misc:DefaultTextedTextBox ui:field="newChecklistTitle" styleName="{style.newChecklistTitle}" defaultText="New Checklist Title">
						<ui:attribute name="defaultText" description="new checklist input default text" />
					</misc:DefaultTextedTextBox>
				</g:cell>
			</g:HorizontalPanel>
		</g:DeckPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 