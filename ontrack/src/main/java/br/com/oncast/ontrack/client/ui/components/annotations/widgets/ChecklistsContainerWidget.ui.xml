<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">
	
	<ui:style>
		
		.addChecklist {
			cursor: pointer;
			font-weight: bold;
			
			display: inline-block;
			margin-left: 3px;
		}
		
		.newChecklistTitle {
			width: 100%;
		}
		
		.addChecklistLabel {
			width: 100%;
			text-align: center;
			font-weight: bold;
			cursor: pointer;
		}
		
		.addChecklistDeck {
			margin-top: 3px;
		}

		.addButton {
			cursor: pointer;
			font-weight: bold;
			
			margin: 0px 5px;
		}
		
	</ui:style>
	
	<g:HTMLPanel>
		<misc:VerticalModelWidgetContainer ui:field="checklists"/>
		
		<g:DeckPanel ui:field="addChecklistDeck" styleName="{style.addChecklistDeck}">
			<g:Label ui:field="addChecklistLabel" styleName="{style.addChecklistLabel}" text="+ ADD CHECKLIST"/>
			
			<g:HorizontalPanel width="100%" verticalAlignment="middle">
				<g:Label ui:field="addButton" text="+" styleName="{style.addButton}"/>
				<g:cell width="100%">
					<misc:DefaultTextedTextBox ui:field="newChecklistTitle" styleName="{style.newChecklistTitle}" defaultText="New Checklist Title"/>
				</g:cell>
			</g:HorizontalPanel>
		</g:DeckPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 