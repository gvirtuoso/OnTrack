<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:s="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.scope">
	
	<ui:data field="draggableImage" src="../../move_scope.png"/>
	<ui:image field="notStarted" src="not_started.png"/>
	<ui:image field="notStartedHover" src="not_started_hover.png"/>
	<ui:image field="underwork" src="underwork.png"/>
	<ui:image field="done" src="done.png"/>

	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.releasepanel.widgets.ReleaseScopeWidget.ReleaseScopeWidgetStyle">
	
	    @url draggableImageUrl draggableImage;
	
		.panel {
			position: relative;
			margin-top: -1px;

			background: COLOR_MENUBOX_BACKGROUND;
			
			color: COLOR_MENUBOX_TEXT;
			font-family: FONT_DEFAULT;

			border: SCOPE_WIDGET_BORDER;
			
		}
		
		.panel:hover {
			background-color: COLOR_RELEASE_WIDGET_HEADER_BACKGROUND_CLOSED;
			cursor: pointer;
		}
		
		.selected {
			background-color: #ffe8b3;
		}
		
	    .internalPanel {
	        position: relative;
	        height: 100%;
	        width: 100%;
	    }
		
		.descriptionLabel {
			padding: 10px;
		}
		
		.draggable {
			cursor: move;
			border-right: RELEASE_WIDGET_BORDER;
			height: 100%;
            width: 10px; 
		}
		
		.draggableImage {
			position: absolute;
			top: 5px;
			bottom: 5px;
			left: 2px;
            width: 9px; 
			
			background-image: draggableImageUrl;
            background-repeat: repeat-y;
		}
		
		.progressIcon {
			margin-right: 10px;
			margin-top: 4px;
			cursor: pointer;
		}
		
		@sprite .progressIconDone {
			gwt-image: 'done';
		}
		
		@sprite .progressIconUnderwork {
			gwt-image: 'underwork';
		}
		
		@sprite .progressIconNotStarted {
			gwt-image: 'notStarted';
		}
		
		.statusBar {
			background-color: transparent;
			width: 4px;
			height: 80%;
		}
		
		.statusBarOpenImpediment {
			background-color: #f0542d;
		}
		
	</ui:style>

	<g:FocusPanel ui:field="panel" styleName="{style.panel}">
		<g:HorizontalPanel ui:field="internalPanel" styleName="{style.internalPanel}" verticalAlignment="middle">
			<g:FocusPanel ui:field="draggableAnchor" styleName="{style.draggable}">
				<g:SimplePanel styleName="{style.draggableImage}"/>
			</g:FocusPanel>
			<s:ScopeAssociatedMembersWidget ui:field="associatedUsers" />
	  		<g:cell width="100%">
				<g:Label ui:field="descriptionLabel" styleName="{style.descriptionLabel}" />
	  		</g:cell>
 			<g:FocusPanel ui:field="progressIcon" styleName="{style.progressIconNotStarted} {style.progressIcon}"/>
  			<g:FocusPanel ui:field="statusBar" styleName="{style.statusBar}"/>
		</g:HorizontalPanel>
	</g:FocusPanel>
</ui:UiBinder> 