<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:s="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.scope">
	
	<ui:data field="draggableImage" src="../../move_scope.png"/>
	<ui:image field="notStarted" src="not_started.png"/>
	<ui:image field="notStartedHover" src="not_started_hover.png"/>
	<ui:image field="underwork" src="underwork.png"/>
	<ui:image field="done" src="done.png"/>

	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.releasepanel.widgets.ReleaseScopeWidget.ReleaseScopeWidgetStyle">
	
	    @url draggableImageUrl draggableImage;
	
		.panel {
			position: relative;
			margin-top: -1px;

			background: COLOR_MENUBOX_BACKGROUND;
			
			color: #666;
			font-family: FONT_DEFAULT;

			border: SCOPE_WIDGET_BORDER;
			
		}
		
		.panel:hover {
			background-color: COLOR_RELEASE_WIDGET_HEADER_BACKGROUND_CLOSED;
			cursor: pointer;
		}
		
		.selected {
			background-color: white;
			box-shadow: 0px 0px 5px orange;
			z-index: 1;
			border: 1px solid #888;
		}

		.selected:hover {
			border: 1px solid #777;
			color: #555;
		}
		
		.targetHighlight {
			background-color: #ffe8b3;
		}
		
		.associationHighlight {
			background-color: white;
			z-index: 1;
			border: 1px solid #888;
		}	
		
	    .internalPanel {
	        position: relative;
	        height: 100%;
	        width: 100%;
	    }
	    
	    .percentualBar {
			position: absolute;
			bottom: 0px;
			left: 11px;
			right: 0px;
			height: 3px;
		}
		
		.descriptionContainer {
			padding: 10px 5px;
		}
		
		.humanId {
			color: white;
			font-size: 8pt;
			background: #C0C0C0;
			border-radius: 4px;
			padding: 1px 5px;
		}

		.effortLabel {
			font-size: 11px;
			padding-top: 2px;
			padding-right: 6px;
			font-weight: bolder;
			color: #B3B3B3;
			text-align: center;
		}
		
		.draggable {
			cursor: move;
			height: 100%;
            width: 9px; 
		}
		
		.draggableImage {
			position: absolute;
			top: 5px;
			bottom: 5px;
			left: 0px;
            width: 9px; 
			
			background-image: draggableImageUrl;
            background-repeat: repeat-y;
		}
		
		.progressIcon {
			margin-right: 6px;
			margin-top: 4px;
			cursor: pointer;
		}
		
		@sprite .progressIconDone {
			gwt-image: 'done';
		}
		
		@sprite .progressIconUnderwork {
			gwt-image: 'underwork';
		}
		
		@sprite .progressIconNotStarted {
			gwt-image: 'notStarted';
		}
		
		.statusBar {
			background-color: transparent;
			width: 4px;
			height: 80%;
		}
		
		.statusBarOpenImpediment {
			background-color: #f0542d;
		}
		
	</ui:style>

	<g:FocusPanel ui:field="panel" styleName="{style.panel}">
		<g:HorizontalPanel ui:field="internalPanel" styleName="{style.internalPanel}" verticalAlignment="middle">
			<t:PercentualBar ui:field="percentualBar" styleName="{style.percentualBar}" />
			<g:cell height="100%">
				<g:FocusPanel ui:field="draggableAnchor" styleName="{style.draggable}">
					<g:SimplePanel styleName="{style.draggableImage}"/>
				</g:FocusPanel>
			</g:cell>
			<s:ScopeAssociatedMembersWidget ui:field="associatedUsers" />
	  		<g:cell width="100%">
	  			<g:HTMLPanel styleName="{style.descriptionContainer}">
	  				<span ui:field="humanIdLabel" class="{style.humanId}"/>
					<span ui:field="descriptionLabel"/>
	  			</g:HTMLPanel>
	  		</g:cell>
  			<g:Label ui:field="effortLabel" styleName="{style.effortLabel}" />
 			<g:FocusPanel ui:field="progressIcon" styleName="{style.progressIconNotStarted} {style.progressIcon}"/>
  			<g:FocusPanel ui:field="statusBar" styleName="{style.statusBar}"/>
		</g:HorizontalPanel>
	</g:FocusPanel>
</ui:UiBinder> 