<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:s="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.scope">
	
	<ui:image field="notStarted" src="not_started.png"/>
	<ui:image field="underwork" src="underwork.png"/>
	<ui:image field="done" src="done.png"/>
	<ui:data field="draggableImage" src="../../move_scope.png"/>
	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.releasepanel.widgets.ReleaseScopeWidget.ReleaseScopeWidgetStyle">
	
	    @url draggableImageUrl draggableImage;
	
		.panel {
			position: relative;
			margin-top: -1px;

			background: COLOR_BACKGROUND_SECONDARY;
			color: COLOR_TEXT_SECONDARY;
			border: BORDER_SECONDARY;
		}
		
		.panel:hover {
			background-color: COLOR_HOVER_SECONDARY;
			cursor: pointer;
		}
		
		.selected {
			background-color: COLOR_SELECTED_HEADER;
			box-shadow: SHADOW_SELECTED_HEADER;
			z-index: 1;
			border: 1px solid #888;
		}

		.selected:hover {
			color: #555;
		}
		
		.targetHighlight {
			background-color: COLOR_SELECTED_HEADER !important;
		}
		
		.associationHighlight {
			background-color: white;
			box-shadow: SHADOW_SELECTED_HEADER;
			z-index: 1;
			border: 1px solid #888;
		}	
		
	    .internalPanel {
	        position: relative;
	        height: 100%;
	        width: 100%;
	    }
	    
	    .percentualBar {
			position: absolute;
			bottom: 0px;
			left: 11px;
			right: 0px;
			height: 3px;
		}
		
		.descriptionContainer {
			position: relative;
			padding: 10px 5px;
		}
		
		.humanId {
			color: white;
			font-size: 8pt;
			background: #C0C0C0;
			border-radius: 4px;
			padding: 1px 5px;
		}

		.effortLabel {
			font-size: 11px;
			padding-top: 2px;
			padding-right: 6px;
			font-weight: bolder;
			color: #B3B3B3;
			text-align: center;
		}
		
		.draggable {
			cursor: move;
			height: 100%;
            width: 9px; 
		}
		
		.draggableImage {
			position: absolute;
			top: 5px;
			bottom: 5px;
			left: 0px;
            width: 9px; 
			
			background-image: draggableImageUrl;
            background-repeat: repeat-y;
		}
		
		@sprite .progressIconDone {
        	gwt-image: 'done';
		}
		
		@sprite .progressIconUnderwork {
	        gwt-image: 'underwork';
		}
		
		@sprite .progressIconNotStarted {
	        gwt-image: 'notStarted';
		}
		
		.progressUnderWork {
			right: 7px;
		}
		
		.hasOpenImpediments {
			color: COLOR_ERROR_PRIMARY;
		}
		
		.progressIcon {
			position: relative;
			right: 6px;
			cursor: pointer;
		}
		
		.tags {
			position: absolute;
			right: 7px;
			bottom: -4px;
		}
		
		.draggingMousePointer {
			cursor: move;
		}
	</ui:style>

	<g:FocusPanel ui:field="panel" styleName="{style.panel}">
		<g:HorizontalPanel ui:field="internalPanel" styleName="{style.internalPanel}" verticalAlignment="middle">
			<g:cell height="100%">
				<g:FocusPanel ui:field="draggableAnchor" styleName="{style.draggable}">
					<g:SimplePanel styleName="{style.draggableImage}"/>
				</g:FocusPanel>
			</g:cell>
			<t:PercentualBar ui:field="percentualBar" styleName="{style.percentualBar}" />
			<s:ScopeAssociatedMembersWidget ui:field="associatedUsers" />
	  		<g:cell width="100%">
	  			<g:HTMLPanel styleName="{style.descriptionContainer}">
	  				<span ui:field="humanIdLabel" class="{style.humanId}"/>
					<span ui:field="descriptionLabel"/>
					<s:ScopeAssociatedTagsWidget ui:field="tags" styleName="{style.tags}"/>
	  			</g:HTMLPanel>
	  		</g:cell>
  			<g:Label ui:field="effortLabel" styleName="{style.effortLabel}" />
 			<g:FocusPanel ui:field="progressIcon" styleName="{style.progressIcon}"/>
		</g:HorizontalPanel>
	</g:FocusPanel>
</ui:UiBinder> 