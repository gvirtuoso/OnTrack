<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:aw="urn:import:br.com.oncast.ontrack.client.ui.components.annotations.widgets"
	xmlns:menu="urn:import:br.com.oncast.ontrack.client.ui.components.annotations.widgets.menu">
	
	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.annotations.widgets.AnnotationTopic.AnnotationTopicStyle">
	
		.author {
			vertical-align: top;
			border: 1px solid COLOR_GRAY_DARK;
			
			width: 40px;
			height: 40px;
			margin-right: 5px;
		}
		
		.messageBody {
			display: inline-block;
			margin-bottom: 10px;
		}
		
		.detailContainer {
			margin-bottom: -7px;
			text-align: right;
			font-size: FONT_SIZE_TINY;
			font-style: italic;
		}
		
		.commentsPanel {
			padding: 20px;
			padding-bottom: 0px;
			height: auto;
		}
		
		.separator {
			margin: 6px -15px 5px -15px;
		}
		
		.deprecatedLabel {
			font-weight: bold;
			cursor: pointer;
			margin-bottom: 5px;
		}
		
		.closedDeprecatedContainer {
			cursor: pointer;
			position: relative;
			width: 100%;
			height: 15px !important;
		}
		
		.closedDeprecatedLabel {
			position: absolute;
			top: 0px;
			right: 0px;
			left: 0px;
			bottom: 0px;
		}
		
		.simple, .openImpediment, .solvedImpediment {
			border-left: 5px solid transparent;
			padding: 3px 0px 3px 5px;
		}
		
		@def OPEN_IMPEDIMENT_COLOR #f0542d;
		.openImpediment {
			border-left-color: OPEN_IMPEDIMENT_COLOR;
		}
		
		@def SOLVED_IMPEDIMENT_COLOR #44ad85;
		.solvedImpediment {
			border-left-color: SOLVED_IMPEDIMENT_COLOR;
		}
		
	</ui:style>
	
	<g:HTMLPanel>
		<g:DeckPanel ui:field="deckPanel">
			<g:HTMLPanel>
				<g:HorizontalPanel ui:field="content" height="100%">
					<g:Image ui:field="author" styleName="{style.author}" />
					<g:cell width="100%" height="100%">
						<g:VerticalPanel width="100%" height="100%">
							<g:Label ui:field="deprecatedLabel" text="[Deprecated]" styleName="{style.deprecatedLabel}"/>
							<g:cell height="100%">
								<g:HTMLPanel ui:field="messageBody" styleName="{style.messageBody}" />
							</g:cell>
							<menu:AnnotationMenuWidget ui:field="menu" styleName="{style.detailContainer}"/>
						</g:VerticalPanel>
					</g:cell>
				</g:HorizontalPanel>
				<aw:CommentsWidget ui:field="commentsPanel" styleName="{style.commentsPanel}" />
			</g:HTMLPanel>
			<g:SimplePanel styleName="{style.closedDeprecatedContainer}">
				<g:Label ui:field="closedDeprecatedLabel" styleName="{style.closedDeprecatedLabel} v-ellip"/>
			</g:SimplePanel>
		</g:DeckPanel>
		<misc:Separator styleName="{style.separator}"/>
	</g:HTMLPanel>
</ui:UiBinder> 