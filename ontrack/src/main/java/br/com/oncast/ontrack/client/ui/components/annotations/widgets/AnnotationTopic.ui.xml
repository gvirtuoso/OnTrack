<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">
	
	<ui:style src="../../../style/default.css">
	
		.author {
			margin-bottom: 7px;

			color: COLOR_GRAY_DARK;
			font-size: FONT_SIZE_MEDIUM;
			display: inline-block;
		}
	
		.wrote {
			font-size: FONT_SIZE_TINY;
			font-style: italic;
			
			display: inline-block;
		}
	
	</ui:style>
	
	<g:HTMLPanel>
		<g:HTMLPanel>
			<g:Label ui:field="author" styleName="{style.author}" />
			<g:Label styleName="{style.wrote}" text="wrote"/>
			<g:Label ui:field="when" styleName="{style.wrote}" />
			<g:HTMLPanel ui:field="message" />
		</g:HTMLPanel>
		<misc:Separator />
	</g:HTMLPanel>
</ui:UiBinder> 