<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">
	
	<ui:image field="like" src="like.png"></ui:image>
	<ui:image field="likeActive" src="like_active.png"></ui:image>
	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.annotations.widgets.AnnotationTopic.AnnotationTopicStyle">
	
		.author {
			border: 1px solid COLOR_GRAY_DARK;
			float: left;
			
			width: 40px;
			height: 40px;
			margin-right: 5px;
		}
		
		.container {
			min-height: 42px;
		}
		
		.detailContainer {
			float: right;
			margin-bottom: -5px;
			text-align: right;
			font-size: FONT_SIZE_TINY;
			font-style: italic;
		}
		
		@sprite .like {
			gwt-image: 'like';
			background-size: 12px 12px;
			width: 12px;
			height: 12px;
			
			margin-bottom: -1px;

			cursor: pointer;
		}
		
		@sprite .likeActive {
			gwt-image: 'likeActive';
			background-size: 12px 12px;
			width: 12px;
			height: 12px;
			
			margin-bottom: -1px;
			
			cursor: pointer;
		}
		
		.likeCount {
			margin-right: 5px;
			font-weight: bold;
		}
		
		.detail {
			display: inline-block;
		}
		
		.separator {
			margin: 15px -15px 10px -15px;
		}
		
	</ui:style>
	
	<g:HTMLPanel>
		<g:HTMLPanel ui:field="container" styleName="{style.container}">
			<g:Image ui:field="author" styleName="{style.author}" />
		</g:HTMLPanel>
		<g:HTMLPanel styleName="{style.detailContainer}">
			<g:FocusPanel ui:field="likeIcon" styleName="{style.like} {style.detail}" title="Like"/>
			<g:Label ui:field="likeCount" styleName="{style.detail} {style.likeCount}"/>
			<g:Label ui:field="date" styleName="{style.detail}"/>
		</g:HTMLPanel>
		<misc:Separator styleName="{style.separator}"/>
	</g:HTMLPanel>
</ui:UiBinder> 