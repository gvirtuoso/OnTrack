<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">
	
	<ui:style src="../../../style/default.css">
	
		.author {
			border: 1px solid COLOR_GRAY_DARK;
			display: inline-block;
			
			width: 40px;
			height: 40px;
			margin-right: 5px;
		}
		
		.message {
			vertical-align: top;
			display: inline-block;
		}
	
	</ui:style>
	
	<g:HTMLPanel>
		<g:HTMLPanel>
			<g:Image ui:field="author" styleName="{style.author}" />
			<g:HTMLPanel ui:field="message" styleName="{style.message}"/>
		</g:HTMLPanel>
		<misc:Separator />
	</g:HTMLPanel>
</ui:UiBinder> 