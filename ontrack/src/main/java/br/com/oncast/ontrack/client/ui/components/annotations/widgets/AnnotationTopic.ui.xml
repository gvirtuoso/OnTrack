<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:menu="urn:import:br.com.oncast.ontrack.client.ui.components.annotations.widgets.menu">
	
	<ui:image field="commentIcon" src="comment.png"></ui:image>
	<ui:image field="removeIcon" src="remove.png"></ui:image>
	<ui:style src="../../../style/default.css" type="br.com.oncast.ontrack.client.ui.components.annotations.widgets.AnnotationTopic.AnnotationTopicStyle">
	
		.author {
			vertical-align: top;
			border: 1px solid COLOR_GRAY_DARK;
			
			width: 40px;
			height: 40px;
			margin-right: 5px;
		}
		
		.container {
			display: inline-block;
			margin-bottom: 5px;
		}
		
		.deprecatedContainer {
			font-style: italic;
			opacity: 0.6;
		}
		
		.detailContainer {
			margin-bottom: -10px;
			text-align: right;
			font-size: FONT_SIZE_TINY;
			font-style: italic;
		}
		
		@sprite .deprecate {
			gwt-image: 'removeIcon';
			opacity: 0.4;
			margin-right: 5px;
		}
		
		.deprecatedIcon {
			opacity: 1;
		}
		
		.likeActive {
			opacity: 1;
		}
		
		@sprite .commentIcon {
			gwt-image: 'commentIcon';
			cursor: default;
			opacity: 0.4;
		}
		
		.icon {
			background-size: 12px 12px;
			width: 12px;
			height: 12px;
			
			margin-bottom: -1px;
			
			cursor: pointer;
		}
		
		.clockIcon {
			cursor: default;
		}
		
		.countLabel {
			margin-right: 5px;
			font-weight: bold;
			cursor: default;
		}
		
		.dateLabel {
			cursor: default;
		}			
		
		.detail {
			display: inline-block;
		}
		
		.commentPanel {
			padding: 20px;
			padding-bottom: 0px;
			height: auto;
		}
		
		.separator {
			margin: 15px -15px 10px -15px;
		}
		
		.icon > input {
			cursor: inherit;
		}
		
		.deprecatedLabel {
			font-weight: bold;
			cursor: pointer;
			margin-bottom: 5px;
		}
		
		.closedDeprecatedContainer {
			cursor: pointer;
			position: relative;
			width: 100%;
			height: 15px !important;
		}
		
		.closedDeprecatedLabel {
			position: absolute;
			top: 0px;
			right: 0px;
			left: 0px;
			bottom: 0px;
		}
		
		.openImpediment {
			background: #FEE;
			box-shadow: 0px 0px 10px 3px #FEE;
		}
		
		.solvedImpediment {
			background: #EEF;
			box-shadow: 0px 0px 10px 3px #EEF;
		}
		
		.simple, .openImpediment, .solvedImpediment {
			margin: 0px 6px;
		}
		
	</ui:style>
	
	<g:HTMLPanel>
		<g:DeckPanel ui:field="deckPanel">
			<g:HTMLPanel>
				<g:HorizontalPanel ui:field="content" height="100%">
					<g:Image ui:field="author" styleName="{style.author}" />
					<g:cell width="100%" height="100%">
						<g:VerticalPanel width="100%" height="100%">
							<g:Label ui:field="deprecatedLabel" text="[Deprecated]" styleName="{style.deprecatedLabel}"/>
							<g:cell height="100%">
								<g:HTMLPanel ui:field="container" styleName="{style.container}" />
							</g:cell>
							<menu:AnnotationMenuWidget ui:field="menu" styleName="{style.detailContainer}"/>
						</g:VerticalPanel>
					</g:cell>
				</g:HorizontalPanel>
				<g:SimplePanel ui:field="commentsContainer"/>
			</g:HTMLPanel>
			<g:SimplePanel styleName="{style.closedDeprecatedContainer}">
				<g:Label ui:field="closedDeprecatedLabel" styleName="{style.closedDeprecatedLabel} v-ellip"/>
			</g:SimplePanel>
		</g:DeckPanel>
		<misc:Separator styleName="{style.separator}"/>
	</g:HTMLPanel>
</ui:UiBinder> 