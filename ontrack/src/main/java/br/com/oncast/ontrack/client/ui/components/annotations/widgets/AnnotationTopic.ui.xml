<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">
	
	<ui:style src="../../../style/default.css">
	
		.author {
			border: 1px solid COLOR_GRAY_DARK;
			float: left;
			
			width: 40px;
			height: 40px;
			margin-right: 5px;
		}
		
		.container {
			min-height: 42px;
		}
		
		.date {
			float: right;
			margin-bottom: -5px;
			text-align: right;
			font-size: FONT_SIZE_TINY;
			font-style: italic;
		}
		
		.separator {
			margin: 15px -15px 10px -15px;
		}
		
	</ui:style>
	
	<g:HTMLPanel>
		<g:HTMLPanel ui:field="container" styleName="{style.container}">
			<g:Image ui:field="author" styleName="{style.author}" />
		</g:HTMLPanel>
		<g:Label ui:field="date" styleName="{style.date}"/>
		<misc:Separator styleName="{style.separator}"/>
	</g:HTMLPanel>
</ui:UiBinder> 