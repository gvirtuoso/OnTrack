<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:layout="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout">

	<ui:style src="../../../style/default.css">
	   .rootPanel {
			padding: 5px;
			padding-bottom: 0px;
			width: auto;
			border-top: POPUP_BORDER;
			background-color: #eaeaea;
	   	}
	   	
	   	.releases {
	   		width: 100%;
	   	}
	   	
	   	.noReleaseLabel {
			color: COLOR_MENUBOX_TEXT;
			font-weight: bolder;
			margin: 30px 0px 35px 0px;
			text-shadow: 1px 1px 1px COLOR_MENUBOX_BACKGROUND;
			width: 100%;
			text-align: center;
		}
	</ui:style>
	
	<layout:ApplicationPopupBoxContainer addStyleNames="{style.rootPanel}">
		<g:Label ui:field="noReleaseLabel" text="No Release yet" styleName="{style.noReleaseLabel}" visible="false"/>
		<misc:VerticalModelWidgetContainer ui:field="releaseContainer" styleName="{style.releases}" />
	</layout:ApplicationPopupBoxContainer>
</ui:UiBinder> 