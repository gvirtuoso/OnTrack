<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:layout="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">

	<ui:style src="../../../style/default.css">
	   .rootPanel {
			padding: 0px;
			width: auto;
	   	}
	   	
	   	.container {
			padding: 10px;
			padding-bottom: 5px;
		}
	   	
	   	.releases {
	   		width: 100%;
	   	}
	   	
	   	.noReleaseContainer {
			position: relative;
			padding: 30px 0px;
			text-shadow: TEXT_SHADOW_ENGRAVED_METAL;
			width: 100%;
		}
	   	
	   	.noReleaseLabel {
			color: COLOR_GRAY;
			text-align: center;
			width: 100%;
			margin-bottom: 5px;
			font-size: FONT_SIZE_MEDIUM;
			font-family: FONT_DEFAULT;
		}
		
		.helpLabel {
			position: absolute;
			bottom: 5px;
			left: 0px;
			right: 0px;
			
			color: COLOR_GRAY_LIGHT;
			text-align: center;
		}
			
	</ui:style>
	
	<layout:ApplicationPopupBoxContainer addStyleNames="{style.rootPanel}" addBackgroundStyleNames="{style.semiTransparentContainer}" addContainerStyleNames="{style.container}">
		<g:FlowPanel ui:field="noReleaseText" styleName="{style.noReleaseContainer}">
			<g:Label styleName="{style.noReleaseLabel}">
				<ui:msg description="no releases in project message">No Release yet</ui:msg>
			</g:Label>
			<g:Label styleName="{style.helpLabel}">
				<ui:msg description="release creation help message">Select a Scope and hit '@' key to attach the Scope to a Release</ui:msg>
			</g:Label>
		</g:FlowPanel>
		<misc:VerticalModelWidgetContainer ui:field="releaseContainer" styleName="{style.releases}" />
	</layout:ApplicationPopupBoxContainer>
</ui:UiBinder> 