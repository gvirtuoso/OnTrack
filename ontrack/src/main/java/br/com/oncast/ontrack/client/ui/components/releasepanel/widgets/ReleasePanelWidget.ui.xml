<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:ow="urn:import:br.com.oncast.ontrack.client.ui.components.releasepanel.widgets">

	<ui:style>
	   .rootPanel {
	   	   position: relative;
	   	   top: 0px;
	   	   left: 0px;
	   	   right: 0px;
	   	   bottom: 0px;
	   	}
	   	
	   	.releases {
	   		width: 100%;
	   	}
	</ui:style>
	
	<g:AbsolutePanel ui:field="boundaryPanel" >
		<g:HTMLPanel styleName="{style.rootPanel}" >
			<ow:VerticalModelWidgetContainer ui:field="releaseContainer" styleName="{style.releases}" />
		</g:HTMLPanel>
	</g:AbsolutePanel>
</ui:UiBinder> 