<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets"
	xmlns:layout="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets.layout">

	<ui:style src="../../../style/default.css">
	   .rootPanel {
			padding: 5px;
			padding-bottom: 0px;
			width: auto;
			border-top: POPUP_BORDER;
			background-color: #eaeaea;
	   	}
	   	
	   	.releases {
	   		width: 100%;
	   	}
	   	
	   	.noReleaseContainer {
			position: relative;
			padding: 30px 0px;
			text-shadow: 1px 1px 1px COLOR_MENUBOX_BACKGROUND;
			width: 100%;
		}
	   	
	   	.noReleaseLabel {
			color: COLOR_MENUBOX_TEXT;
			text-align: center;
			width: 100%;
			margin-bottom: 5px;
			font-size: FONT_SIZE_MEDIUM;
			font-family: FONT_DEFAULT;
		}
		
		.helpLabel {
			position: absolute;
			bottom: 5px;
			left: 0px;
			right: 0px;
			
			color: COLOR_MENUBOX_ITEM_SELECTED;
			text-align: right;
		}
			
	</ui:style>
	
	<layout:ApplicationPopupBoxContainer addStyleNames="{style.rootPanel}">
		<g:FlowPanel ui:field="noReleaseText" styleName="{style.noReleaseContainer}">
			<g:Label text="No Release yet" styleName="{style.noReleaseLabel}"/>
			<g:Label text="Select a Scope and hit '@' key to attach the Scope to a Release" styleName="{style.helpLabel}"/>
		</g:FlowPanel>
		<misc:VerticalModelWidgetContainer ui:field="releaseContainer" styleName="{style.releases}" />
	</layout:ApplicationPopupBoxContainer>
</ui:UiBinder> 