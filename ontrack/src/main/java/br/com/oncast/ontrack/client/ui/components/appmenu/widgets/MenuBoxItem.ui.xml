<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style type="br.com.oncast.ontrack.client.ui.components.appmenu.widgets.MenuBoxItem.MenuBoxItemStyle" src="../../../style/default.css">
	.rootPanel {
		border-top: POPUP_BORDER;
		padding: 1px;
	}
	
	.selected, .rootPanel:hover {
		background-color: COLOR_MENUBOX_ITEM_SELECTED;
		color: white;
	}
	
	.label {
		padding: 13px PADDING_LARGE;
	}
	
	.icon {
        margin: 13px 0px 13px PADDING_LARGE;
	}
	</ui:style>
	
	<g:FocusPanel ui:field="rootPanel" styleName="{style.rootPanel}">
		<g:HorizontalPanel>
			<g:cell verticalAlignment="middle">
				<g:Image ui:field="icon" styleName="{style.icon}" />
			</g:cell>
			<g:cell verticalAlignment="middle" width="100%">
				<g:Label ui:field="label" styleName="{style.label}" />
			</g:cell>
		</g:HorizontalPanel>
	</g:FocusPanel>
</ui:UiBinder> 