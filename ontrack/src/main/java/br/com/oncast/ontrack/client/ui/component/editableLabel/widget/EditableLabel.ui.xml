<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	    .editableLabel {
			height: 15px;
			min-height: 15px;
	    }
		.visualizationLabel {
			cursor: pointer;
			cursor: hand;
		}
		.tagPanel{
			display: inline;	
		}
		.tagLabel{
			border-radius:5%;
   			-moz-border-radius:5%;
   			-webkit-border-radius:5px;
			margin-left: 10px;
			margin-top: 1px;
			padding-left: 2px;
			padding-right: 2px;
			border: 2px;
			color: white;
			background-color: red;
		}
	</ui:style>
	<g:FocusPanel ui:field="focusPanel" styleName="{style.editableLabel}">
		<g:DeckPanel ui:field="deckPanel">
			<g:HorizontalPanel styleName="{style.tagPanel}" ui:field="tagPanel">
				<g:Label styleName="{style.visualizationLabel}" ui:field="editLabel" />
				<g:Label styleName="{style.tagLabel}" ui:field="tagLabel" />
			</g:HorizontalPanel>
			<g:TextBox styleName="edit" ui:field="editBox" />
		</g:DeckPanel>
	</g:FocusPanel>
</ui:UiBinder>