<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:org.moxieapps.gwt.highcharts.client">
	
	<ui:style>
			.chart {
                position: absolute;
                top: 0px;
                right: 0px;
                width: 350px;
				z-index: 2;

                -moz-box-shadow: 2px 2px 4px #888;
				-webkit-box-shadow: 2px 2px 4px #888;
				box-shadow: 2px 2px 4px #888;
			}
			
			.focusPanel {
                position: absolute;
				top: 23px;
				height: 184px;
				right: -10px;
				width: 350px;
				padding-top: 5px;
				padding-left: 10px;
			
            	border: 1px solid #a5a5a5;
		    	-moz-box-shadow: 0px 0px 5px #a5a5a5;
		    	-webkit-box-shadow: 0px 0px 5px #a5a5a5;
		    	box-shadow: 0px 0px 5px #a5a5a5;
		    
		   		color: #F5F5F7;
				font-size: small;
		    	font-weight: bold;
		    	z-index: 5
			}
				
		</ui:style>
		<g:FocusPanel styleName="{style.focusPanel}" ui:field="clickableChartPanel" >
			<t:Chart ui:field="chart" styleName="{style.chart}" />
		</g:FocusPanel>

</ui:UiBinder> 