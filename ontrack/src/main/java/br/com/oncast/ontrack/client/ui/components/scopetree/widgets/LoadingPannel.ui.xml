<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">
	
	<ui:style src="../../../style/default.css">
	
		.loadingIndicatorPanel {
			width: 100%;
			height: 100%;
			position: relative;
		}
		
		.loadingLabel {
			position: absolute;
			top: 50%;
			left: 50%;
			font-size: 14pt;
			letter-spacing: 3px;
			padding: 10px 20px;
			margin: -20px 0 0 -77px;
			color: #fafafa;
			border-radius: 5px;
			background: #444;
			background: rgba(0, 0, 0, 0.75);
		}
		
	</ui:style>
	
	<g:HTMLPanel styleName="{style.loadingIndicatorPanel}">
		<g:Label styleName="{style.loadingLabel}"><ui:msg description="Scope tree filtering message">Filtering</ui:msg>...</g:Label>
	</g:HTMLPanel>
	
</ui:UiBinder>