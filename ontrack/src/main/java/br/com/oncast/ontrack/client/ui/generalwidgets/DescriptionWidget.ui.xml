<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:misc="urn:import:br.com.oncast.ontrack.client.ui.generalwidgets">

	<ui:with type="br.com.oncast.ontrack.client.ui.generalwidgets.DescriptionWidgetMessages" field="messages" />
	<ui:style>
		
		.rootPanel {
			position: absolute;
			top: 0px;
			left: 0px;
			right: 0px;
			bottom: 0px;
	
			border: 1px solid #d3d3d3;
			background-color: white;
			padding: 5px;
			overflow: auto;
			overflow-x: hidden; 
		}
		
		.subjectTitle {
			text-transform: uppercase;
			padding: 8px;
			border: 1px solid #C2C2C2;
			background: lightGrey;
			-webkit-box-shadow: inset 0 1px 0 0 #E9E9E9, 0 2px 6px #E1E1E1;
			-moz-box-shadow: inset 0 1px 0 0 #e9e9e9, 0 2px 6px #e1e1e1;
			box-shadow: inset 0 1px 0 0 #E9E9E9, 0 2px 6px #E1E1E1;
			color: #777;
			font-family: "ProximaNovaRegular";
			font-size: 12pt;
			text-shadow: 1px 1px 0 #EDEDED;
			margin-bottom: 5px;
		}
		
		.description {
		}
		
	</ui:style>

	<g:SimplePanel>
		<g:HTMLPanel styleName="{style.rootPanel}">
			<g:Label ui:field="label" styleName="{style.subjectTitle}" />
			<misc:DescriptionRichTextLabel ui:field="descriptionLabel" styleName="{style.description}" />
		</g:HTMLPanel>
	</g:SimplePanel>
</ui:UiBinder> 