<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <!-- Filters -->
    <filter>
        <filter-name>requestFilter</filter-name>
        <filter-class>br.com.oncast.ontrack.server.services.httpSessionProvider.RequestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>requestFilter</filter-name>
        <url-pattern>/application/*</url-pattern>
    </filter-mapping>
    
	<!-- Servlet definitions and mappings -->
	<servlet>
		<servlet-name>requestDispatchService</servlet-name>
		<servlet-class>br.com.oncast.ontrack.server.services.requestDispatch.CommunicationRpcServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>requestDispatchService</servlet-name>
		<url-pattern>/application/requestDispatchService</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>MindMapExporterServlet</servlet-name>
		<servlet-class>br.com.oncast.ontrack.server.services.exportImport.MindMapExporterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MindMapExporterServlet</servlet-name>
		<url-pattern>/application/servlet/exporttomindmap</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>Application.html</welcome-file>
	</welcome-file-list>

</web-app>
